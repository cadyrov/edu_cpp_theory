#include <iostream>
int main() {
    std::pair<std::string, int> person2{"Alexey"s, 20};
    std::cout << person2.first << std::endl;
    std::cout << person2.second << std::endl;
}
–ö–æ—Ä–æ—á–µ, –Ω–µ –ø—Ä–∞–≤–¥–∞ –ª–∏?
–û—Å–Ω–æ–≤–Ω–æ–µ –æ—Ç–ª–∏—á–∏–µ –æ—Ç —Å—Ç—Ä—É–∫—Ç—É—Ä—ã –≤ —Ç–æ–º, —á—Ç–æ –ø–æ–ª—è pair –≤—Å–µ–≥–¥–∞ –Ω–∞–∑—ã–≤–∞—é—Ç—Å—è first (–∞–Ω–≥–ª. ¬´–ø–µ—Ä–≤—ã–π¬ª) –∏ second (–∞–Ω–≥–ª. ¬´–≤—Ç–æ—Ä–æ–π¬ª), –∞ —É —Å—Ç—Ä—É–∫—Ç—É—Ä—ã –ø–æ–ª—è–º –º–æ–∂–Ω–æ –¥–∞—Ç—å –ª—é–±—ã–µ –∏–º–µ–Ω–∞.
–ö–æ–Ω—Ç–µ–π–Ω–µ—Ä pair ‚Äî —ç—Ç–æ –ø—Ä–æ—Å—Ç–æ–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä, –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω—ã–π –≤ –∑–∞–≥–æ–ª–æ–≤–∫–µ <utility> –∏ —Å–æ—Å—Ç–æ—è—â–∏–π –∏–∑ –¥–≤—É—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤: –ø—Ä–∏–º–∏—Ç–∏–≤–Ω—ã—Ö –∑–Ω–∞—á–µ–Ω–∏–π –∏–ª–∏ –æ–±—ä–µ–∫—Ç–æ–≤.
–û–¥–Ω–∞–∫–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å pair –º–æ–∂–Ω–æ –Ω–µ —Ç–æ–ª—å–∫–æ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –ø–∞—Ä—ã –∑–Ω–∞—á–µ–Ω–∏–π. –û–¥–∏–Ω –∏–∑ –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã—Ö —Å—Ü–µ–Ω–∞—Ä–∏–µ–≤ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è ‚Äî –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å –∏–∑ —Ñ—É–Ω–∫—Ü–∏–∏ —Å—Ä–∞–∑—É –¥–≤–∞ –∑–Ω–∞—á–µ–Ω–∏—è. –ü–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –Ω–∞ –ø—Ä–∏–º–µ—Ä:
#include <iostream>
#include <utility>
using namespace std::literals;
// –§—É–Ω–∫—Ü–∏—è –Ω–∞—Ö–æ–¥–∏—Ç –ø–µ—Ä–≤—É—é –≥–ª–∞—Å–Ω—É—é –±—É–∫–≤—É.
// –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç –±—É–∫–≤—É –∏ –µ—ë –ø–æ–∑–∏—Ü–∏—é –≤ —Å—Ç—Ä–æ–∫–µ.
std::pair<char, size_t> FindVowel(std::string str) {
    size_t pos = str.find_first_of("aeoiuy"s);
    if (pos == str.npos) {
        // –ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞—à–ª–∏: –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –ø–∞—Ä—É —Å 
        // –Ω—É–ª–µ–≤—ã–º —Å–∏–º–≤–æ–ª–æ–º.
        return {'\0', pos};
    }
    
    // –ù–∞—à–ª–∏ –≥–ª–∞—Å–Ω—É—é: –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —Å–∞–º—É –≥–ª–∞—Å–Ω—É—é –∏ –µ—ë –ø–æ–∑–∏—Ü–∏—é
    // –≤ –≤–∏–¥–µ –ø–∞—Ä—ã.
    return {str[pos], pos};
}

int main() {
    auto [first, second] = FindVowel("Here the first vowel is 'e'!"s);

    // –í—ã–≤–µ–¥–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –ø–∞—Ä—ã.
    std::cout << first << " "s
         << second << std::endl;
}
–ö–æ–¥, –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–Ω—ã–π –≤—ã—à–µ, –º–æ–∂–Ω–æ —É–ø—Ä–æ—Å—Ç–∏—Ç—å –ø—Ä–∏ –ø–æ–º–æ—â–∏ –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–≥–æ –≤—ã–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–æ–≤. –ü—Ä–∏ —ç—Ç–æ–º –¥–∞–∂–µ –Ω–µ –Ω—É–∂–Ω–æ —É–∫–∞–∑—ã–≤–∞—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä—ã —ç—Ç–æ–≥–æ —Ç–µ–º–ø–ª–µ–π—Ç–∞.
#include <algorithm>
#include <iostream>
#include <utility>

using namespace std::literals;

// –û–ø—Ä–µ–¥–µ–ª–∏–º –ø–∞—Ä—É.
auto GetCount(char lookup_ch, std::string str) {
    return std::pair{lookup_ch, std::count(str.begin(), str.end(), lookup_ch)};
}

int main() {
    auto [first, second] = GetCount('c', "Here exactly 3 chars 'c'!"s);

    // –í—ã–≤–µ–¥–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –ø–∞—Ä—ã.
    std::cout << first << " "s
         << second << std::endl;
}
–ü—Ä–∏ –ø–æ–º–æ—â–∏ –≤–ª–æ–∂–µ–Ω–Ω–æ—Å—Ç–∏ –º–æ–∂–Ω–æ –ø–µ—Ä–µ–¥–∞—Ç—å –∏–∑ —Ñ—É–Ω–∫—Ü–∏–∏ –∏ —Ç—Ä–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞. –ù–æ —Ä–∞–∑–≤–µ—Ä–Ω—É—Ç—å –∏—Ö –≤ –æ—Ç–¥–µ–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –±—É–¥–µ—Ç —É–∂–µ –Ω–µ —Ç–∞–∫ –ø—Ä–æ—Å—Ç–æ.
–î–ª—è –ø–µ—Ä–µ–¥–∞—á–∏ –±–æ–ª–µ–µ –¥–≤—É—Ö –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤ –∏–∑ —Ñ—É–Ω–∫—Ü–∏–∏ –ª—É—á—à–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å std::tuple<‚Ä¶>. –û –Ω—ë–º –≤—ã —É–∑–Ω–∞–µ—Ç–µ –≤ —Å–ª–µ–¥—É—é—â–µ–π —Ç–µ–º–µ.
#include <iostream>
#include <utility>

using namespace std::literals;

std::pair<int, std::pair<char, int>> ReadBinOp(std::istream& stream) {
    int left_op;
    char op;
    int right_op;
    stream >> left_op;
    stream >> op;
    stream >> right_op;
    
    // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –ø–∞—Ä—É –∏–∑ —á–∏—Å–ª–∞ –∏ –ø–∞—Ä—ã.
    return std::pair{left_op, std::pair{op, right_op}};
}

int main() {
    auto [first, secondPair] = ReadBinOp(std::cin);
    auto [second, third] = secondPair;

    // –í—ã–≤–µ–¥–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –ø–∞—Ä—ã.
    std::cout << "first: "s << first << " "s;
    std::cout << "op: "s << second << " "s;
    std::cout << "second: "s << third << std::endl;
}
using IntPair = std::pair<int, int>;

// –°–∫–ª–∞–¥—ã–≤–∞–µ—Ç –ø–æ–∫–æ–º–ø–æ–Ω–µ–Ω—Ç–Ω–æ –¥–≤–µ –ø–∞—Ä—ã.
IntPair Add(const IntPair& vec1, const IntPair& vec2) {
    return IntPair{vec1.first + vec2.first, vec1.second + vec2.second};
}

// –í—ã—á–∏—Ç–∞–µ—Ç –ø–æ–∫–æ–º–ø–æ–Ω–µ–Ω—Ç–Ω–æ –¥–≤–µ –ø–∞—Ä—ã.
IntPair Sub(const IntPair& vec1, const IntPair& vec2) {
    return IntPair{vec1.first - vec2.first, vec1.second - vec2.second};
}
–õ–µ–∫—Å–∏–∫–æ–≥—Ä–∞—Ñ–∏—á–µ—Å–∫–æ–µ —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ –∏ –ø–∞—Ä—ã
–î–ª—è –ø–∞—Ä –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è. –ù–∞–ø—Ä–∏–º–µ—Ä, pair("ann"s, 15) < pair("bob"s, 42). –°—Ä–∞–≤–Ω–µ–Ω–∏–µ –æ—Ä–∏–µ–Ω—Ç–∏—Ä—É–µ—Ç—Å—è –Ω–∞ –ø–µ—Ä–≤—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã –ø–∞—Ä—ã. –¢–∞–∫, –Ω–∞–ø—Ä–∏–º–µ—Ä, pair("ann"s, 100000) < pair("bob"s, 1), –Ω–µ—Å–º–æ—Ç—Ä—è –Ω–∞ —Ç–æ —á—Ç–æ 100000 > 1, –∞ pair("bob"s, 1) > pair("ann"s, 100000). –í—Ç–æ—Ä—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã –ø—Ä–∏–Ω–∏–º–∞—é—Ç—Å—è –≤–æ –≤–Ω–∏–º–∞–Ω–∏–µ, —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –ø–µ—Ä–≤—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã —Ä–∞–≤–Ω—ã: pair("ann"s, 100000) > pair("ann"s, 1), pair("ann"s, 15) < pair("ann"s, 10000).


–ü–æ—Å–∫–æ–ª—å–∫—É –¥–ª—è –ø–∞—Ä –µ—Å—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è, –µ—Å—Ç—å —Å–º—ã—Å–ª –≥–æ–≤–æ—Ä–∏—Ç—å –æ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–µ –≤–µ–∫—Ç–æ—Ä–∞ –ø–∞—Ä. –ù–∞–ø—Ä–∏–º–µ—Ä, —Ç–∞–∫ –º–æ–∂–Ω–æ –ø—Ä–æ–≤–µ—Ä–∏—Ç—å –æ—Ç—Å–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω –ª–∏ –≤–µ–∫—Ç–æ—Ä:
#include <iostream>
#include <utility>
#include <vector>

// –§—É–Ω–∫—Ü–∏—è –ø—Ä–∏–Ω–∏–º–∞–µ—Ç –≤–µ–∫—Ç–æ—Ä –ø–∞—Ä –ø–æ –∫–æ–Ω—Å—Ç–∞–Ω—Ç–Ω–æ–π —Å—Å—ã–ª–∫–µ.
bool IsSorted(const std::vector<std::pair<int,int>>& pairs) {
    for (auto i{1}; i < pairs.size(); i++) {
        if (pairs[i - 1] > pairs[i]) {
            return false;
        }
    }
    return true;
}
–ü–∞—Ä—ã –º–æ–≥—É—Ç —Å–æ–¥–µ—Ä–∂–∞—Ç—å –ª—é–±—ã–µ —Ç–∏–ø—ã ‚Äî –Ω–µ —Ç–æ–ª—å–∫–æ –ø—Ä–∏–º–∏—Ç–∏–≤–Ω—ã–µ. –í –ø—Ä–µ–¥—ã–¥—É—â–µ–º –ø—Ä–∏–º–µ—Ä–µ –±—ã–ª –≤–µ–∫—Ç–æ—Ä –ø–∞—Ä, –Ω–æ –ø—Ä–∏–º–µ–Ω—è—é—Ç—Å—è —Ç–∞–∫–∂–µ –ø–∞—Ä—ã –≤–µ–∫—Ç–æ—Ä–æ–≤:
// –§—É–Ω–∫—Ü–∏—è —Ä–∞–∑–¥–µ–ª–∏—Ç —á–∏—Å–ª–∞ –Ω–∞ —á—ë—Ç–Ω—ã–µ –∏ –Ω–µ—á—ë—Ç–Ω—ã–µ –∏ –≤–µ—Ä–Ω—ë—Ç –¥–≤–∞ –≤–µ–∫—Ç–æ—Ä–∞ 
// –≤ –≤–∏–¥–µ –ø–∞—Ä—ã.
pair<vector<int>, vector<int>> SplitIntoEvenAndOdd(vector<int> numbers) {
    vector<int> even, odd;
    for (int i : numbers) {
        if (i % 2 == 0) {
            even.push_back(i);
        } else {
            odd.push_back(i);
        }
    }
    return {even, odd};
}
–ó–∞–∫–ª—é—á–µ–Ω–∏–µ
–û–ø–µ—Ä–∞—Ü–∏–∏ —Å–∏–ª—å–Ω–æ —É–ø—Ä–æ—â–∞—é—Ç –≤–Ω–µ—à–Ω–∏–π –≤–∏–¥ –Ω–∞—à–µ–≥–æ –∫–æ–¥–∞ –∏ –ø–æ–∑–≤–æ–ª—è—é—Ç –ø–∏—Å–∞—Ç—å –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã–µ –≤—ã—Ä–∞–∂–µ–Ω–∏—è –±–µ–∑ –ø–æ—Ç–µ—Ä–∏ —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏. –ù–æ –µ—Å–ª–∏ –ø–æ–º–Ω–∏—Ç—å, —á—Ç–æ —ç—Ç–æ —Ñ—É–Ω–∫—Ü–∏–∏, –∏—Ö –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –Ω–∞ –±–æ–ª–µ–µ –ø—Ä–æ–¥–≤–∏–Ω—É—Ç–æ–º —É—Ä–æ–≤–Ω–µ. –í —Å–ª–µ–¥—É—é—â–∏—Ö —É—Ä–æ–∫–∞—Ö —ç—Ç–æ–π —Ç–µ–º—ã –≤—ã —Ç–∞–∫–∂–µ —É–∑–Ω–∞–µ—Ç–µ, –∫–∞–∫ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏, –¥–æ–±–∞–≤–ª—è—è –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å –¥–µ–ª–∞—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–º–∏ –∫–ª–∞—Å—Å–∞–º–∏.
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–ø–µ—Ä–∞—Ü–∏–π
–í –ø—Ä–µ–¥—ã–¥—É—â–µ–º —É—Ä–æ–∫–µ –≤—ã –∏–∑—É—á–∞–ª–∏ —Ñ—É–Ω–∫—Ü–∏–∏, –≤—ã–ø–æ–ª–Ω—è—é—â–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –Ω–∞–¥ –≤–∞—à–∏–º–∏ —Ç–∏–ø–∞–º–∏ –¥–∞–Ω–Ω—ã—Ö. –≠—Ç–∏ —Ñ—É–Ω–∫—Ü–∏–∏ –º–æ–∂–Ω–æ –∫–æ–º–±–∏–Ω–∏—Ä–æ–≤–∞—Ç—å, —Å–æ–∑–¥–∞–≤–∞—è –≤—ã—Ä–∞–∂–µ–Ω–∏—è –≤–∏–¥–∞: Set(x, Add(a, Mul(b, Sub(c, 1)))).
–ï—Å–ª–∏ –≤—ã —Ä–∞–±–æ—Ç–∞–µ—Ç–µ —Å —á–∏—Å–ª–∞–º–∏, –∫–æ—Ç–æ—Ä—ã–µ —è–≤–ª—è—é—Ç—Å—è –±–∞–∑–æ–≤—ã–º–∏ —Ç–∏–ø–∞–º–∏ –¥–∞–Ω–Ω—ã—Ö –≤ —è–∑—ã–∫–µ C++, —Ç–æ –¥–ª—è —É–ø—Ä–æ—â–µ–Ω–∏—è —ç—Ç–æ–π –∑–∞–ø–∏—Å–∏ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ –∑–Ω–∞–∫–∏. –ù–∞–ø—Ä–∏–º–µ—Ä, x = a + b * (c - 1). –¢–∞–∫–∏–µ –≤—ã—Ä–∞–∂–µ–Ω–∏—è –≥–æ—Ä–∞–∑–¥–æ –ø—Ä–æ—â–µ —á–∏—Ç–∞—Ç—å!
–í –°++ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ç–∞–∫—É—é –∂–µ –∑–∞–ø–∏—Å—å –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏—Ö –∫–ª–∞—Å—Å–æ–≤. –î–ª—è —ç—Ç–æ–≥–æ –Ω—É–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ +, *, -. –î—Ä—É–≥–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏, –Ω–∞–ø—Ä–∏–º–µ—Ä =, —Ç–æ–∂–µ –º–æ–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å, –Ω–æ —ç—Ç–æ —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø–æ–∑–¥–Ω–µ–µ.
struct Vector2I {
    int x;
    int y;

    // –ü–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ–º –æ–ø–µ—Ä–∞—Ü–∏–∏ +, * –∏ -.
    Vector2I operator+(const Vector2I &other) const {
        return {x + other.x, y + other.y};
    }

    Vector2I operator*(const Vector2I &other) const {
        return {x * other.x, y * other.y};
    }

    Vector2I operator-(const int value) const { 
        return {x - value, y - value};
    }
};
int main() {
    using namespace std;
    Vector2I a{1, 4};
    Vector2I b{2, 2};
    Vector2I c{3, 6};
    // –ò—Å–ø–æ–ª—å–∑—É–µ–º –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏.
    auto x = a + b * (c - 1);
}
–¢–∞–∫, –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–∂–Ω–æ –ø—Ä–∏–º–µ–Ω—è—Ç—å –∫ –æ–±—ä–µ–∫—Ç–∞–º –≤–∞—à–∏—Ö –∫–ª–∞—Å—Å–æ–≤. –ü—Ä–∏ —ç—Ç–æ–º —Å–º—ã—Å–ª –≤—ã—Ä–∞–∂–µ–Ω–∏—è –æ—Å—Ç–∞—ë—Ç—Å—è —Ç–µ–º –∂–µ –∏ –µ–≥–æ –ø–æ–≤–µ–¥–µ–Ω–∏–µ –±—É–¥–µ—Ç –ø–æ—Ö–æ–∂–µ –Ω–∞ –≤—ã–∑–æ–≤ –º–µ—Ç–æ–¥–∞ –∫–ª–∞—Å—Å–∞.
–ï—Å–ª–∏ –≤—ã –ø–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –Ω–∞ –ø—Ä–æ–≥—Ä–∞–º–º—É, —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω—É—é –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä–æ–º, —Ç–æ —É–≤–∏–¥–∏—Ç–µ: –≤–º–µ—Å—Ç–æ –∑–Ω–∞–∫–∞ - –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –≤—ã–∑–æ–≤ c.operator-(const int value).



–ò–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏, –∫–æ—Ç–æ—Ä—ã–µ –≤—Å—Ç–∞–≤–∏–ª –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –≤–º–µ—Å—Ç–æ –æ–ø–µ—Ä–∞—Ü–∏–π. –°–∫—Ä–∏–Ω—à–æ—Ç —Å–µ—Ä–≤–∏—Å–∞ Compiler Explorer
–≠—Ç–æ—Ç —Å–ø–æ—Å–æ–± –Ω–∞–∑—ã–≤–∞–µ—Ç—Å—è –ø–µ—Ä–µ–≥—Ä—É–∑–∫–æ–π –æ–ø–µ—Ä–∞—Ç–æ—Ä–æ–≤.
–¢–∞–∫–∏–º –æ–±—Ä–∞–∑–æ–º, –æ–ø–µ—Ä–∞—Ü–∏—è ‚Äî –ø—Ä–æ—Å—Ç–æ —Å–∏–Ω—Ç–∞–∫—Å–∏—á–µ—Å–∫–∏–π —Å–∞—Ö–∞—Ä –¥–ª—è –≤—ã–∑–æ–≤–∞ —Ñ—É–Ω–∫—Ü–∏–∏. –§–∞–∫—Ç–∏—á–µ—Å–∫–∏, —ç—Ç–æ –º–µ—Ç–æ–¥, –Ω–∞–∑–≤–∞–Ω–∏–µ –∫–æ—Ç–æ—Ä–æ–≥–æ —Å–æ—Å—Ç–æ–∏—Ç –∏–∑ —Å–ª–æ–≤–∞ operator –∏ —Å–∏–º–≤–æ–ª–∞ –æ–ø–µ—Ä–∞—Ü–∏–∏.
–†–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–∏–º–µ—Ä —Å –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω–æ–π –æ–ø–µ—Ä–∞—Ü–∏–µ–π +. –ö–æ–≥–¥–∞ –≤—ã –ø–∏—à–µ—Ç–µ x + y, –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –≤—ã–∑–æ–≤ x.operator+(y), –µ—Å–ª–∏ –≤ –∫–ª–∞—Å—Å–µ, –∫ –∫–æ—Ç–æ—Ä–æ–º—É –æ—Ç–Ω–æ—Å–∏—Ç—Å—è x, –µ—Å—Ç—å –º–µ—Ç–æ–¥ operator+. –ü—Ä–∏ —ç—Ç–æ–º x –∏ y –º–æ–≥—É—Ç –∏–º–µ—Ç—å –¥–∞–∂–µ —Ä–∞–∑–Ω—ã–µ —Ç–∏–ø—ã. –ü–µ—Ä–≤—ã–º –æ–ø–µ—Ä–∞–Ω–¥–æ–º —Ç–∞–∫–æ–π –æ–ø–µ—Ä–∞—Ü–∏–∏ –≤—Å–µ–≥–¥–∞ —è–≤–ª—è–µ—Ç—Å—è –æ–±—ä–µ–∫—Ç –∫–ª–∞—Å—Å–∞, –∞ –≤—Ç–æ—Ä–æ–π –æ–ø–µ—Ä–∞–Ω–¥ ‚Äî –∞—Ä–≥—É–º–µ–Ω—Ç, –ø—Ä–∏–Ω–∏–º–∞–µ–º—ã–π –º–µ—Ç–æ–¥–æ–º.
–í—Å–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–≥—É—Ç –±—ã—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω—ã, –∑–∞ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ–º —á–µ—Ç—ã—Ä—ë—Ö:
–¥–æ—Å—Ç—É–ø–∞ –∫ —ç–ª–µ–º–µ–Ω—Ç—É –æ–±–ª–∞—Å—Ç–∏ –≤–∏–¥–∏–º–æ—Å—Ç–∏ (::),
–¥–æ—Å—Ç—É–ø–∞ –∫ –ø–æ–ª—é –∫–ª–∞—Å—Å–∞ (.),
—Ç–µ—Ä–Ω–∞—Ä–Ω–æ–π (?:),
–¥–æ—Å—Ç—É–ø–∞ –∫ –ø–æ–ª—é –∫–ª–∞—Å—Å–∞ —á–µ—Ä–µ–∑ —É–∫–∞–∑–∞—Ç–µ–ª—å (.*).
–ù–µ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã ,, &&, ||. –û–Ω–∏ —Ä–∞–±–æ—Ç–∞—é—Ç –ø–æ –æ—Å–æ–±—ã–º –ø—Ä–∞–≤–∏–ª–∞–º, –∏ –∏—Ö –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –º–æ–∂–µ—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ –ø—Ä–æ–±–ª–µ–º–∞–º.
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–ø–µ—Ä–∞—Ü–∏–∏ —á–µ—Ä–µ–∑ —Å–≤–æ–±–æ–¥–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º –º–µ—Ç–æ–¥–∞ –∫–ª–∞—Å—Å–∞ —Ç—Ä–µ–±—É–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è —ç–∫–∑–µ–º–ø–ª—è—Ä–∞ –∫–ª–∞—Å—Å–∞ –≤ –∫–∞—á–µ—Å—Ç–≤–µ –ø–µ—Ä–≤–æ–≥–æ –∞—Ä–≥—É–º–µ–Ω—Ç–∞:
// –≠–∫–∑–µ–º–ø–ª—è—Ä –∫–ª–∞—Å—Å–∞.
Vector2I c{3, 6};
// –ó–∞–ø–∏—Å—å —á–µ—Ä–µ–∑ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏.
—Å - 1;
// –ó–∞–ø–∏—Å—å —á–µ—Ä–µ–∑ —è–≤–Ω—ã–π –≤—ã–∑–æ–≤ –º–µ—Ç–æ–¥–∞.
c.operator-(1);
–ò–Ω–æ–≥–¥–∞ –º—ã —Ö–æ—Ç–∏–º –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –æ–ø–µ—Ä–∞—Ç–æ—Ä –¥–ª—è –¥—Ä—É–≥–æ–≥–æ —Ç–∏–ø–∞ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º –Ω–∞—à–µ–≥–æ –∫–ª–∞—Å—Å–∞ –≤ –∫–∞—á–µ—Å—Ç–≤–µ –≤—Ç–æ—Ä–æ–≥–æ –æ–ø–µ—Ä–∞–Ω–¥–∞:
// –≠–∫–∑–µ–º–ø–ª—è—Ä –∫–ª–∞—Å—Å–∞.
Vector2I c{3, 6};
// –ó–∞–ø–∏—Å—å —á–µ—Ä–µ–∑ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –æ–ø–µ—Ä–∞—Ç–æ—Ä–∞.
1 - —Å;
// –ó–∞–ø–∏—Å—å —á–µ—Ä–µ–∑ —è–≤–Ω—ã–π –≤—ã–∑–æ–≤ —Ñ—É–Ω–∫—Ü–∏–∏.
operator-(1, —Å);
–¢–∞–∫–æ–π –ø–æ–¥—Ö–æ–¥ –ø—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –≤—ã–∑–æ–≤–∞ –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω–æ–π –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å –ø–æ–º–æ—â—å—é —Å–≤–æ–±–æ–¥–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–∏.
–°–≤–æ–±–æ–¥–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è ‚Äî —ç—Ç–æ —Ñ—É–Ω–∫—Ü–∏—è, –Ω–∞—Ö–æ–¥—è—â–∞—è—Å—è –≤–Ω–µ –∫–∞–∫–æ–≥–æ-–ª–∏–±–æ –∫–ª–∞—Å—Å–∞.
–°–≤–æ–±–æ–¥–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ —É–¥–æ–±–Ω–µ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –¥–ª—è –±–∏–Ω–∞—Ä–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π, –ø–æ—Å–∫–æ–ª—å–∫—É –æ–Ω–∏ –º–æ–≥—É—Ç –±—ã—Ç—å —Å–∏–º–º–µ—Ç—Ä–∏—á–Ω—ã–º–∏. –≠—Ç–æ –∑–Ω–∞—á–∏—Ç, —á—Ç–æ –µ—Å–ª–∏ –æ–ø–µ—Ä–∞—Ü–∏—è x @ y —Ä–∞–±–æ—Ç–∞–µ—Ç (–∑–¥–µ—Å—å @ –æ–±–æ–∑–Ω–∞—á–∞–µ—Ç –ª—é–±—É—é –æ–ø–µ—Ä–∞—Ü–∏—é), —Ç–æ –æ–ø–µ—Ä–∞—Ü–∏—è y @ x —Ç–∞–∫–∂–µ –¥–æ–ª–∂–Ω–∞ —Ä–∞–±–æ—Ç–∞—Ç—å –¥–ª—è –≤—Å–µ—Ö —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–∏—Ö —Ç–∏–ø–æ–≤.
#include <iostream>
using namespace std::literals;

using Vector2I = std::pair<int, int>;

std::string operator+(const std::string &str, const Vector2I &vec) {
    return {str + "{"s + std::to_string(vec.first) + ", "s +
            std::to_string(vec.second) + "}"s};
}

std::string operator+(const Vector2I &vec, const std::string &str) {
    return {"{"s + std::to_string(vec.first) + ", "s +
            std::to_string(vec.second) + "}"s + str};
}

int main() {
    using namespace std;

    string a{"String value of Vector2I: "s};
    auto x_left = a + Vector2I{1, 1};
    cout << x_left << endl;

    string b{" - String value of Vector2I"s};
    auto x_right = Vector2I{1, 1} + b;
    cout << x_right << endl;
}
–≠—Ç–æ—Ç –ø—Ä–∏–º–µ—Ä —Ç–∞–∫–∂–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç, —á—Ç–æ —Å–≤–æ–±–æ–¥–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –ø–æ–∑–≤–æ–ª—è—é—Ç —É–ª—É—á—à–∏—Ç—å –∫–ª–∞—Å—Å, –¥–æ–±–∞–≤–∏–≤ –±–∏–Ω–∞—Ä–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏, –Ω–µ –≤–Ω–æ—Å—è –Ω–æ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏-—á–ª–µ–Ω—ã.
–ï—Å–ª–∏ –±—ã –ø–æ—Ç—Ä–µ–±–æ–≤–∞–ª–æ—Å—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ñ—É–Ω–∫—Ü–∏—é-—á–ª–µ–Ω –¥–ª—è –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å–ª–æ–∂–µ–Ω–∏—è string –∏ Vector2I, –ø—Ä–∏—à–ª–æ—Å—å –±—ã –¥–æ–±–∞–≤–ª—è—Ç—å –º–µ—Ç–æ–¥ –≤ –∫–ª–∞—Å—Å std::string, —á—Ç–æ —Å–¥–µ–ª–∞—Ç—å –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ.
–î—Ä—É–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
–£ —Å–≤–æ–±–æ–¥–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–∏ –µ—Å—Ç—å –æ—Å–æ–±–µ–Ω–Ω–æ—Å—Ç—å ‚Äî –æ–Ω–∞ –Ω–µ –∏–º–µ–µ—Ç –¥–æ—Å—Ç—É–ø–∞ –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º —á–ª–µ–Ω–∞–º –∫–ª–∞—Å—Å–∞.
#include <iostream>
using namespace std::literals;
class Vector2I {
public:
    Vector2I(int x, int y) : x_{x}, y_{y} {};
private:
    int x_;
    int y_;
};

std::string operator+(const std::string &str, const Vector2I &value) {
    // –û—à–∏–±–∫–∞: –Ω–µ—Ç –¥–æ—Å—Ç—É–ø–∞ –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º —á–ª–µ–Ω–∞–º x_ –∏ y_ –∫–ª–∞—Å—Å–∞ Vector2I.
    return {str + "{"s + std::to_string(value.x_) + ", "s +
            std::to_string(value.y_) + "}"s};
}

std::string operator+(const Vector2I &value, const std::string &str) {
    // –û—à–∏–±–∫–∞: –Ω–µ—Ç –¥–æ—Å—Ç—É–ø–∞ –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º —á–ª–µ–Ω–∞–º x_ –∏ y_ –∫–ª–∞—Å—Å–∞ Vector2I.
    return {"{"s + std::to_string(value.x_) + ", "s + std::to_string(value.y_) +
            "}"s + str};
}

int main() {
    std::string a{"String value of Vector2I: "s};
    auto x_left = a + Vector2I{1, 1};
    std::cout << x_left << std::endl;
  
    std::string b{" - String value of Vector2I"s};
    auto x_right = Vector2I{1, 1} + b;
    std::cout << x_right << std::endl;
}
–≠—Ç–æ—Ç –∫–æ–¥ –Ω–µ —Å–∫–æ–º–ø–∏–ª–∏—Ä—É–µ—Ç—Å—è, –ø–æ—Å–∫–æ–ª—å–∫—É value.x_ –∏ value.y_ —è–≤–ª—è—é—Ç—Å—è –ø—Ä–∏–≤–∞—Ç–Ω—ã–º–∏ –ø–æ–ª—è–º–∏ –∫–ª–∞—Å—Å–∞ Vector2I.
–î–ª—è —Ä–µ—à–µ–Ω–∏—è —ç—Ç–æ–π –ø—Ä–æ–±–ª–µ–º—ã –≤ —è–∑—ã–∫–µ –ø—Ä–µ–¥—É—Å–º–æ—Ç—Ä–µ–Ω–æ –∫–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ friend. –û–Ω–æ –ø–æ–∑–≤–æ–ª—è–µ—Ç —Å–æ–æ–±—â–∏—Ç—å, —á—Ç–æ –Ω–µ–∫–æ—Ç–æ—Ä–∞—è —Ñ—É–Ω–∫—Ü–∏—è –∏–º–µ–µ—Ç –¥–æ—Å—Ç—É–ø –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º —á–ª–µ–Ω–∞–º –∫–ª–∞—Å—Å–∞. –§—É–Ω–∫—Ü–∏—è –¥–µ–∫–ª–∞—Ä–∏—Ä—É–µ—Ç—Å—è —á–µ—Ä–µ–∑ friend –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞, –Ω–æ —Å—á–∏—Ç–∞–µ—Ç—Å—è –Ω–µ —á–ª–µ–Ω–æ–º –∫–ª–∞—Å—Å–∞, –∞ —Å–≤–æ–±–æ–¥–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–µ–π. friend —á–∞—Å—Ç–æ –∏—Å–ø–æ–ª—å–∑—É—é—Ç –¥–ª—è –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –æ–ø–µ—Ä–∞—Ü–∏–π:
#include <iostream>
using namespace std::literals;
class Vector2I {
    int x_;
    int y_;

    // –•–æ—Ç—è –º—ã –æ–±—ä—è–≤–ª—è–µ–º operator –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞, –∏–∑-–∑–∞ 
    // friend —ç—Ç–æ —Å–≤–æ–±–æ–¥–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è, –∞ –Ω–µ –º–µ—Ç–æ–¥.
    friend std::string operator+(const std::string &str, const Vector2I &value);
    friend std::string operator+(const Vector2I &value, const std::string &str);

public:
    Vector2I(int x, int y) : x_{x}, y_{y} {};
};

std::string operator+(const std::string &str, const Vector2I &value) {
    // –≠—Ç–∞ —Ñ—É–Ω–∫—Ü–∏—è ‚Äî –¥—Ä—É–≥ –∫–ª–∞—Å—Å–∞ Vector2I, –æ–Ω–∞ 
    // –º–æ–∂–µ—Ç –æ–±—Ä–∞—â–∞—Ç—å—Å—è –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º —á–ª–µ–Ω–∞–º.
    return {str + "{"s + std::to_string(value.x_) + ", "s +
            std::to_string(value.y_) + "}"s};
}

std::string operator+(const Vector2I &value, const std::string &str) {
    // –≠—Ç–∞ —Ñ—É–Ω–∫—Ü–∏—è —Ç–∞–∫–∂–µ –¥—Ä—É–∂–∏—Ç —Å Vector2I.
    return {"{"s + std::to_string(value.x_) + ", "s + std::to_string(value.y_) +
            "}"s + str};
}

int main() {
    std::string a{"–°—Ç—Ä–æ–∫–æ–≤–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –≤–µ–∫—Ç–æ—Ä–∞: "s};
    auto x_left = a + Vector2I{1, 1};
    std::cout << x_left << std::endl;
  
    std::string b{" - —Å—Ç—Ä–æ–∫–æ–≤–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –≤–µ–∫—Ç–æ—Ä–∞."s};
    auto x_right = Vector2I{1, 1} + b;
    std::cout << x_right << std::endl;
}
–ß–µ—Ä–µ–∑ friend –º–æ–∂–Ω–æ –æ–±—ä—è–≤–ª—è—Ç—å –Ω–µ —Ç–æ–ª—å–∫–æ –æ–ø–µ—Ä–∞—Ü–∏–∏ –∏ —Ñ—É–Ω–∫—Ü–∏–∏, –Ω–æ –∏ –¥—Ä—É–≥–∏–µ –∫–ª–∞—Å—Å—ã ‚Äî –æ–Ω–∏ –±—É–¥—É—Ç –¥—Ä—É–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–º–∏ –∫–ª–∞—Å—Å–∞–º–∏, –∏–∑–Ω—É—Ç—Ä–∏ –∫–æ—Ç–æ—Ä—ã—Ö –º–æ–∂–Ω–æ –ø–æ–ª—É—á–∏—Ç—å –¥–æ—Å—Ç—É–ø –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º –¥–∞–Ω–Ω—ã–º –∏ –º–µ—Ç–æ–¥–∞–º –¥—Ä—É–≥–æ–≥–æ –∫–ª–∞—Å—Å–∞.
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–ø–µ—Ä–∞—Ü–∏–π –¥–ª—è –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–∏–π
–û–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–∂–Ω–æ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –∏ –¥–ª—è –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–∏–π. –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ –∏—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ —á–µ—Ä–µ–∑ —Å–≤–æ–±–æ–¥–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏, —Ç–∞–∫ –∫–∞–∫ —É –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–∏–π –ø—Ä–æ—Å—Ç–æ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ñ—É–Ω–∫—Ü–∏–π-—á–ª–µ–Ω–æ–≤.
–ù–∞–ø—Ä–∏–º–µ—Ä, –º–æ–∂–Ω–æ –ø–µ—Ä–µ–≥—Ä—É–∑–∏—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ | –∏ &. –≠—Ç–æ –ø–æ–∑–≤–æ–ª–∏—Ç —Å–æ–∑–¥–∞—Ç—å –±–∏—Ç–æ–≤—ã–µ –ø–æ–ª—è ‚Äî –Ω–∞–±–æ—Ä —Ñ–ª–∞–≥–æ–≤, –∫–æ—Ç–æ—Ä—ã–µ –≤–∫–ª—é—á–∞—é—Ç—Å—è –∏ –≤—ã–∫–ª—é—á–∞—é—Ç—Å—è –Ω–µ–∑–∞–≤–∏—Å–∏–º–æ. –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ:
| –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è —É—Å—Ç–∞–Ω–æ–≤–∫–∏ —Ñ–ª–∞–≥–∞;
& –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –Ω–∞–ª–∏—á–∏—è —Ñ–ª–∞–≥–∞.
–ó–Ω–∞—á–µ–Ω–∏—è enum-—Ç–∏–ø–∞ –Ω—É–∂–Ω–æ –∑–∞–¥–∞—Ç—å —è–≤–Ω–æ –∫–∞–∫ —Å—Ç–µ–ø–µ–Ω–∏ –¥–≤–æ–π–∫–∏ (1, 2, 4, 8, ‚Ä¶).
enum class FontFlags {
    EMPTY =     0b00000000, // –û–±—ã—á–Ω—ã–π.
    BOLD =      0b00000010, // –ñ–∏—Ä–Ω—ã–π.
    ITALIC =    0b00000100, // –ö—É—Ä—Å–∏–≤–Ω—ã–π.
    NARROW =    0b00001000, // –ù–∞–∫–ª–æ–Ω–Ω—ã–π.
    SANS =      0b00010000, // –†—É–±–ª–µ–Ω—ã–π.
    MONOSPACE = 0b00100000  // –ú–æ–Ω–æ—à–∏—Ä–∏–Ω–Ω—ã–π.
};

FontFlags operator|(FontFlags l, FontFlags r) {
    // –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–ø–µ—Ä–∞—Ü–∏—é | –¥–ª—è —á–∏—Å–µ–ª int.
    return FontFlags{static_cast<int>(l) | static_cast<int>(r)};
}

FontFlags operator&(FontFlags l, FontFlags r) {
    // –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–ø–µ—Ä–∞—Ü–∏—é & –¥–ª—è —á–∏—Å–µ–ª int.
    return FontFlags{static_cast<int>(l) & static_cast<int>(r)};
}

int main() {
    // –ñ–∏—Ä–Ω—ã–π –º–æ–Ω–æ—à–∏—Ä–∏–Ω–Ω—ã–π —à—Ä–∏—Ñ—Ç.
    FontFlags my_font = FontFlags::BOLD | FontFlags::MONOSPACE;
  
    // ...
  
    if ((my_font & FontFlags::MONOSPACE) != FontFlags::EMPTY) {
        std::cout << "–ú–æ–Ω–æ—à–∏—Ä–∏–Ω–Ω—ã–π"s << std::endl;
    }
}
–í —ç—Ç–æ–º –ø—Ä–∏–º–µ—Ä–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª—è—é—Ç –≤—ã—Ä–∞–∑–∏—Ç–µ–ª—å–Ω–æ–µ —Å—Ä–µ–¥—Å—Ç–≤–æ –¥–ª—è –æ–ø–µ—Ä–∏—Ä–æ–≤–∞–Ω–∏—è –º–Ω–æ–∂–µ—Å—Ç–≤–æ–º —Ñ–ª–∞–≥–æ–≤. –û —Ç–æ–º, –∫–∞–∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø–æ–±–∏—Ç–æ–≤—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –∏ —Å–æ–∑–¥–∞–≤–∞—Ç—å —Ñ–ª–∞–≥–∏, –º—ã —Ä–∞—Å—Å–∫–∞–∂–µ–º –ø–æ–¥—Ä–æ–±–Ω–µ–µ –≤ –æ–¥–Ω–æ–º –∏–∑ —Å–ª–µ–¥—É—é—â–∏—Ö —É—Ä–æ–∫–æ–≤.
–û–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª—è—é—Ç —Å–æ–±–æ–π —É–ø—Ä–æ—â–µ–Ω–Ω—É—é –∑–∞–ø–∏—Å—å —Ñ—É–Ω–∫—Ü–∏–π, –ø—Ä–æ–∏–∑–≤–æ–¥—è—â–∏—Ö —Ä–∞–∑–ª–∏—á–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è –Ω–∞–¥ –æ–ø–µ—Ä–∞–Ω–¥–∞–º–∏, –±—É–¥—å —Ç–æ —Å–ª–æ–∂–µ–Ω–∏–µ, —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ –∏–ª–∏ –≤—ã–≤–æ–¥ –≤ –∫–æ–Ω—Å–æ–ª—å. –û–Ω–∏ –ø–æ–∑–≤–æ–ª—è—é—Ç —Å–¥–µ–ª–∞—Ç—å –∫–æ–¥ –±–æ–ª–µ–µ —á–∏—Ç–∞–µ–º—ã–º –∏ —É–ø—Ä–æ—Å—Ç–∏—Ç—å –µ–≥–æ –ø–æ–¥–¥–µ—Ä–∂–∫—É. –í C++ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –º–æ–≥—É—Ç —Ä–∞–±–æ—Ç–∞—Ç—å —Å –ø—Ä–æ—Å—Ç—ã–º–∏ —Ç–∏–ø–∞–º–∏, –Ω–∞–ø—Ä–∏–º–µ—Ä, —á–∏—Å–ª–∞–º–∏ –∏ —Å—Ç—Ä–æ–∫–∞–º–∏. –ü—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏ –º–æ–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –ø–æ–≤–µ–¥–µ–Ω–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–π –¥–ª—è —Å–ª–æ–∂–Ω—ã—Ö —Ç–∏–ø–æ–≤ –¥–∞–Ω–Ω—ã—Ö, —Ç–∞–∫–∏—Ö –∫–∞–∫ –∫–ª–∞—Å—Å—ã –∏ –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–∏—è.
–†–∞—Å—Å—Ç–∞–≤–ª—è–µ–º –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç—ã
–í –ø—Ä–æ—à–ª—ã—Ö —É—Ä–æ–∫–∞—Ö –≤—ã —É–∑–Ω–∞–ª–∏, –∫–∞–∫–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –±—ã–≤–∞—é—Ç –≤ C++ –∏ –∫–∞–∫ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –∏—Ö –¥–ª—è —Ä–∞–∑–ª–∏—á–Ω—ã—Ö —Ç–∏–ø–æ–≤ –¥–∞–Ω–Ω—ã—Ö: –ø–∞—Ä –∏–ª–∏ —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—ã—Ö –∫–ª–∞—Å—Å–æ–≤. –ù–∞ —ç—Ç–æ—Ç —Ä–∞–∑ –º—ã –ø–æ–≥–æ–≤–æ—Ä–∏–º –æ–± –æ—Å–æ–±–µ–Ω–Ω–æ—Å—Ç—è—Ö –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –æ–ø–µ—Ä–∞—Ü–∏–π –≤ –∫–æ–¥–µ.
–ü–µ—Ä–µ–¥ –≤–∞–º–∏ –ø—Ä–æ—Å—Ç–æ–µ –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–æ–µ –≤—ã—Ä–∞–∂–µ–Ω–∏–µ: a - b + c - d, –ø—Ä–∏ –≤—ã—á–∏—Å–ª–µ–Ω–∏–∏ –∫–æ—Ç–æ—Ä–æ–≥–æ –≤—Å–µ –¥–µ–π—Å—Ç–≤–∏—è –≤—ã–ø–æ–ª–Ω—è—é—Ç—Å—è —Å–ª–µ–≤–∞ –Ω–∞–ø—Ä–∞–≤–æ. –ù–æ –µ—Å–ª–∏ –∑–∞–º–µ–Ω–∏—Ç—å –æ–¥–Ω—É –∏–∑ –æ–ø–µ—Ä–∞—Ü–∏–π –Ω–∞ –¥—Ä—É–≥—É—é ‚Äî a - b * c - d, ‚Äî –ø–æ—Ä—è–¥–æ–∫ –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –∏–∑–º–µ–Ω–∏—Ç—Å—è. –°–Ω–∞—á–∞–ª–∞ –≤—ã–ø–æ–ª–Ω—è–µ—Ç—Å—è —É–º–Ω–æ–∂–µ–Ω–∏–µ, –∏ —Ç–æ–ª—å–∫–æ –ø–æ—Ç–æ–º –≤—ã—á–∏—Ç–∞–Ω–∏–µ.
–¢–∞–∫ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç, –ø–æ—Ç–æ–º—É —á—Ç–æ –æ–ø–µ—Ä–∞—Ü–∏–∏ –∏–º–µ—é—Ç —Ä–∞–∑–Ω—ã–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç (–∞–Ω–≥–ª. precedence). –≠—Ç–æ –ø–æ–Ω—è—Ç–∏–µ —É–∂–µ –∑–Ω–∞–∫–æ–º–æ –≤–∞–º –∏–∑ –ø–µ—Ä–≤—ã—Ö —É—Ä–æ–∫–æ–≤, –ø–æ—Å–≤—è—â—ë–Ω–Ω—ã—Ö –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–º –æ–ø–µ—Ä–∞—Ü–∏—è–º. –û–Ω–æ –æ–±–æ–∑–Ω–∞—á–∞–µ—Ç —Å–≤–æ–π—Å—Ç–≤–æ, —É–∫–∞–∑—ã–≤–∞—é—â–µ–µ, –∫–∞–∫–∞—è –∏–∑ –æ–ø–µ—Ä–∞—Ü–∏–π –¥–æ–ª–∂–Ω–∞ –≤—ã–ø–æ–ª–Ω—è—Ç—å—Å—è —Ä–∞–Ω—å—à–µ, –µ—Å–ª–∏ –æ–Ω–∏ –∏–¥—É—Ç –ø–æ–¥—Ä—è–¥ –∏ –Ω–µ—Ç —è–≤–Ω–æ–≥–æ —É–∫–∞–∑–∞–Ω–∏—è –ø–æ—Ä—è–¥–∫–∞ –≤ –≤–∏–¥–µ —Å–∫–æ–±–æ–∫.
–ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç ‚Äî –≤–∞–∂–Ω–æ–µ —Å–≤–æ–π—Å—Ç–≤–æ, –ø–æ—Å–∫–æ–ª—å–∫—É –æ—Ç –ø–æ—Ä—è–¥–∫–∞ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –æ–ø–µ—Ä–∞—Ü–∏–π –Ω–µ—Ä–µ–¥–∫–æ –∑–∞–≤–∏—Å–∏—Ç –∫–æ–Ω–µ—á–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç.
–ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç—ã –æ–ø–µ—Ä–∞—Ü–∏–π
–í C++ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –º–Ω–æ–∂–µ—Å—Ç–≤–æ —Ä–∞–∑–ª–∏—á–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π. –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç—ã –Ω–µ–∫–æ—Ç–æ—Ä—ã—Ö (–Ω–∞–ø—Ä–∏–º–µ—Ä, —Å–ª–æ–∂–µ–Ω–∏—è –∏ —É–º–Ω–æ–∂–µ–Ω–∏—è) —Å–ª–µ–¥—É—é—Ç –∏–∑ –ø—Ä–∞–≤–∏–ª –∞—Ä–∏—Ñ–º–µ—Ç–∏–∫–∏ –∏ –∏–Ω—Ç—É–∏—Ç–∏–≤–Ω–æ –ø–æ–Ω—è—Ç–Ω—ã. –ù–æ –≤ —è–∑—ã–∫–µ –µ—Å—Ç—å –∏ —Å–ø–µ—Ü–∏—Ñ–∏—á–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏, –¥–ª—è –∫–æ—Ç–æ—Ä—ã—Ö –ø–æ—Ä—è–¥–æ–∫ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –º–µ–Ω–µ–µ –æ—á–µ–≤–∏–¥–µ–Ω.
–ü–æ–ª–Ω—ã–π —Å–ø–∏—Å–æ–∫ –æ–ø–µ—Ä–∞—Ü–∏–π –∏ –∏—Ö –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–æ–≤ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω –≤ —Ç–∞–±–ª–∏—Ü–µ. –ù–∞–∏–≤—ã—Å—à–∏–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç –∏–º–µ–µ—Ç –æ–ø–µ—Ä–∞—Ü–∏—è ::, –∞ –Ω–∞–∏–º–µ–Ω—å—à–∏–π ‚Äî , (–∑–∞–ø—è—Ç–∞—è).
