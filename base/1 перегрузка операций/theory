std::istream& operator>>(std::istream& is, Date& date) {
    int y, m, d;
    is >> y >> m >> d;

    if (is.fail()) { // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ–ª–∞–≥ fail –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø–æ—Ç–æ–∫–∞.
        return is;   // –ï—Å–ª–∏ –æ—à–∏–±–∫–∞, –Ω–∏—á–µ–≥–æ –Ω–µ –¥–µ–ª–∞–µ–º.
    }
    date.y_ = y;
    date.m_ = m;
    date.d_ = d;
    return is;
}
–ó–¥–µ—Å—å –º—ã –∏—Å–ø–æ–ª—å–∑—É–µ–º –º–µ—Ç–æ–¥ fail, –∫–æ—Ç–æ—Ä—ã–π –ø–æ–∑–≤–æ–ª—è–µ—Ç –ø—Ä–æ–≤–µ—Ä–∏—Ç—å —É—Å–ø–µ—à–Ω–æ—Å—Ç—å –≤–≤–æ–¥–∞ —Ç–∞–∫ –∂–µ, –∫–∞–∫ if (!(std::cin)). –ï—Å–ª–∏ —á—Ç–æ-—Ç–æ –ø–æ—à–ª–æ –Ω–µ —Ç–∞–∫, —Ñ—É–Ω–∫—Ü–∏—è —Å—Ä–∞–∑—É –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –ø–æ—Ç–æ–∫. –û–Ω —É–∂–µ –∏–º–µ–µ—Ç —Ñ–ª–∞–≥ –æ—à–∏–±–∫–∏, –ø–æ—ç—Ç–æ–º—É —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞—Ç—å –µ–≥–æ –≤—Ä—É—á–Ω—É—é –Ω–µ –Ω—É–∂–Ω–æ.
–ü—Ä–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –≤–≤–æ–¥–∞ —Å—Ç–æ–∏—Ç –≤—Å–µ–≥–¥–∞ –¥–æ–±–∞–≤–ª—è—Ç—å –æ–±—Ä–∞–±–æ—Ç–∫—É –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã—Ö –æ—à–∏–±–æ–∫. –≠—Ç–æ —Å–¥–µ–ª–∞–µ—Ç –∫–æ–¥ –±–æ–ª–µ–µ –Ω–∞–¥—ë–∂–Ω—ã–º –∏ —É–ø—Ä–æ—Å—Ç–∏—Ç –µ–≥–æ –¥–∞–ª—å–Ω–µ–π—à–µ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ.
–í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã —Ä–∞–∑–æ–±—Ä–∞–ª–∏—Å—å, –∫–∞–∫ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ –≤–≤–æ–¥–∞ –∏ –≤—ã–≤–æ–¥–∞. –§—É–Ω–∫—Ü–∏–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –ø—Ä–∏–Ω–∏–º–∞—é—Ç –¥–≤–∞ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞: –æ–±—ä–µ–∫—Ç –ø–æ—Ç–æ–∫–∞ –∏ –∑–Ω–∞—á–µ–Ω–∏–µ, –∫–æ—Ç–æ—Ä–æ–µ —Å–ª–µ–¥—É–µ—Ç –∑–∞–ø–∏—Å–∞—Ç—å –∏–ª–∏ –ø—Ä–æ—á–µ—Å—Ç—å. –¢–∞–∫–∂–µ –æ–Ω–∏ –¥–æ–ª–∂–Ω—ã –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å —Å—Å—ã–ª–∫—É –Ω–∞ –ø–æ—Ç–æ–∫, —á—Ç–æ–±—ã —Å–¥–µ–ª–∞—Ç—å –≤–æ–∑–º–æ–∂–Ω—ã–º –∫–∞—Å–∫–∞–¥–∏—Ä–æ–≤–∞–Ω–∏–µ. –ü—Ä–∏ —Ä–µ–∞–ª–∏–∑–∞—Ü–∏–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏ –≤–≤–æ–¥–∞ –¥–ª—è –Ω–æ–≤—ã—Ö —Ç–∏–ø–æ–≤ –º—ã –±–µ—Ä—ë–º –Ω–∞ —Å–µ–±—è –æ—Ç–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ—Å—Ç—å –∑–∞ —Ä–µ–∑—É–ª—å—Ç–∞—Ç, –ø–æ—ç—Ç–æ–º—É –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –ø—Ä–µ–¥—É—Å–º–∞—Ç—Ä–∏–≤–∞—Ç—å –≤–æ–∑–Ω–∏–∫–Ω–æ–≤–µ–Ω–∏–µ –æ—à–∏–±–æ–∫ –∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ –∏—Ö –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å.
–°–ª–µ–¥—É—é—â–∏–π —É—Ä–æ–∫ –±—É–¥–µ—Ç –ø–æ—Å–≤—è—â—ë–Ω –ø–µ—Ä–µ–≥—Ä—É–∑–∫–µ —É–Ω–∞—Ä–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π. –í—ã —É–∑–Ω–∞–µ—Ç–µ, —á—Ç–æ —Ç–∞–∫–æ–µ —É–Ω–∞—Ä–Ω—ã–µ –ø–ª—é—Å –∏ –º–∏–Ω—É—Å –∏ –∫–∞–∫ —Ä–∞–±–æ—Ç–∞—Ç—å —Å –æ–ø–µ—Ä–∞—Ü–∏—è–º–∏ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞ –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–∞.
–° –æ–¥–Ω–æ–π —Å—Ç–æ—Ä–æ–Ω—ã, –ø—Ä–µ–∫—Ä–∞—Å–Ω–∞—è –æ–ø–µ—Ä–∞—Ü–∏—è
–í—ã —É–∂–µ –∑–Ω–∞–µ—Ç–µ, –∫–∞–∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏, —á—Ç–æ–±—ã —Å–∫–ª–∞–¥—ã–≤–∞—Ç—å, –≤—ã—á–∏—Ç–∞—Ç—å –∏ –ø–µ—Ä–µ–º–Ω–æ–∂–∞—Ç—å –æ–±—ä–µ–∫—Ç—ã —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—ã—Ö —Ç–∏–ø–æ–≤, –∞ —Ç–∞–∫–∂–µ –∫–∞–∫ –∏—Ö —Å—á–∏—Ç—ã–≤–∞—Ç—å –∏ –≤—ã–≤–æ–¥–∏—Ç—å –Ω–∞ —ç–∫—Ä–∞–Ω. –í —ç—Ç–æ–º —É—Ä–æ–∫–µ –º—ã –ø—Ä–æ–¥–æ–ª–∂–∏–º –∏–∑—É—á–µ–Ω–∏–µ —Ç–µ–º—ã: –≤—ã –ø–æ–∑–Ω–∞–∫–æ–º–∏—Ç–µ—Å—å —Å —É–Ω–∞—Ä–Ω—ã–º–∏ –æ–ø–µ—Ä–∞—Ü–∏—è–º–∏.
–ú—ã —É–∂–µ –≥–æ–≤–æ—Ä–∏–ª–∏, —á—Ç–æ –≤ C++ –≤—Å–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–∂–Ω–æ —Ä–∞–∑–¥–µ–ª–∏—Ç—å –Ω–∞ —Ç—Ä–∏ –≥—Ä—É–ø–ø—ã –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –æ–ø–µ—Ä–∞–Ω–¥–æ–≤: —É–Ω–∞—Ä–Ω—ã–µ, –±–∏–Ω–∞—Ä–Ω—ã–µ –∏ —Ç–µ—Ä–Ω–∞—Ä–Ω—ã–µ. –£–Ω–∞—Ä–Ω—ã–º–∏ –Ω–∞–∑—ã–≤–∞—é—Ç –æ–ø–µ—Ä–∞—Ü–∏–∏, –≤—ã–ø–æ–ª–Ω—è—é—â–∏–µ—Å—è –¥–ª—è –æ–¥–Ω–æ–≥–æ –∑–Ω–∞—á–µ–Ω–∏—è. –°—Ä–µ–¥–∏ –Ω–∏—Ö –µ—Å—Ç—å –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ (—É–Ω–∞—Ä–Ω—ã–µ + –∏ -, ++ –∏ --), –ª–æ–≥–∏—á–µ—Å–∫–∏–µ (~ –∏ !), —Ä–∞–∑–ª–∏—á–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –¥–ª—è –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–æ–≤, –∞ —Ç–∞–∫–∂–µ –æ—Å–æ–±–∞—è –≥—Ä—É–ø–ø–∞ –æ–ø–µ—Ä–∞—Ü–∏–π –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –ø–∞–º—è—Ç—å—é (* –∏ &). –ü–æ—Å–ª–µ–¥–Ω–∏–µ –º—ã –ø—Ä–æ–π–¥—ë–º –≤ —Å–∫–æ—Ä–æ–º –±—É–¥—É—â–µ–º, –∞ –ø–æ–∫–∞ —Å–æ—Å—Ä–µ–¥–æ—Ç–æ—á–∏–º—Å—è –Ω–∞ –ø–µ—Ä–≤–æ–π –≥—Ä—É–ø–ø–µ ‚Äî –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏—Ö –æ–ø–µ—Ä–∞—Ü–∏—è—Ö.
–£–Ω–∞—Ä–Ω—ã–π + –∏ —É–Ω–∞—Ä–Ω—ã–π -
–ó–Ω–∞–∫–æ–º—Å—Ç–≤–æ —Å —ç—Ç–∏–º–∏ –æ–ø–µ—Ä–∞—Ü–∏—è–º–∏ –ª—É—á—à–µ –Ω–∞—á–∞—Ç—å —Å –º–∏–Ω—É—Å–∞, –ø–æ—Å–∫–æ–ª—å–∫—É –æ–Ω –∏–Ω—Ç—É–∏—Ç–∏–≤–Ω–æ –ø–æ–Ω—è—Ç–Ω–µ–µ. –ö–∞–∫ –∏ –≤ –º–∞—Ç–µ–º–∞—Ç–∏–∫–µ, –º–∏–Ω—É—Å –ø–µ—Ä–µ–¥ –∑–Ω–∞—á–µ–Ω–∏–µ–º –º–µ–Ω—è–µ—Ç –µ–≥–æ –∑–Ω–∞–∫ –Ω–∞ –ø—Ä–æ—Ç–∏–≤–æ–ø–æ–ª–æ–∂–Ω—ã–π.
int a = -5;
int b = -a;

std::cout << a << std::endl;     // -5.
std::cout << b << std::endl;     // 5.
std::cout << -a << std::endl;    // 5.
std::cout << -(-a) << std::endl; // -5.
–í –æ—Ç–ª–∏—á–∏–µ –æ—Ç –º–∏–Ω—É—Å–∞, —É–Ω–∞—Ä–Ω—ã–π –ø–ª—é—Å –Ω–µ –º–µ–Ω—è–µ—Ç –∑–Ω–∞–∫ –æ–ø–µ—Ä–∞–Ω–¥–∞. –í—Å—ë, —á—Ç–æ –æ–Ω –¥–µ–ª–∞–µ—Ç, ‚Äî —ç—Ç–æ –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∫–æ–ø–∏—é –ø–µ—Ä–µ–¥–∞–Ω–Ω–æ–≥–æ –∑–Ω–∞—á–µ–Ω–∏—è.
int a = -5;
int b = +a; // –ü–ª—é—Å –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∫–æ–ø–∏—é –∑–Ω–∞—á–µ–Ω–∏—è.

std::cout << a << std::endl;     // -5.
std::cout << b << std::endl;     // -5.
std::cout << +a << std::endl;    // -5.
–£–Ω–∞—Ä–Ω—ã–π –ø–ª—é—Å –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –¥–ª—è –ø—Ä–∏–¥–∞–Ω–∏—è —è—Å–Ω–æ—Å—Ç–∏ –≤—ã—Ä–∞–∂–µ–Ω–∏—è–º.
–ö—Ä–æ–º–µ —ç—Ç–æ–≥–æ, –æ–±–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–≥—É—Ç –≤—ã–ø–æ–ª–Ω—è—Ç—å –≤–æ—Å—Ö–æ–¥—è—â–µ–µ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–µ —Ü–µ–ª–æ—á–∏—Å–ª–µ–Ω–Ω—ã—Ö —Ç–∏–ø–æ–≤ –¥–æ int. –≠—Ç–æ —Å–≤–æ–π—Å—Ç–≤–æ –º–æ–∂–Ω–æ –ø—Ä–∏–º–µ–Ω—è—Ç—å –¥–ª—è –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö —Ç–∏–ø–∞ char, —á—Ç–æ–±—ã –ø–æ–ª—É—á–∞—Ç—å –∏—Ö –∫–æ–¥—ã –≤ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–µ –∫–æ–¥–∏—Ä–æ–≤–∞–Ω–∏—è ASCII.
char a = '*';

std::cout << a << std::endl;  // *.
std::cout << +a << std::endl; // 42 ‚Äî –∫–æ–¥ —Å–∏–º–≤–æ–ª–∞ "*" –≤ ASCII.
std::cout << -a << std::endl; // -42.
–ö–∞–∫ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å —É–Ω–∞—Ä–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏
–í–∞–º —É–∂–µ –∏–∑–≤–µ—Å—Ç–Ω–æ, —á—Ç–æ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –æ–ø–µ—Ä–∞—Ü–∏–π –º–æ–∂–Ω–æ –æ–±—ä—è–≤–ª—è—Ç—å –¥–≤—É–º—è —Å–ø–æ—Å–æ–±–∞–º–∏: –≤ –≤–∏–¥–µ —á–ª–µ–Ω–æ–≤ –∫–ª–∞—Å—Å–∞ –∏–ª–∏ –≤ –≤–∏–¥–µ —Å–≤–æ–±–æ–¥–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π. –ö–∞–∫ –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å, –∫–∞–∫–æ–π –ø–æ–¥—Ö–æ–¥ –ª—É—á—à–µ? –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –ø—Ä–æ—Å—Ç—ã–º –ø—Ä–∞–≤–∏–ª–æ–º: –µ—Å–ª–∏ –æ–ø–µ—Ä–∞—Ü–∏—è –æ—Ç–Ω–æ—Å–∏—Ç—Å—è –∫ –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–º—É –æ–±—ä–µ–∫—Ç—É, –ª—É—á—à–µ —Å–æ–∑–¥–∞—Ç—å –µ—ë –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞. –ö—Ä–æ–º–µ —Ç–æ–≥–æ, —Ç–∞–∫–∏–µ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ —Å—Ä–∞–∑—É –∏–º–µ—é—Ç –¥–æ—Å—Ç—É–ø –∫ –ø—Ä–∏–≤–∞—Ç–Ω—ã–º –ø–æ–ª—è–º, –∏ –∏—Ö –Ω–µ –Ω—É–∂–Ω–æ –æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –∫–∞–∫ –¥—Ä—É–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏.
–ï—Å–ª–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Ä–µ–∞–ª–∏–∑–æ–≤–∞–Ω–∞ –∫–∞–∫ —Ñ—É–Ω–∫—Ü–∏—è-—á–ª–µ–Ω, –æ–Ω–∞ —Ä–∞–±–æ—Ç–∞–µ—Ç —Å —Å–∞–º–∏–º –∫–ª–∞—Å—Å–æ–º –∏ –Ω–µ –ø—Ä–∏–Ω–∏–º–∞–µ—Ç –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –∞—Ä–≥—É–º–µ–Ω—Ç—ã. –£–Ω–∞—Ä–Ω—ã–µ –ø–ª—é—Å –∏ –º–∏–Ω—É—Å –Ω–µ –º–µ–Ω—è—é—Ç –∏—Å—Ö–æ–¥–Ω—ã–π –æ–±—ä–µ–∫—Ç –∏ –ø–æ—ç—Ç–æ–º—É –æ–±—ä—è–≤–ª—è—é—Ç—Å—è –∫–æ–Ω—Å—Ç–∞–Ω—Ç–Ω—ã–º–∏.
class Point {
    ...
    Point operator-() const { ... }
};
–ï—Å–ª–∏ –±—ã –º—ã —Ö–æ—Ç–µ–ª–∏ —Å–æ–∑–¥–∞—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –≤–Ω–µ –∫–ª–∞—Å—Å–∞, —É –Ω–µ—ë –±—ã–ª –±—ã –æ–¥–∏–Ω –ø–∞—Ä–∞–º–µ—Ç—Ä, —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–∏–π –µ–¥–∏–Ω—Å—Ç–≤–µ–Ω–Ω–æ–º—É –æ–ø–µ—Ä–∞–Ω–¥—É –∏ —Ç–∞–∫–∂–µ —è–≤–ª—è—é—â–∏–π—Å—è –∫–æ–Ω—Å—Ç–∞–Ω—Ç–Ω—ã–º.
Point operator-(const Point& p) { ... }
–î–∞–ª–µ–µ –ø—Ä–∏–≤–µ–¥—ë–Ω –ø—Ä–∏–º–µ—Ä –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω–æ–≥–æ —É–Ω–∞—Ä–Ω–æ–≥–æ –º–∏–Ω—É—Å–∞ –¥–ª—è —Å—Ç—Ä—É–∫—Ç—É—Ä—ã Point. –û–Ω –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –Ω–æ–≤—ã–π –æ–±—ä–µ–∫—Ç —Å –ø—Ä–æ—Ç–∏–≤–æ–ø–æ–ª–æ–∂–Ω—ã–º–∏ –∑–Ω–∞–∫–∞–º–∏ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö.
class Point {
public:
    Point(int x, int y): x_(x), y_(y) {}
    Point operator-() const {
        return Point{-x_, -y_}; // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ–≤—É—é Point.
    }
    int GetX() const { return x_; }
    int GetY() const { return y_; }   
    
private:
    int x_, y_;
};

int main() {
    Point p1{4, -13};
    Point p2 = -p1;
    std::cout << p2.GetX() << ", "s << p2.GetY() << std::endl; // –í—ã–≤–µ–¥–µ—Ç -4, 13.
}
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —É–Ω–∞—Ä–Ω–æ–≥–æ –ø–ª—é—Å–∞ —Ç–∞–∫–∂–µ –Ω–µ –º–µ–Ω—è–µ—Ç –∏—Å—Ö–æ–¥–Ω—ã–π –∫–ª–∞—Å—Å, –∞ –ø—Ä–æ—Å—Ç–æ –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –µ–≥–æ –∫–æ–ø–∏—é. –≠—Ç–æ –º–æ–∂–Ω–æ —Å–¥–µ–ª–∞—Ç—å, –∏—Å–ø–æ–ª—å–∑—É—è –∫–ª—é—á–µ–≤–æ–µ —Å–ª–æ–≤–æ this (—É–∫–∞–∑–∞—Ç–µ–ª—å –Ω–∞ —Ç–µ–∫—É—â–∏–π –æ–±—ä–µ–∫—Ç).
class Point {
    Point operator+() const {
        return *this;
    }
};
–ò–Ω–∫—Ä–µ–º–µ–Ω—Ç—ã –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç—ã
–û–ø–µ—Ä–∞—Ü–∏–∏ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞ –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–∞ —Ç–æ–∂–µ —Å—á–∏—Ç–∞—é—Ç—Å—è —É–Ω–∞—Ä–Ω—ã–º–∏, –ø–æ—Å–∫–æ–ª—å–∫—É —Ä–∞–±–æ—Ç–∞—é—Ç —Å –µ–¥–∏–Ω—Å—Ç–≤–µ–Ω–Ω—ã–º –æ–ø–µ—Ä–∞–Ω–¥–æ–º. –ù–∞–ø–æ–º–Ω–∏–º, —á—Ç–æ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç —á–µ—Ç—ã—Ä–µ —Ç–∞–∫–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏:
–ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–π –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç (++value);
–ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–π –¥–µ–∫—Ä–µ–º–µ–Ω—Ç (--value);
–ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–π –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç (value++);
–ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–π –¥–µ–∫—Ä–µ–º–µ–Ω—Ç (value--).
–ü—Ä–µ—Ñ–∏–∫—Å–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–µ–Ω—è—é—Ç –∑–Ω–∞—á–µ–Ω–∏–µ –æ–ø–µ—Ä–∞–Ω–¥–∞ –∏ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç —Ä–µ–∑—É–ª—å—Ç–∞—Ç. –ü–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–µ, –Ω–∞–ø—Ä–æ—Ç–∏–≤, —Å–Ω–∞—á–∞–ª–∞ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ, –∞ –∑–∞—Ç–µ–º –º–µ–Ω—è—é—Ç –µ–≥–æ.
double c = 2.99;
// –í—ã–≤–µ–¥–µ—Ç —Å—Ç–∞—Ä–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –∏ —É–≤–µ–ª–∏—á–∏—Ç c –Ω–∞ 1.
std::cout << c++ << std::endl; // 2.99. 
// –£–≤–µ–ª–∏—á–∏—Ç c –µ—â—ë –Ω–∞ 1 –∏ –≤—ã–≤–µ–¥–µ—Ç –µ—ë –∑–Ω–∞—á–µ–Ω–∏–µ.
std::cout << ++c << std::endl; // 3.99.
–í—Å–µ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç—ã –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç—ã —Ä–∞–±–æ—Ç–∞—é—Ç —Ç–æ–ª—å–∫–æ —Å –∏–∑–º–µ–Ω—è–µ–º—ã–º–∏ –∑–Ω–∞—á–µ–Ω–∏—è–º–∏, —Ç–∞–∫–∏–º–∏ –∫–∞–∫ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –∏–ª–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã. –ü—Ä–∏–º–µ–Ω—è—Ç—å –∏—Ö –∫ –ª–∏—Ç–µ—Ä–∞–ª–∞–º –∏–ª–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º –≤—ã—Ä–∞–∂–µ–Ω–∏–π –Ω–µ–ª—å–∑—è.
value++;    // –û–∫: value ‚Äî —ç—Ç–æ –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è.
1++;        // –û—à–∏–±–∫–∞: –ø—Ä–∏–º–µ–Ω—è–µ–º –æ–ø–µ—Ä–∞—Ü–∏—é –∫ –ª–∏—Ç–µ—Ä–∞–ª—É.
funcion()++; // –û—à–∏–±–∫–∞: –ø—Ä–∏–º–µ–Ω—è–µ–º –æ–ø–µ—Ä–∞—Ü–∏—é –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É –≤—ã—Ä–∞–∂–µ–Ω–∏—è.
–û—Å–æ–±–µ–Ω–Ω–æ—Å—Ç–∏ –ø–æ—Ä—è–¥–∫–∞ —Ä–∞–±–æ—Ç—ã —ç—Ç–∏—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –º–æ–≥—É—Ç –ø—Ä–∏–≤–æ–¥–∏—Ç—å –∫ –ø—Ä–æ–±–ª–µ–º–∞–º –≤ –ø—Ä–æ–≥—Ä–∞–º–º–µ. –ù–∞–ø—Ä–∏–º–µ—Ä, –≤ —Å–ª–µ–¥—É—é—â–µ–º –∫–æ–¥–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –¥–≤—É—Ö –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã—Ö –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –≤ –æ–¥–Ω–æ–º –≤—ã—Ä–∞–∂–µ–Ω–∏–∏ —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è –ø—Ä–∏—á–∏–Ω–æ–π –Ω–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–≥–æ –ø–æ–≤–µ–¥–µ–Ω–∏—è. –ö–æ–º–ø–∏–ª—è—Ç–æ—Ä –Ω–µ –º–æ–∂–µ—Ç –æ–¥–Ω–æ–∑–Ω–∞—á–Ω–æ —Ä–µ—à–∏—Ç—å, –≤ –∫–∞–∫–æ–º –ø–æ—Ä—è–¥–∫–µ –≤—ã–ø–æ–ª–Ω—è—Ç—å –¥–µ–π—Å—Ç–≤–∏—è, –∏ –ø–æ—ç—Ç–æ–º—É –º—ã —Ä–∏—Å–∫—É–µ–º –ø–æ–ª—É—á–∏—Ç—å –Ω–µ–ø—Ä–µ–¥—Å–∫–∞–∑—É–µ–º—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç.
int value = 5;
int res = value++ + value++; // –ù–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–µ –ø–æ–≤–µ–¥–µ–Ω–∏–µ.
–ù–∏–∂–µ –ø—Ä–∏–≤–µ–¥–µ–Ω–æ –µ—â–µ –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø—Ä–∏–º–µ—Ä–æ–≤ –≤—ã—Ä–∞–∂–µ–Ω–∏–π, –ø—Ä–∏–≤–æ–¥—è—â–∏—Ö –∫ —ç—Ç–æ–π –ø—Ä–æ–±–ª–µ–º–µ.
// –û–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –Ω–µ –º–æ–∂–µ—Ç –∏–º–µ—Ç—å –¥–≤–∞ –∑–Ω–∞—á–µ–Ω–∏—è.
value = value++ + 1 = value++ + 1; 
// –ù–µ–ª—å–∑—è –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ —É–≤–µ–ª–∏—á–∏—Ç—å –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –∏ –ø—Ä–∏—Å–≤–æ–∏—Ç—å –µ—ë —Å–∞–º–æ–π —Å–µ–±–µ.
value = ++value + 1; 
// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –¥–≤—É—Ö –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –±–µ–∑ —Å–∫–æ–±–æ–∫ –Ω–µ–¥–æ–ø—É—Å—Ç–∏–º–æ.
++ ++value; 
// –ó–¥–µ—Å—å –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –∑–Ω–∞—á–µ–Ω–∏—è –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤.
function(++value, ++value);
// –ù–µ–ª—å–∑—è –ø—Ä–∏—Å–≤–æ–∏—Ç—å –∑–Ω–∞—á–µ–Ω–∏–µ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π –≤ –º–æ–º–µ–Ω—Ç –ø–µ—Ä–µ–¥–∞—á–∏ –≤ —Ñ—É–Ω–∫—Ü–∏—é.
function(value = -1, value = -1); 
// –û–ø–µ—Ä–∞—Ü–∏—è –≤—ã–≤–æ–¥–∞ –Ω–µ –º–æ–∂–µ—Ç –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ –≤—ã–ø–æ–ª–Ω—è—Ç—å –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–π –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç.
cout << value << value++; 
–ß—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –Ω–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–≥–æ –ø–æ–≤–µ–¥–µ–Ω–∏—è, —Å—Ç–æ–∏—Ç –≤–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –æ—Ç–Ω–æ—Å–∏—Ç—å—Å—è –∫ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏—é –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–æ–≤. –õ—É—á—à–µ –Ω–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∏—Ö –≤ —Å–ª–æ–∂–Ω—ã—Ö –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è—Ö –∏–ª–∏ –Ω–µ—Å–∫–æ–ª—å–∫–æ —Ä–∞–∑ –≤ –æ–¥–Ω–æ–º –≤—ã—Ä–∞–∂–µ–Ω–∏–∏.
–ü–µ—Ä–µ–≥—Ä—É–∂–∞–µ–º –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç—ã –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç—ã
–ö–∞–∫ –∏ –≤ —Å–ª—É—á–∞–µ —Å —á–µ—Ç—ã—Ä—å–º—è –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–º–∏ –æ–ø–µ—Ä–∞—Ü–∏—è–º–∏, –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è—è –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç—ã –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç—ã, —Å—Ç–æ–∏—Ç —Å–æ–∑–¥–∞—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –¥–ª—è –≤—Å–µ—Ö —á–µ—Ç—ã—Ä–µ—Ö –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤. –í–µ–¥—å –∫—Ç–æ –±—ã –Ω–∏ –ø–æ–ª—å–∑–æ–≤–∞–ª—Å—è –Ω–∞—à–∏–º –∫–æ–¥–æ–º, —Å –µ–≥–æ —Å—Ç–æ—Ä–æ–Ω—ã –±—É–¥–µ—Ç –ª–æ–≥–∏—á–Ω—ã–º –æ–∂–∏–¥–∞—Ç—å, —á—Ç–æ, –µ—Å–ª–∏ —Ä–∞–±–æ—Ç–∞–µ—Ç –æ–¥–Ω–∞ –∏–∑ –æ–ø–µ—Ä–∞—Ü–∏–π, –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∏ –¥—Ä—É–≥–∏–µ.
–ò–Ω–∫—Ä–µ–º–µ–Ω—Ç—ã –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç—ã –º–µ–Ω—è—é—Ç –Ω–µ–ø–æ—Å—Ä–µ–¥—Å—Ç–≤–µ–Ω–Ω–æ –æ–±—ä–µ–∫—Ç—ã –∫–ª–∞—Å—Å–æ–≤ –∏–ª–∏ —Å—Ç—Ä—É–∫—Ç—É—Ä, –ø–æ—ç—Ç–æ–º—É –∏—Ö –ª—É—á—à–µ —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å –∫–∞–∫ —Ñ—É–Ω–∫—Ü–∏–∏-—á–ª–µ–Ω—ã.
–ù–µ—Å–º–æ—Ç—Ä—è –Ω–∞ –≤–Ω–µ—à–Ω–µ–µ —Å—Ö–æ–¥—Å—Ç–≤–æ, –ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–µ –∏ –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–µ —Ñ–æ—Ä–º—ã –æ–ø–µ—Ä–∞—Ü–∏–π —Ä–µ–∞–ª–∏–∑—É—é—Ç—Å—è –ø–æ-—Ä–∞–∑–Ω–æ–º—É, —á—Ç–æ –æ–±—É—Å–ª–æ–≤–ª–µ–Ω–æ –æ—Å–æ–±–µ–Ω–Ω–æ—Å—Ç—è–º–∏ –∏—Ö —Ä–∞–±–æ—Ç—ã. –î–ª—è –Ω–∞—á–∞–ª–∞ –¥–∞–≤–∞–π—Ç–µ —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç.
class Timer {
public:
    Timer(int seconds): seconds_(seconds) { }
    int GetTime() const { return seconds_; }
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø—Ä–µ—Ñ–∏–∫—Å–Ω–æ–≥–æ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞.
    Timer& operator++() {
        seconds_ += 1; // –ò–∑–º–µ–Ω—è–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ —Å—á—ë—Ç—á–∏–∫–∞
        return *this; // –∏ –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —Å—Å—ã–ª–∫—É –Ω–∞ –æ–±—ä–µ–∫—Ç.
    }
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø—Ä–µ—Ñ–∏–∫—Å–Ω–æ–≥–æ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–∞.
    Timer& operator--() {
        seconds_ -= 1;
        return *this;
    }
private:
    int seconds_;
};

int main() {
    Timer timer_1{10};
    Timer timer_2 = ++timer_1;
    std::cout << timer_1.GetTime() << std::endl; // –í—ã–≤–µ–¥–µ—Ç 11.
    std::cout << timer_2.GetTime() << std::endl; // –í—ã–≤–µ–¥–µ—Ç 11.
}
–û–ø–µ—Ä–∞—Ü–∏–∏ –Ω–µ –ø—Ä–∏–Ω–∏–º–∞—é—Ç –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤, —Ç–∞–∫ –∫–∞–∫ –æ–±—ä—è–≤–ª–µ–Ω—ã –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞. –ü–µ—Ä–≤—ã–º —à–∞–≥–æ–º –æ–Ω–∏ —É–º–µ–Ω—å—à–∞—é—Ç –∏–ª–∏ —É–≤–µ–ª–∏—á–∏–≤–∞—é—Ç –∑–Ω–∞—á–µ–Ω–∏–µ —Å—á—ë—Ç—á–∏–∫–∞. –ó–∞—Ç–µ–º, –∏—Å–ø–æ–ª—å–∑—É—è this, –æ–Ω–∏ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç –∏–∑–º–µ–Ω—ë–Ω–Ω—É—é –∫–æ–ø–∏—é –æ–±—ä–µ–∫—Ç–∞.
–ß—Ç–æ–±—ã –æ—Ç–ª–∏—á–∞—Ç—å –æ–±—ä—è–≤–ª–µ–Ω–∏—è –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –æ—Ç –ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã—Ö, –¥–ª—è –Ω–∏—Ö —É–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π –ø–∞—Ä–∞–º–µ—Ç—Ä —Ç–∏–ø–∞ int. –ö–∞–∫ –ø—Ä–∞–≤–∏–ª–æ, –æ–Ω –Ω–µ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –≤–Ω—É—Ç—Ä–∏ —Ñ—É–Ω–∫—Ü–∏–∏, –∏ –µ–≥–æ –∏–º—è –ø—Ä–∏–Ω—è—Ç–æ –æ–ø—É—Å–∫–∞—Ç—å.
class Timer {
    ...
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω–æ–≥–æ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞.
    Timer operator++(int) {
        Timer old_timer = *this; // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Ç–∞—Ä–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ.
        ++(*this); // –ú–µ–Ω—è–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ.
        return old_timer;
    }
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω–æ–≥–æ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–∞.
    Timer operator--(int) {
        Timer old_timer = *this;
        --(*this);
        return old_timer;
    }
    ...
};

int main() {
    Timer timer_1{10};
    Timer timer_2 = timer_1++;
    std::cout << timer_1.GetTime() << std::endl; // –í—ã–≤–µ–¥–µ—Ç 11.
    std::cout << timer_2.GetTime() << std::endl; // –í—ã–≤–µ–¥–µ—Ç 10.
}
–≠—Ç–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏ –¥–æ–ª–∂–Ω—ã –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å –∏—Å—Ö–æ–¥–Ω—É—é –≤–µ—Ä—Å–∏—é –æ–±—ä–µ–∫—Ç–∞, –ø–æ—ç—Ç–æ–º—É –º—ã —Å–æ—Ö—Ä–∞–Ω—è–µ–º –µ—ë –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é old_timer –∏ —Ç–æ–ª—å–∫–æ –ø–æ—Ç–æ–º –º–µ–Ω—è–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ. –í —ç—Ç–æ–º –ø—Ä–∏–º–µ—Ä–µ –º—ã –∏—Å–ø–æ–ª—å–∑—É–µ–º —Ä–∞–Ω–µ–µ —Ä–µ–∞–ª–∏–∑–æ–≤–∞–Ω–Ω—ã–µ –ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–µ —Ñ–æ—Ä–º—ã ‚Äî —ç—Ç–æ –¥–æ–ø—É—Å—Ç–∏–º–æ, –µ—Å–ª–∏ –≤–æ –≤—Å–µ—Ö –æ–ø–µ—Ä–∞—Ü–∏—è—Ö –¥–µ–π—Å—Ç–≤—É–µ—Ç –æ–¥–Ω–∞ –∏ —Ç–∞ –∂–µ –ª–æ–≥–∏–∫–∞.
–í–∞–º –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω –∫–ª–∞—Å—Å Range —Å —Ä–µ–∞–ª–∏–∑–∞—Ü–∏–µ–π –∏–Ω—Ç–µ—Ä–≤–∞–ª–∞, –∑–∞–¥–∞–Ω–Ω–æ–≥–æ –¥–≤—É–º—è —Ü–µ–ª—ã–º–∏ —á–∏—Å–ª–∞–º–∏. 
class Range {
public:
    Range(int start, int end): start_(start), end_(end) { }
    Range& operator++();
    Range& operator--();
    Range operator++(int);
    Range operator--(int);
private:
    int start_, end_;
};
–†–∞–±–æ—Ç–∞ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –¥–ª—è —ç—Ç–æ–≥–æ –∫–ª–∞—Å—Å–∞ –±—É–¥–µ—Ç –Ω–µ–æ–±—ã—á–Ω–æ–π. –ü—Ä–µ—Ñ–∏–∫—Å–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –¥–æ–ª–∂–Ω—ã –º–µ–Ω—è—Ç—å –Ω–∏–∂–Ω—é—é –≥—Ä–∞–Ω–∏—Ü—É –∏–Ω—Ç–µ—Ä–≤–∞–ª–∞, –∞ –ø–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–µ ‚Äî –≤–µ—Ä—Ö–Ω—é—é. 
Range range{5, 20}; // –ò–Ω—Ç–µ—Ä–≤–∞–ª [5, 20].
range++; // –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º –≤–µ—Ä—Ö–Ω—é—é –≥—Ä–∞–Ω–∏—Ü—É –Ω–∞ 1: [5, 21].
++range; // –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º –Ω–∏–∂–Ω—é—é –≥—Ä–∞–Ω–∏—Ü—É –Ω–∞ 1: [6, 21].
–ü–æ–ª–Ω–∞—è —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è –∫–ª–∞—Å—Å–∞ –±—É–¥–µ—Ç –≤—ã–≥–ª—è–¥–µ—Ç—å —Ç–∞–∫:
class Range {
public:
    Range(int start, int end): start_(start), end_(end) { }
    Range& operator++() {
        start_ += 1; return *this;
    }
    Range& operator--() {
        start_ -= 1; return *this;
    }
    Range operator++(int) {
        end_ += 1; return *this;
    }
    Range operator--(int) {
        end_ -= 1; return *this;
    }
private:
    int start_, end_;
};
–í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã —Ä–∞–∑–æ–±—Ä–∞–ª–∏—Å—å —Å –æ—Å–æ–±–µ–Ω–Ω–æ—Å—Ç—è–º–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–æ–∫ –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏—Ö —É–Ω–∞—Ä–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π. –£–Ω–∞—Ä–Ω—ã–π –ø–ª—é—Å –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∫–æ–ø–∏—é –æ–ø–µ—Ä–∞–Ω–¥–∞, –∞ —É–Ω–∞—Ä–Ω—ã–π –º–∏–Ω—É—Å ‚Äî –∫–æ–ø–∏—é —Å –ø—Ä–æ—Ç–∏–≤–æ–ø–æ–ª–æ–∂–Ω—ã–º –∑–Ω–∞–∫–æ–º. –ü–æ—Å—Ç—Ñ–∏–∫—Å–Ω—ã–µ —Ñ–æ—Ä–º—ã –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –∏ –¥–µ–∫—Ä–µ–º–µ–Ω—Ç–æ–≤ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç –∑–Ω–∞—á–µ–Ω–∏–µ –¥–æ –µ–≥–æ –∏–∑–º–µ–Ω–µ–Ω–∏—è –Ω–∞ –µ–¥–∏–Ω–∏—Ü—É, –∞ –ø—Ä–µ—Ñ–∏–∫—Å–Ω—ã–µ ‚Äî –ø–æ—Å–ª–µ. –ë—É–¥—É—á–∏ –æ–±—ä—è–≤–ª–µ–Ω–Ω—ã–º–∏ –∫–∞–∫ —á–ª–µ–Ω—ã –∫–ª–∞—Å—Å–æ–≤, –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ —ç—Ç–∏—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –Ω–µ –ø—Ä–∏–Ω–∏–º–∞—é—Ç –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã—Ö –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤ –∏ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç –Ω–æ–≤—ã–µ –≤–µ—Ä—Å–∏–∏ –æ–±—ä–µ–∫—Ç–æ–≤.
–í —Å–ª–µ–¥—É—é—â–µ–º —É—Ä–æ–∫–µ –º—ã –ø–æ–≥–æ–≤–æ—Ä–∏–º –æ –µ—â—ë –æ–¥–Ω–æ–π –≥—Ä—É–ø–ø–µ –æ–ø–µ—Ä–∞—Ü–∏–π ‚Äî –æ —Ç–µ—Ö, —á—Ç–æ –≤—ã–ø–æ–ª–Ω—è—é—Ç –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ.
–ü–µ—Ä–µ–≥—Ä—É–∑–∏—Ç—å –∏ –ø—Ä–∏—Å–≤–æ–∏—Ç—å
–ü—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ ‚Äî –æ–¥–Ω–∞ –∏–∑ –Ω–∞–∏–±–æ–ª–µ–µ —á–∞—Å—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ–º—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–∏. –° –µ—ë –ø–æ–º–æ—â—å—é –º–æ–∂–Ω–æ —Å–æ—Ö—Ä–∞–Ω—è—Ç—å –∑–Ω–∞—á–µ–Ω–∏—è –∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –≤—ã—Ä–∞–∂–µ–Ω–∏–π –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ, –∞ —Ç–∞–∫–∂–µ —Å–æ–∑–¥–∞–≤–∞—Ç—å –∏ –æ–±–Ω–æ–≤–ª—è—Ç—å –æ–±—ä–µ–∫—Ç—ã. –í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã —É–∑–Ω–∞–µ—Ç–µ, –∫–∞–∫ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è—Ç—å —ç—Ç–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏ –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å–æ —Å–ª–æ–∂–Ω—ã–º–∏ —Ç–∏–ø–∞–º–∏ –¥–∞–Ω–Ω—ã—Ö.
–ì–ª–∞–≤–Ω–∞—è –æ–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –≤ C++ ‚Äî —ç—Ç–æ =. –û–Ω–∞ –±–∏–Ω–∞—Ä–Ω–∞—è, —Ç–æ –µ—Å—Ç—å —Ä–∞–±–æ—Ç–∞–µ—Ç —Å –¥–≤—É–º—è –æ–ø–µ—Ä–∞–Ω–¥–∞–º–∏, –∫–æ–ø–∏—Ä—É—è –∑–Ω–∞—á–µ–Ω–∏–µ –ø—Ä–∞–≤–æ–≥–æ –≤ –ª–µ–≤—ã–π. –ü—Ä–∞–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥ –º–æ–∂–µ—Ç –±—ã—Ç—å —Å–ª–æ–∂–Ω—ã–º –≤—ã—Ä–∞–∂–µ–Ω–∏–µ–º –∏–ª–∏ –≤—ã–∑–æ–≤–æ–º —Ñ—É–Ω–∫—Ü–∏–∏, –∞ –ª–µ–≤—ã–π –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –∏–∑–º–µ–Ω—è–µ–º—ã–º –æ–±—ä–µ–∫—Ç–æ–º.
a = 4;     // –û–∫.
a + 2 = 5; // –û—à–∏–±–∫–∞: —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É –≤—ã—Ä–∞–∂–µ–Ω–∏—è –Ω–µ–ª—å–∑—è –ø—Ä–∏—Å–≤–æ–∏—Ç—å –∑–Ω–∞—á–µ–Ω–∏–µ.
3 = a;     // –û—à–∏–±–∫–∞: –Ω–µ–ª—å–∑—è –∑–∞–ø–∏—Å–∞—Ç—å –∑–Ω–∞—á–µ–Ω–∏–µ –≤ –ª–∏—Ç–µ—Ä–∞–ª.
–ü—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç –∫–∞—Å–∫–∞–¥–∏—Ä–æ–≤–∞–Ω–∏–µ –∏ –≤—ã–ø–æ–ª–Ω—è–µ—Ç—Å—è —Å–ø—Ä–∞–≤–∞ –Ω–∞–ª–µ–≤–æ.
value = a = b = 5; // –ú–æ–∂–Ω–æ –Ω–∞–ø–∏—Å–∞—Ç—å: value = (a = (b = 5)). 
–í —ç—Ç–æ–º –ø—Ä–∏–º–µ—Ä–µ —á–∏—Å–ª–æ 5 —Å–Ω–∞—á–∞–ª–∞ –∑–∞–ø–∏—Å—ã–≤–∞–µ—Ç—Å—è –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é b, –∑–∞—Ç–µ–º –≤ a –∏ –≤ value.
–ü—Ä–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–∏ —Ç–∏–ø—ã –æ–ø–µ—Ä–∞–Ω–¥–æ–≤ –Ω–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ –¥–æ–ª–∂–Ω—ã —Å–æ–≤–ø–∞–¥–∞—Ç—å: –µ—Å–ª–∏ —ç—Ç–æ –≤–æ–∑–º–æ–∂–Ω–æ, —Ç–∏–ø –ø—Ä–∞–≤–æ–≥–æ –∑–Ω–∞—á–µ–Ω–∏—è –±—É–¥–µ—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø—Ä–∏–≤–µ–¥–µ–Ω –∫ —Ç–∏–ø—É –ª–µ–≤–æ–≥–æ.
int value_int = true; // –õ–æ–≥–∏—á–µ—Å–∫–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –º–æ–∂–Ω–æ –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ int. –†–µ–∑—É–ª—å—Ç–∞—Ç = 1.
value_int = '*';      // –ü—Ä–∏ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–∏ –∫ int –ø–æ–ª—É—á–∏–º –∫–æ–¥ —Å–∏–º–≤–æ–ª–∞. –†–µ–∑—É–ª—å—Ç–∞—Ç = 42.
value_int = 4.222;    // –†–µ–∑—É–ª—å—Ç–∞—Ç = 4.
–ó–ª–æ—É–ø–æ—Ç—Ä–µ–±–ª—è—Ç—å –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–º–∏ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è–º–∏ –Ω–µ —Å—Ç–æ–∏—Ç, –ø–æ—Å–∫–æ–ª—å–∫—É –ø–æ—Ä–æ–π –º–æ–∂–Ω–æ –ø–æ–ª—É—á–∏—Ç—å –Ω–µ–æ–∂–∏–¥–∞–Ω–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç. –í —ç—Ç–æ–º –ø—Ä–∏–º–µ—Ä–µ –∑–Ω–∞—á–µ–Ω–∏–µ —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–µ –¥–ª—è —Ç–∏–ø–∞ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π, –∏–∑-–∑–∞ —á–µ–≥–æ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –ø–µ—Ä–µ–ø–æ–ª–Ω–µ–Ω–∏–µ.
value_int = 3'000'000'000u; // -1294967296
–ü–æ–º–∏–º–æ =, —Å—É—â–µ—Å—Ç–≤—É—é—Ç –∏ –¥—Ä—É–≥–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è, —Å–æ—á–µ—Ç–∞—é—â–∏–µ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏–µ –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–æ–≥–æ –∏–ª–∏ –ª–æ–≥–∏—á–µ—Å–∫–æ–≥–æ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è –∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞. –¢–∞–∫–∏–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –Ω–∞–∑—ã–≤–∞—é—Ç—Å—è —Å–æ—Å—Ç–∞–≤–Ω—ã–º–∏. –ò—Ö –º–æ–∂–Ω–æ —Ä–∞–∑–¥–µ–ª–∏—Ç—å –Ω–∞ –Ω–µ—Å–∫–æ–ª—å–∫–æ –≥—Ä—É–ø–ø:
–∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ (–Ω–∞–ø—Ä–∏–º–µ—Ä, += –∏ *=);
–ª–æ–≥–∏—á–µ—Å–∫–∏–µ (–Ω–∞–ø—Ä–∏–º–µ—Ä, &=);
–æ–ø–µ—Ä–∞—Ü–∏–∏ –ø–æ–±–∏—Ç–æ–≤–æ–≥–æ —Å–¥–≤–∏–≥–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, >>=).
–≠—Ç–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Ç–æ–∂–µ –ø—Ä–∏–Ω–∏–º–∞—é—Ç –¥–≤–∞ –æ–ø–µ—Ä–∞–Ω–¥–∞, –Ω–æ –ø—Ä–∞–≤—ã–π –ø—Ä–µ–¥—Å—Ç–∞–≤–ª—è–µ—Ç —Å–æ–±–æ–π –∑–Ω–∞—á–µ–Ω–∏–µ –¥–ª—è –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –≤—ã—Ä–∞–∂–µ–Ω–∏—è. –ù–∞ –≤—Ç–æ—Ä–æ–º —à–∞–≥–µ –µ–≥–æ —Ä–µ–∑—É–ª—å—Ç–∞—Ç —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è –ø—Ä–∞–≤—ã–º –æ–ø–µ—Ä–∞–Ω–¥–æ–º –¥–ª—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è.
double value = 100;
value += 100; // value = value + 100.
value /= 15;  // value = value / 15..
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ =
–û–¥–∏–Ω –∏–∑ –ø–ª—é—Å–æ–≤ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –≤ —Ç–æ–º, —á—Ç–æ –ø—Ä–∏ —Ä–∞–±–æ—Ç–µ —Å –ø—Ä–æ—Å—Ç—ã–º–∏ –∫–ª–∞—Å—Å–∞–º–∏ –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞–º–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –µ–π –Ω–µ –Ω—É–∂–Ω–∞. –ù–∞–ø—Ä–∏–º–µ—Ä, –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å = —Å –æ–±—ä–µ–∫—Ç–∞–º–∏ —Ç–∏–ø–∞ Point, –∏ –≤—Å—ë –±—É–¥–µ—Ç –æ—Ç–ª–∏—á–Ω–æ —Ä–∞–±–æ—Ç–∞—Ç—å.
struct Point {
    int x, y;
};

int main() {
    Point point_1{10, 20};
    Point point_2;

    point_2 = point_1;      // –ò—Å–ø–æ–ª—å–∑—É–µ–º –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é.
    std::cout << point_2.x; // 10.
}
–≠—Ç–æ –≤–æ–∑–º–æ–∂–Ω–æ, —Ç–∞–∫ –∫–∞–∫ –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ –≥–µ–Ω–µ—Ä–∏—Ä—É–µ—Ç –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è. –û–Ω–∞ —Ä–∞–±–æ—Ç–∞–µ—Ç –æ—á–µ–Ω—å –ø—Ä–æ—Å—Ç–æ: –∫–æ–ø–∏—Ä—É–µ—Ç –≤—Å–µ –Ω–µ—Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏–µ –ø–æ–ª—è –æ–¥–Ω–æ–≥–æ –æ–±—ä–µ–∫—Ç–∞ –≤ –¥—Ä—É–≥–æ–π —Ç–æ–≥–æ –∂–µ —Ç–∏–ø–∞. –í–æ –º–Ω–æ–≥–∏—Ö —Å–ª—É—á–∞—è—Ö —ç—Ç–æ–≥–æ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ.
–Ø–≤–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –º–æ–∂–Ω–æ –∑–∞–¥–∞—Ç—å —Å –ø–æ–º–æ—â—å—é —Å–ª–æ–≤–∞ default.
struct Point {
    int x, y;
    Point& operator=(const Point& p2) = default;
};
–ü–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –æ–ø–µ—Ä–∞—Ü–∏—é –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –≤—Ä—É—á–Ω—É—é –ø—Ä–∏—Ö–æ–¥–∏—Ç—Å—è –≤ —Ç–µ—Ö —Å–∏—Ç—É–∞—Ü–∏—è—Ö, –∫–æ–≥–¥–∞ –ø–µ—Ä–µ–Ω–æ—Å –∑–Ω–∞—á–µ–Ω–∏–π –º–µ–∂–¥—É –æ–±—ä–µ–∫—Ç–∞–º–∏ —Ç—Ä–µ–±—É–µ—Ç –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω–æ–π –ª–æ–≥–∏–∫–∏ –∏ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—é –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –Ω–µ–ª—å–∑—è. –ß–∞—Å—Ç–æ —ç—Ç–æ —Å–≤—è–∑–∞–Ω–æ —Å –≤—ã–¥–µ–ª–µ–Ω–∏–µ–º –ø–∞–º—è—Ç–∏ –∏ —É–∫–∞–∑–∞—Ç–µ–ª—è–º–∏. –ù–∞–ø—Ä–∏–º–µ—Ä, –µ—Å–ª–∏ –æ–¥–∏–Ω —ç–ª–µ–º–µ–Ω—Ç –∫–ª–∞—Å—Å–∞ —É–∫–∞–∑—ã–≤–∞–µ—Ç –Ω–∞ –¥—Ä—É–≥–æ–π, –µ–≥–æ –∫–æ–ø–∏—è –≤ –Ω–æ–≤–æ–º –æ–±—ä–µ–∫—Ç–µ –¥–æ–ª–∂–Ω–∞ —É–∫–∞–∑—ã–≤–∞—Ç—å –Ω–∞ –∫–æ–ø–∏—é –¥—Ä—É–≥–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞, –∞ –Ω–µ –Ω–∞ –æ—Ä–∏–≥–∏–Ω–∞–ª.
–û–ø–µ—Ä–∞—Ü–∏—é = –º–æ–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ç–æ–ª—å–∫–æ –≤ –≤–∏–¥–µ —Ñ—É–Ω–∫—Ü–∏–∏-—á–ª–µ–Ω–∞ –∫–ª–∞—Å—Å–∞ –∏–ª–∏ —Å—Ç—Ä—É–∫—Ç—É—Ä—ã. –¢–∞–∫–∏–º –æ–±—Ä–∞–∑–æ–º, –≤ –∫–∞—á–µ—Å—Ç–≤–µ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞ –æ–Ω–∞ –ø–æ–ª—É—á–∞–µ—Ç —Ç–æ–ª—å–∫–æ –ø—Ä–∞–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥ ‚Äî –∑–Ω–∞—á–µ–Ω–∏–µ, –∫–æ—Ç–æ—Ä–æ–µ –Ω—É–∂–Ω–æ –ø—Ä–∏—Å–≤–æ–∏—Ç—å.
–†–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–æ—Å—Ç–æ–π –ø—Ä–∏–º–µ—Ä –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏: —Å–¥–µ–ª–∞–µ–º —Ç–∞–∫, —á—Ç–æ–±—ã —Ç–æ—á–∫–µ —Å —Ç—Ä–µ–º—è –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∞–º–∏ (Point3D) –º–æ–∂–Ω–æ –±—ã–ª–æ –ø—Ä–∏—Å–≤–∞–∏–≤–∞—Ç—å —Ç–æ—á–∫–∏ —Å –¥–≤—É–º—è (Point2D).
struct Point2D {
    int x, y;
};

struct Point3D {
    int x, y, z;
    
    Point3D& operator=(const Point2D& point_2d) {
        x = point_2d.x;
        y = point_2d.y;
        z = 0;
        return *this;
    }
};
    
int main() {
    Point2D point_2d{10, 20};
    Point3D point_3d{1, 1, 1};
    point_3d = point_2d;
    
    // –í—ã–≤–µ–¥–µ—Ç: 10, 20, 0.
    std::cout << point_3d.x << ", "s << point_3d.y << ", "s << point_3d.z << std::endl;
}
–û–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –≤—ã–ø–æ–ª–Ω—è–µ—Ç –¥–≤–∞ –¥–µ–π—Å—Ç–≤–∏—è. –í–æ-–ø–µ—Ä–≤—ã—Ö, –º–µ–Ω—è–µ—Ç —Ç–µ–∫—É—â–∏–π –æ–±—ä–µ–∫—Ç. –í–æ-–≤—Ç–æ—Ä—ã—Ö, –æ–Ω–∞ –¥–æ–ª–∂–Ω–∞ –≤–µ—Ä–Ω—É—Ç—å –µ–≥–æ, —á—Ç–æ–±—ã —Ä–∞–±–æ—Ç–∞–ª–æ –∫–∞—Å–∫–∞–¥–∏—Ä–æ–≤–∞–Ω–∏–µ.
–ü—Ä–∏ —Ä–∞–±–æ—Ç–µ —Å —Ç–æ—á–∫–∞–º–∏ –Ω–∞–≤–µ—Ä–Ω—è–∫–∞ –ø–æ–Ω–∞–¥–æ–±–∏—Ç—Å—è –∏ –æ–±—Ä–∞—Ç–Ω–æ–µ –¥–µ–π—Å—Ç–≤–∏–µ: –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –¥–≤—É–º–µ—Ä–Ω—ã–º —Ç–æ—á–∫–∞–º –∑–Ω–∞—á–µ–Ω–∏–π —Ç—Ä—ë—Ö–º–µ—Ä–Ω—ã—Ö.
–û–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –∏ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
–û–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –ø–æ—Ö–æ–∂–∞ –Ω–∞ –¥—Ä—É–≥–æ–π –º–µ—Ö–∞–Ω–∏–∑–º: –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è. –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è —ç—Ç–æ –æ—Å–æ–±—ã–π –≤–∏–¥ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –∫–ª–∞—Å—Å–∞, –ø—Ä–∏–Ω–∏–º–∞—é—â–∏–π –≤ –∫–∞—á–µ—Å—Ç–≤–µ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞ —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–π –æ–±—ä–µ–∫—Ç –∏ —Å–æ–∑–¥–∞—é—â–∏–π –Ω–æ–≤—ã–π –∫–∞–∫ –µ–≥–æ –∫–æ–ø–∏—é.
Point point{1, 1};
Point point_new(point); // –¢–æ—á–∫–∞ point_new —Å–æ–∑–¥–∞–Ω–∞ –Ω–∞ –æ—Å–Ω–æ–≤–µ point. –≠—Ç–æ –≤—ã—Ä–∞–∂–µ–Ω–∏–µ –≤—ã–∑–æ–≤–µ—Ç –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä Point(const Point&)
–í –æ–±–æ–∏—Ö —Å–ª—É—á–∞—è—Ö –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –ø–µ—Ä–µ–Ω–æ—Å –∑–Ω–∞—á–µ–Ω–∏–π –∏–∑ –æ–¥–Ω–æ–≥–æ –æ–±—ä–µ–∫—Ç–∞ –∫–ª–∞—Å—Å–∞ –≤ –¥—Ä—É–≥–æ–π. –û–¥–Ω–∞–∫–æ —Å–ª–µ–¥—É–µ—Ç —Ä–∞–∑–ª–∏—á–∞—Ç—å —ç—Ç–∏ –ø—Ä–æ—Ü–µ—Å—Å—ã.
–û–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –º–µ–Ω—è–µ—Ç –æ–±—ä–µ–∫—Ç, –∫–æ—Ç–æ—Ä—ã–π —É–∂–µ –±—ã–ª —Å–æ–∑–¥–∞–Ω —Ä–∞–Ω–µ–µ. –û–Ω –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—É—Å—Ç—ã–º –∏–ª–∏ —Å–æ–¥–µ—Ä–∂–∞—Ç—å –¥—Ä—É–≥–∏–µ –∑–Ω–∞—á–µ–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–µ –∑–∞–º–µ–Ω—è—é—Ç—Å—è –Ω–∞ –Ω–æ–≤—ã–µ.
Point point;
point = Point(2, 2); // –ü—Ä–∏—Å–≤–∞–∏–≤–∞–µ–º point –Ω–æ–≤–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ.
–ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è —Å–æ–∑–¥–∞—ë—Ç –Ω–æ–≤—ã–π –æ–±—ä–µ–∫—Ç, –∏–¥–µ–Ω—Ç–∏—á–Ω—ã–π —Å—É—â–µ—Å—Ç–≤—É—é—â–µ–º—É.
–ß—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å —Ä–∞–∑–Ω–∏—Ü—É, –¥–∞–≤–∞–π—Ç–µ —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–∏–º–µ—Ä —Å Point, –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–Ω–æ–π –≤ –∫–ª–∞—Å—Å. –û–ø—Ä–µ–¥–µ–ª–∏–º –¥–ª—è –Ω–µ–≥–æ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è –∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è.
class Point {
public:
    Point (int x, int y): x(x), y(y) {} // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏.
    Point(const Point &point) { // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è.
        x = point.x;
        y = point.y;
    }
    
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è.
    Point& operator=(const Point& point) {
        x = point.x;
        y = point.y;
        return *this;
    }
    int x, y;
};
–ò—Å–ø–æ–ª—å–∑—É–µ–º –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä—ã –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –Ω–æ–≤—ã—Ö –æ–±—ä–µ–∫—Ç–æ–≤.
Point point_1{0, 0}; // –ò—Å–ø–æ–ª—å–∑—É–µ–º –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏.
Point point_2(point_1); // –°–æ–∑–¥–∞—ë–º –Ω–æ–≤—É—é —Ç–æ—á–∫—É, –≤—ã–∑—ã–≤–∞—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è.

// –ó–¥–µ—Å—å —Ç–æ–∂–µ –≤—ã–∑–æ–≤–µ—Ç—Å—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä, —Ç–∞–∫ –∫–∞–∫ –¥–ª—è –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä–∞ 
// —ç—Ç–∞ –∑–∞–ø–∏—Å—å –∞–Ω–∞–ª–æ–≥–∏—á–Ω–∞ Point point_3(point_1).
Point point_3 = point_1; 
–î–ª—è –∏—Ö –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤—ã–∑—ã–≤–∞–µ—Ç—Å—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ.
point_3 = point_1; // –í—ã–ø–æ–ª–Ω–∏—Ç—Å—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ ‚Äî –º–µ–Ω—è–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â—É—é —Ç–æ—á–∫—É.
point_3 = Point(1, 2); // –ó–¥–µ—Å—å —Ç–æ–∂–µ.
–í–æ–∑–º–æ–∂–Ω—ã –∏ –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã–µ —Å–∏—Ç—É–∞—Ü–∏–∏: –Ω–∞–ø—Ä–∏–º–µ—Ä, –µ—Å–ª–∏ –º—ã –ø–æ–ø—ã—Ç–∞–µ–º—Å—è –ø—Ä–∏—Å–≤–æ–∏—Ç—å —Å—É—â–µ—Å—Ç–≤—É—é—â–µ–π –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π —Ç–æ—á–∫—É, –ø–æ–ª—É—á–µ–Ω–Ω—É—é —Å –ø–æ–º–æ—â—å—é –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è, –±—É–¥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω—ã —Å—Ä–∞–∑—É –æ–±–∞ –º–µ—Ö–∞–Ω–∏–∑–º–∞.
// –°–Ω–∞—á–∞–ª–∞ –≤—ã—Ä–∞–∂–µ–Ω–∏–µ Point(point_1) –≤—ã–∑–æ–≤–µ—Ç –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è,
// –∫–æ—Ç–æ—Ä—ã–π –≤–µ—Ä–Ω—ë—Ç –Ω–æ–≤—É—é —Ç–æ—á–∫—É, —Å–æ–∑–¥–∞–Ω–Ω—É—é –Ω–∞ –æ—Å–Ω–æ–≤–µ point_1.
// –ó–∞—Ç–µ–º –æ–Ω–∞ –ø—Ä–∏—Å–≤–æ–∏—Ç—Å—è –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π point_3.
point_3 = Point(point_1);
–í —É—Ä–æ–∫–µ –æ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–µ –æ–ø–µ—Ä–∞—Ü–∏–π –≤–≤–æ–¥–∞-–≤—ã–≤–æ–¥–∞ –º—ã –≥–æ–≤–æ—Ä–∏–ª–∏, —á—Ç–æ –Ω–µ–ª—å–∑—è —Å–æ–∑–¥–∞–≤–∞—Ç—å –∫–æ–ø–∏–∏ –ø–æ—Ç–æ–∫–æ–≤ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –∫–ª–∞—Å—Å–∞ istream), –∏–Ω–∞—á–µ –ø—Ä–æ–∏–∑–æ–π–¥—ë—Ç –æ—à–∏–±–∫–∞. –ü–æ—Ç–æ–∫ ‚Äî —É–Ω–∏–∫–∞–ª—å–Ω—ã–π —Ä–µ—Å—É—Ä—Å, —Å –∫–æ—Ç–æ—Ä—ã–º –º–æ–∂–µ—Ç —Ä–∞–±–æ—Ç–∞—Ç—å —Ç–æ–ª—å–∫–æ –æ–¥–∏–Ω –æ–±—ä–µ–∫—Ç –∫–ª–∞—Å—Å–∞. –î—Ä—É–≥–∏–º–∏ —Ç–∞–∫–∏–º–∏ —Ä–µ—Å—É—Ä—Å–∞–º–∏ –º–æ–≥—É—Ç –±—ã—Ç—å —Ñ–∞–π–ª—ã –∏–ª–∏ —Å–µ—Ç–µ–≤—ã–µ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è. –í –ø–æ–¥–æ–±–Ω—ã—Ö —Å–ª—É—á–∞—è—Ö –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –∏–ª–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –æ–±—ä–µ–∫—Ç–æ–≤ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –∑–∞–ø—Ä–µ—Ç–∏—Ç—å. –î–ª—è —ç—Ç–æ–≥–æ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è = delete.
class File {
public:
    File(const std::string& name) : filename(name) {
        // –û—Ç–∫—Ä—ã—Ç–∏–µ —Ñ–∞–π–ª–∞.
    }
    File(const File&) = delete; // –ó–∞–ø—Ä–µ—â–∞–µ–º –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è.
    File& operator=(const File&) = delete; // –ò –æ–ø–µ—Ä–∞—Ü–∏—é –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è.

    ...
    
private:
    std::string filename;
};

int main() {
    File file_1("Dead_Souls.txt"s);
    File file_2("Dead_Souls_2.txt"s);

    File file_new(file_1); // –û—à–∏–±–∫–∞: –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω.
    file_2 = file_1; // –û—à–∏–±–∫–∞: –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–æ.
}
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Å–æ—Å—Ç–∞–≤–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è
–°–æ—Å—Ç–∞–≤–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø–æ—Ö–æ–∂–∏ –∏ –Ω–∞ –æ–±—ã—á–Ω–æ–µ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ, –∏ –Ω–∞ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–º–∏ –¥–µ–π—Å—Ç–≤–∏—è–º–∏. –û–Ω–∏ –º–µ–Ω—è—é—Ç –∑–Ω–∞—á–µ–Ω–∏–µ –ª–µ–≤–æ–≥–æ –æ–ø–µ—Ä–∞–Ω–¥–∞, –ø—Ä–∏—Å–≤–∞–∏–≤–∞—è –µ–º—É —Ä–µ–∑—É–ª—å—Ç–∞—Ç –≤—ã—Ä–∞–∂–µ–Ω–∏—è.
–û–¥–Ω–∞–∫–æ –∏—Ö –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–µ –±–æ–ª–µ–µ —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ, –ø–æ—Å–∫–æ–ª—å–∫—É –∏–º –Ω–µ –Ω—É–∂–Ω–æ –∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å –ª–µ–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥ –¥–ª—è —Ä–∞—Å—á—ë—Ç–∞. –¢–∞–∫, –ø—Ä–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–∏ –æ–±—ã—á–Ω–æ–π –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–æ–π –æ–ø–µ—Ä–∞—Ü–∏–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä, a = a * b) —Å–æ–∑–¥–∞—ë—Ç—Å—è –Ω–æ–≤—ã–π –æ–±—ä–µ–∫—Ç, —Å–æ–¥–µ—Ä–∂–∞—â–∏–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç —É–º–Ω–æ–∂–µ–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–π –∑–∞—Ç–µ–º –∫–æ–ø–∏—Ä—É–µ—Ç—Å—è –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –∞. –≠—Ç–æ —Ç—Ä–µ–±—É–µ—Ç –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã—Ö —Ä–µ—Å—É—Ä—Å–æ–≤ –Ω–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö –∏ –≤—ã–¥–µ–ª–µ–Ω–∏–µ –ø–∞–º—è—Ç–∏ –¥–ª—è –Ω–æ–≤–æ–≥–æ –æ–±—ä–µ–∫—Ç–∞.
–ü—Ä–∏ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–∏ —Å–∏–Ω–æ–Ω–∏–º–∏—á–Ω–æ–π –∑–∞–ø–∏—Å–∏ a *= b –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –Ω–µ–ø–æ—Å—Ä–µ–¥—Å—Ç–≤–µ–Ω–Ω–æ–µ –∏–∑–º–µ–Ω–µ–Ω–∏–µ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π a, –±–µ–∑ –∫–∞–∫–∏—Ö-–ª–∏–±–æ –≤—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã—Ö –¥–µ–π—Å—Ç–≤–∏–π.
–í –æ—Ç–ª–∏—á–∏–µ –æ—Ç –æ–ø–µ—Ä–∞—Ü–∏–∏ =, –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ —Å–æ—Å—Ç–∞–≤–Ω—ã—Ö –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–π –º–æ–∂–Ω–æ –æ–±—ä—è–≤–ª—è—Ç—å –∫–∞–∫ –≤–Ω—É—Ç—Ä–∏, —Ç–∞–∫ –∏ –≤–Ω–µ –∫–ª–∞—Å—Å–∞. –í –ø–µ—Ä–≤–æ–º —Å–ª—É—á–∞–µ –æ–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏–Ω–∏–º–∞–µ—Ç —Ç–æ–ª—å–∫–æ –æ–¥–∏–Ω –∞—Ä–≥—É–º–µ–Ω—Ç –∏ –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∏–∑–º–µ–Ω–µ–Ω–Ω—ã–π –æ–±—ä–µ–∫—Ç.
struct Point {
    int x, y;
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –¥–ª—è —Å–ª–æ–∂–µ–Ω–∏—è —Ç–æ—á–µ–∫.
    Point& operator+=(const Point& p2) {
        x += p2.x;
        y += p2.y;
        return *this;
    }
};

int main() {
    Point point{0, 0};
    point += Point{10, 20}; // x = 10, y = 20.
}
–ï—Å–ª–∏ –∂–µ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –æ–±—ä—è–≤–ª–µ–Ω–∞ –∫–∞–∫ —Å–≤–æ–±–æ–¥–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è, –ø–µ—Ä–≤—ã–º –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–º –æ–Ω–∞ –¥–æ–ª–∂–Ω–∞ –ø—Ä–∏–Ω–∏–º–∞—Ç—å –ª–µ–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥ (–≤ –Ω–∞—à–µ–º —Å–ª—É—á–∞–µ ‚Äî –æ–±—ä–µ–∫—Ç —Å—Ç—Ä—É–∫—Ç—É—Ä—ã Point).
struct Point {
    int x, y;
};

// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –¥–ª—è –ø—Ä–∏–±–∞–≤–ª–µ–Ω–∏—è —á–∏—Å–ª–∞ –∫ —Ç–æ—á–∫–µ.
Point& operator+=(Point& p1, const int value) {
    p1.x += value;
    p1.y += value;
    return p1;
}

int main() {
    Point point{0, 2};
    point += 5; // x = 5, y = 7.
}
–í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã –ø–æ–∑–Ω–∞–∫–æ–º–∏–ª–∏—Å—å —Å –æ—Å–æ–±–µ–Ω–Ω–æ—Å—Ç—è–º–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –æ–ø–µ—Ä–∞—Ü–∏–π –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è, –±–µ–∑ –∫–æ—Ç–æ—Ä—ã—Ö –Ω–µ –æ–±—Ö–æ–¥–∏—Ç—Å—è –Ω–∏ –æ–¥–∏–Ω –∫–æ–¥. –í –æ—Ç–ª–∏—á–∏–µ –æ—Ç –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–π —Å–æ–∑–¥–∞—ë—Ç –Ω–æ–≤—ã–π –æ–±—ä–µ–∫—Ç –Ω–∞ –æ—Å–Ω–æ–≤–µ –¥–∞–Ω–Ω–æ–≥–æ, –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –ø–µ—Ä–µ–Ω–æ—Å–∏—Ç –∑–Ω–∞—á–µ–Ω–∏–µ –≤ —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ –æ–±—ä–µ–∫—Ç—ã.
–í –ø—Ä–æ—Å—Ç—ã—Ö —Å–ª—É—á–∞—è—Ö –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä —Å–ø–æ—Å–æ–±–µ–Ω —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è (=) —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ, –Ω–æ —Ç–∞–∫–∞—è —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è –ø–æ–¥—Ö–æ–¥–∏—Ç –Ω–µ –≤—Å–µ–≥–¥–∞. –ü–æ—Ä–æ–π –Ω—É–∂–Ω–æ –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—É—é –ª–æ–≥–∏–∫—É (–Ω–∞–ø—Ä–∏–º–µ—Ä, –µ—Å–ª–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–µ –æ—Å—É—â–µ—Å—Ç–≤–ª—è–µ—Ç—Å—è –º–µ–∂–¥—É –æ–±—ä–µ–∫—Ç–∞–º–∏ —Ä–∞–∑–Ω—ã—Ö —Ç–∏–ø–æ–≤ –∏–ª–∏ —Å–≤—è–∑–∞–Ω–æ —Å –≤—ã–¥–µ–ª–µ–Ω–∏–µ–º –ø–∞–º—è—Ç–∏).
–ú–æ–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –∏ —Å–æ—Å—Ç–∞–≤–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–µ —Å–Ω–∞—á–∞–ª–∞ –ø—Ä–æ–∏–∑–≤–æ–¥—è—Ç –≤—ã—á–∏—Å–ª–µ–Ω–∏–µ –Ω–∞–¥ –æ–ø–µ—Ä–∞–Ω–¥–æ–º, –∞ –∑–∞—Ç–µ–º –ø—Ä–∏—Å–≤–∞–∏–≤–∞—é—Ç –µ–º—É —Ä–µ–∑—É–ª—å—Ç–∞—Ç.
–í —Å–ª–µ–¥—É—é—â–µ–º —É—Ä–æ–∫–µ –º—ã —Ä–∞—Å—Å–∫–∞–∂–µ–º, –∫–∞–∫ —Ä–∞–±–æ—Ç–∞—Ç—å —Å –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞–º–∏ –æ–ø–µ—Ä–∞—Ü–∏–π —Å—Ä–∞–≤–Ω–µ–Ω–∏—è.
–ù–µ—Ä–∞–≤–µ–Ω—Å—Ç–≤–∞ –∏–∑ –∫–æ—Å–º–æ–ª—ë—Ç–∞
–û–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è (–∏–ª–∏ –æ—Ç–Ω–æ—à–µ–Ω–∏—è) –≤ C++ —á–∞—Å—Ç–æ —Ç—Ä–µ–±—É—é—Ç –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –¥–ª—è –Ω–µ—Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã—Ö —Ç–∏–ø–æ–≤ –¥–∞–Ω–Ω—ã—Ö. –í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã –Ω–∞—É—á–∏—Ç–µ—Å—å —ç—Ç–æ –¥–µ–ª–∞—Ç—å –∏ —É–∑–Ω–∞–µ—Ç–µ, –∫–∞–∫ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –ø–æ–º–æ–≥–∞—é—Ç —Å —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–æ–π –∏ —á—Ç–æ —É–ø—Ä–æ—Å—Ç–∏—Ç –ª–æ–≥–∏–∫—É –ø–µ—Ä–µ–≥—Ä—É–∑–æ–∫.
–ö —Ä–∞—Å—Å–º–∞—Ç—Ä–∏–≤–∞–µ–º–æ–π –≥—Ä—É–ø–ø–µ –æ—Ç–Ω–æ—Å—è—Ç—Å—è —Å–µ–º—å –æ–ø–µ—Ä–∞—Ü–∏–π:
>, <, >=, <= ‚Äî –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è.
==, != ‚Äî –æ–ø–µ—Ä–∞—Ü–∏–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è —Ä–∞–≤–µ–Ω—Å—Ç–≤–∞.
<=> ‚Äî –æ–ø–µ—Ä–∞—Ü–∏—è —ç–∫–≤–∏–≤–∞–ª–µ–Ω—Ç–Ω–æ—Å—Ç–∏ (–¥—Ä—É–≥–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ ‚Äî spaceship). –û–Ω–∞ –ø–æ—è–≤–∏–ª–∞—Å—å –≤ —è–∑—ã–∫–µ —Å–æ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–æ–º C++20, –∏ –≤ —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã –ø–æ–∑–Ω–∞–∫–æ–º–∏—Ç–µ—Å—å —Å –Ω–µ–π –ø–æ–±–ª–∏–∂–µ.
–ö–∞–∫ –∏ –±–æ–ª—å—à–∞—è —á–∞—Å—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–π, —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –∏–º–µ—é—Ç –ª–µ–≤—É—é –∞—Å—Å–æ—Ü–∏–∞—Ç–∏–≤–Ω–æ—Å—Ç—å (–≤—ã–ø–æ–ª–Ω—è—é—Ç—Å—è —Å–ª–µ–≤–∞ –Ω–∞–ø—Ä–∞–≤–æ), –∞ –≤ –∫–∞—á–µ—Å—Ç–≤–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç true –∏–ª–∏ false. –î–ª—è –º–Ω–æ–≥–∏—Ö –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã—Ö —Ç–∏–ø–æ–≤ –æ–Ω–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é. –ù–∞–ø—Ä–∏–º–µ—Ä, –º–æ–∂–Ω–æ —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ –∑–Ω–∞—á–µ–Ω–∏—è –∏–ª–∏ —ç–ª–µ–º–µ–Ω—Ç—ã enum.
enum class Seasons {
    WINTER, // –ó–∏–º–∞.
    SPRING, // –í–µ—Å–Ω–∞.
    SUMMER, // –õ–µ—Ç–æ.
    AUTUMN  // –û—Å–µ–Ω—å.
};
...
if (Seasons::SPRING < Seasons::SUMMER) {
    std::cout << "–í–µ—Å–Ω–∞ –Ω–∞—Å—Ç—É–ø–∞–µ—Ç —Ä–∞–Ω—å—à–µ –ª–µ—Ç–∞"s;
} 
–ê—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã –Ω–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ –¥–æ–ª–∂–Ω—ã –±—ã—Ç—å –æ–¥–Ω–æ–≥–æ —Ç–∏–ø–∞: –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ –ø—Ä–∏–≤–µ–¥–µ—Ç –∏—Ö –∫ –æ–¥–Ω–æ–º—É —Ç–∏–ø—É –ø–µ—Ä–µ–¥ —Ç–µ–º, –∫–∞–∫ –≤—ã–ø–æ–ª–Ω–∏—Ç—å —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ. –ö–æ–Ω–µ—á–Ω–æ, —ç—Ç–æ —Å–ø—Ä–∞–≤–µ–¥–ª–∏–≤–æ —Ç–æ–ª—å–∫–æ –¥–ª—è —Ç–µ—Ö —Å–ª—É—á–∞–µ–≤, –∫–æ–≥–¥–∞ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–µ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–µ —Ç–∏–ø–æ–≤ –≤–æ–∑–º–æ–∂–Ω–æ (–Ω–∞–ø—Ä–∏–º–µ—Ä, —Å—Ä–∞–≤–Ω–∏—Ç—å —Å—Ç—Ä–æ–∫—É –∏ —á–∏—Å–ª–æ –Ω–µ –ø–æ–ª—É—á–∏—Ç—Å—è).
int a = 27;
double b = 27.006;
// –î–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –∑–Ω–∞—á–µ–Ω–∏–µ –∏–∑ –∞ –ø—Ä–∏–≤–æ–¥–∏—Ç—Å—è –∫ —Ç–∏–ø—É double.
std::cout << "b –±–æ–ª—å—à–µ? - "s << (a < b ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl; // –î–∞.
–ö—Ä–æ–º–µ —Ç–æ–≥–æ, –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –¥–ª—è —Ç–∞–∫–∏—Ö —Ç–∏–ø–æ–≤, –∫–∞–∫ —Å—Ç—Ä–æ–∫–∏, –ø–∞—Ä—ã –∏ –≤–µ–∫—Ç–æ—Ä—ã. –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ –æ–Ω–∏ –¥–µ–π—Å—Ç–≤—É—é—Ç –ª–µ–∫—Å–∏–∫–æ–≥—Ä–∞—Ñ–∏—á–µ—Å–∫–∏, —Ç–æ –µ—Å—Ç—å –ø–æ—ç–ª–µ–º–µ–Ω—Ç–Ω–æ. –ù–∞–ø—Ä–∏–º–µ—Ä, —Å—Ç—Ä–æ–∫–∏ –±—É–¥—É—Ç —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å—Å—è –ø–æ—Å–∏–º–≤–æ–ª—å–Ω–æ –≤ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–∏ —Å –∞–ª—Ñ–∞–≤–∏—Ç–Ω—ã–º –ø–æ—Ä—è–¥–∫–æ–º.

auto line_1 = "–ï—Å–ª–∏ —Ç—ã —Å—á–∞—Å—Ç–ª–∏–≤—ã–π –∫–æ—Ç–∏–∫, —Å–∫–∞–∂–∏ –º—è—É"s;
auto line_2 = "–ï—Å–ª–∏ —Ç—ã –ª—é–±–∏–º—ã–π –∫–æ—Ç–∏–∫, —Å–∫–∞–∂–∏ –º—è—É"s;

// –ë—É–∫–≤–∞ "–ª" (–∏–∑ —Å–ª–æ–≤–∞ "–ª—é–±–∏–º—ã–π") –∏–¥—ë—Ç —Ä–∞–Ω—å—à–µ 
// –±—É–∫–≤—ã "—Å" (–∏–∑ —Å–ª–æ–≤–∞ "—Å—á–∞—Å—Ç–ª–∏–≤—ã–π").
if (line_1 > line_2) {
    std::cout << "–í—Ç–æ—Ä–∞—è —Å—Ç—Ä–æ–∫–∞ –∏–¥—ë—Ç —Ä–∞–Ω—å—à–µ"s << std::endl;
}
–í –ø–∞—Ä–∞—Ö –±—É–¥—É—Ç —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å—Å—è —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–∏–µ —ç–ª–µ–º–µ–Ω—Ç—ã.
auto sportsman_1 = std::pair<int, int>{167, 52};
auto sportsman_2 = std::pair<int, int>{167, 66};

// –ü–µ—Ä–≤—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã —Ä–∞–≤–Ω—ã, –Ω–æ 52 –º–µ–Ω—å—à–µ 66.
if (sportsman_1 < sportsman_2) {
    std::cout << "–ü–µ—Ä–≤—ã–π —Å–ø–æ—Ä—Ç—Å–º–µ–Ω –º–µ–Ω—å—à–µ"s << std::endl;
}
–û–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –∑–∞–¥–∞—é—Ç –æ—Ç–Ω–æ—à–µ–Ω–∏–µ –ø–æ—Ä—è–¥–∫–∞ —ç–ª–µ–º–µ–Ω—Ç–æ–≤, –∫–æ—Ç–æ—Ä–æ–µ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è –º–Ω–æ–≥–∏—Ö –∞–ª–≥–æ—Ä–∏—Ç–º–æ–≤, –≤ —Ç–æ–º —á–∏—Å–ª–µ –¥–ª—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏. –ß—Ç–æ–±—ã —ç—Ç–∏ –∞–ª–≥–æ—Ä–∏—Ç–º—ã —Ä–∞–±–æ—Ç–∞–ª–∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ, –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ, —á—Ç–æ–±—ã –ø–æ—Ä—è–¥–æ–∫ —É–¥–æ–≤–ª–µ—Ç–≤–æ—Ä—è–ª —Ä—è–¥—É —É—Å–ª–æ–≤–∏–π. –ù–∞–ø—Ä–∏–º–µ—Ä, –µ—Å–ª–∏ a < b –∏ b < —Å, —Ç–æ a < c. –ï—Å–ª–∏ –≤–µ—Ä–Ω–æ a < b, —Ç–æ —É—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ b < a –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –ª–æ–∂–Ω—ã–º.
–ü—Ä–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–µ –≤—ã –º–æ–∂–µ—Ç–µ –∑–∞–¥–∞–≤–∞—Ç—å –ª—é–±—ã–µ –ø—Ä–∞–≤–∏–ª–∞ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è, –≤ —Ç–æ–º —á–∏—Å–ª–µ –Ω–∞—Ä—É—à–∞—é—â–∏–µ —ç—Ç–∏ —É—Å–ª–æ–≤–∏—è. –ù–æ –≤ —ç—Ç–æ–º —Å–ª—É—á–∞–µ –∞–ª–≥–æ—Ä–∏—Ç–º—ã, –ø–æ–ª–∞–≥–∞—é—â–∏–µ—Å—è –Ω–∞ –æ—Ç–Ω–æ—à–µ–Ω–∏–µ –ø–æ—Ä—è–¥–∫–∞, –Ω–µ –±—É–¥—É—Ç —Ä–∞–±–æ—Ç–∞—Ç—å –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ.
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Å—Ä–∞–≤–Ω–µ–Ω–∏–π
–û–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –º–æ–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –∫–∞–∫ –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞, —Ç–∞–∫ –∏ –≤ –≤–∏–¥–µ —Å–≤–æ–±–æ–¥–Ω—ã—Ö —Ñ—É–Ω–∫—Ü–∏–π. –ö–∞–∫ –ø—Ä–∞–≤–∏–ª–æ, –≤—Ç–æ—Ä–æ–π —Å–ø–æ—Å–æ–± –ø—Ä–µ–¥–ø–æ—á—Ç–∏—Ç–µ–ª—å–Ω–µ–µ. –°–∏–Ω—Ç–∞–∫—Å–∏—Å –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –∞–Ω–∞–ª–æ–≥–∏—á–µ–Ω —Ç–æ–º—É, —á—Ç–æ –≤—ã –∏–∑—É—á–∏–ª–∏ –≤ –ø—Ä–æ—à–ª—ã—Ö —É—Ä–æ–∫–∞—Ö. –í –∫–∞—á–µ—Å—Ç–≤–µ –ø—Ä–∏–º–µ—Ä–∞ –ø–µ—Ä–µ–≥—Ä—É–∑–∏–º –æ–ø–µ—Ä–∞—Ü–∏—é < –¥–ª—è –∫–ª–∞—Å—Å–∞ VectorInt. –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é –≤–µ–∫—Ç–æ—Ä—ã —Å—Ä–∞–≤–Ω–∏–≤–∞—é—Ç—Å—è –ø–æ –∑–Ω–∞—á–µ–Ω–∏—è–º —ç–ª–µ–º–µ–Ω—Ç–æ–≤, –Ω–æ –º—ã —Å–¥–µ–ª–∞–µ–º —Ç–∞–∫, —á—Ç–æ–±—ã —Å—Ä–∞–≤–Ω–∏–≤–∞–ª–∏—Å—å —Ä–∞–∑–º–µ—Ä—ã —Å–∞–º–∏—Ö –≤–µ–∫—Ç–æ—Ä–æ–≤.
class VectorInt {
public: 
    VectorInt(std::vector<int> data): data_(data) {}
    
    int GetLength() const {
        return data_.size();
    }
    ...
private:
    std::vector<int> data_;
};

bool operator<(const VectorInt& lhs, const VectorInt& rhs) {
    return lhs.GetLength() < rhs.GetLength();
}
–ü—Ä–∏–º–µ—Ä —Ä–∞–±–æ—Ç—ã –æ–ø–µ—Ä–∞—Ü–∏–∏:
VectorInt vec_1({100, 3});
VectorInt vec_2({1, 2, 3});
if (vec_1 < vec_2) {
    std::cout << "–ü–µ—Ä–≤—ã–π –≤–µ–∫—Ç–æ—Ä –∫–æ—Ä–æ—á–µ"s;
}
–ü–æ—Ä–æ–π –º—ã —Å—Ç–∞–ª–∫–∏–≤–∞–µ–º—Å—è —Å –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç—å—é —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã–µ –æ–±—ä–µ–∫—Ç—ã, –Ω–∞–ø—Ä–∏–º–µ—Ä —Å—Ç—Ä—É–∫—Ç—É—Ä—ã, –∏–º–µ—é—â–∏–µ –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø–æ–ª–µ–π.
struct Person {
    std::string first_name;  // –ò–º—è.
    std::string middle_name; // –°—Ä–µ–¥–Ω–µ–µ –∏–º—è.
    std::string surname;     // –§–∞–º–∏–ª–∏—è.
};
–ù—É–∂–Ω–æ –≤—ã–ø–æ–ª–Ω—è—Ç—å —Ç–∞–∫–æ–µ —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ –ª–µ–∫—Å–∏–∫–æ–≥—Ä–∞—Ñ–∏—á–µ—Å–∫–∏, —Ç–æ –µ—Å—Ç—å —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å –ø–æ–ª—è –≤ –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–º –ø–æ—Ä—è–¥–∫–µ: —Ñ–∞–º–∏–ª–∏—è, –∏–º—è, —Å—Ä–µ–¥–Ω–µ–µ –∏–º—è. –ß—Ç–æ–±—ã —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å —ç—Ç—É –ª–æ–≥–∏–∫—É, —Ç—Ä–µ–±—É–µ—Ç—Å—è –¥–æ–≤–æ–ª—å–Ω–æ –º–Ω–æ–≥–æ –∫–æ–¥–∞.
bool operator<(const Person& lhs, const Person& rhs) {
    // –ï—Å–ª–∏ —Ñ–∞–º–∏–ª–∏–∏ –Ω–µ —Ä–∞–≤–Ω—ã, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç –∏—Ö —Å—Ä–∞–≤–Ω–µ–Ω–∏—è.
    if (lhs.surname != rhs.surname) {   
        return lhs.surname < rhs.surname;
    }
    // –ï—Å–ª–∏ –∏–º–µ–Ω–∞ –Ω–µ —Ä–∞–≤–Ω—ã, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç –∏—Ö —Å—Ä–∞–≤–Ω–µ–Ω–∏—è.
    if (lhs.first_name != rhs.first_name) { 
        return lhs.first_name < rhs.first_name; 
    }
    // –í–æ–∑–≤—Ä–∞—â–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç —Å—Ä–∞–≤–Ω–µ–Ω–∏—è —Å—Ä–µ–¥–Ω–∏—Ö –∏–º—ë–Ω. 
    return lhs.middle_name < rhs.middle_name;
}
–≠—Ç–æ–≥–æ –º–æ–∂–Ω–æ –∏–∑–±–µ–∂–∞—Ç—å, –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–≤ –Ω—É–∂–Ω—ã–µ –ø–æ–ª—è —Å—Ç—Ä—É–∫—Ç—É—Ä—ã –≤ –µ–¥–∏–Ω—ã–π –æ–±—ä–µ–∫—Ç —Å –ø–æ–º–æ—â—å—é —Ñ—É–Ω–∫—Ü–∏–∏ std::tie –∏–∑ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ tuple. –¢–∞–∫–∏–µ –æ–±—ä–µ–∫—Ç—ã –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –º–æ–∂–µ—Ç —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å —Å–∞–º.
// –ü–æ–¥–∫–ª—é—á–∞–µ–º –±–∏–±–ª–∏–æ—Ç–µ–∫—É, —á—Ç–æ–±—ã –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å tie.
#include <tuple> 
struct Person {
    ...
    auto ListToCompare() const {
        // –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç {—Ñ–∞–º–∏–ª–∏—è, –∏–º—è, —Å—Ä–µ–¥–Ω–µ–µ –∏–º—è}.
        return std::tie(surname, first_name, middle_name); 
    }
};
bool operator<(const Person& lhs, const Person& rhs) {
    // –°—Ä–∞–≤–Ω–∏–≤–∞–µ–º –æ–±—ä–µ–∫—Ç—ã.
    return lhs.ListToCompare() < rhs.ListToCompare();
}
...
Person person_1("Richard"s, "Phillips"s, "Feynman"s);
Person person_2("John"s, "Archibald"s, "Wheeler"s);
if (person_1 < person_2) {
    std::cout << "–ü–µ—Ä–≤–æ–µ –∏–º—è –∏–¥—ë—Ç —Ä–∞–Ω—å—à–µ"s;
}
–ö–∞–∫ –≤–∏–¥–∏—Ç–µ, –∫–æ–¥ –æ–ø–µ—Ä–∞—Ü–∏–∏ —Å—Ç–∞–ª –≥–æ—Ä–∞–∑–¥–æ –∫–æ–º–ø–∞–∫—Ç–Ω–µ–µ. –¢–µ–ø–µ—Ä—å –Ω–µ –Ω—É–∂–Ω–æ –¥—É–±–ª–∏—Ä–æ–≤–∞—Ç—å —Å–ª–æ–∂–Ω—É—é –ª–æ–≥–∏–∫—É, —á—Ç–æ —É–ø—Ä–æ—â–∞–µ—Ç —Ä–∞–±–æ—Ç—É –∏ —É–º–µ–Ω—å—à–∞–µ—Ç –≤–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç—å –æ—à–∏–±–∫–∏.
–ö–æ–≥–¥–∞ –º—ã –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ–º –æ–¥–Ω—É –æ–ø–µ—Ä–∞—Ü–∏—é —Å—Ä–∞–≤–Ω–µ–Ω–∏—è, –∂–µ–ª–∞—Ç–µ–ª—å–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –∏ –æ—Å—Ç–∞–ª—å–Ω—ã–µ. –í–µ–¥—å –µ—Å–ª–∏ –∫—Ç–æ-–Ω–∏–±—É–¥—å –æ–¥–Ω–∞–∂–¥—ã –≤–æ—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –Ω–∞—à–∏–º–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞–º–∏, —Å –µ–≥–æ —Å—Ç–æ—Ä–æ–Ω—ã –±—É–¥–µ—Ç –ª–æ–≥–∏—á–Ω–æ –æ–∂–∏–¥–∞—Ç—å, —á—Ç–æ –≤–º–µ—Å—Ç–µ —Å < –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∏ >, –∏ == –≤–º–µ—Å—Ç–µ —Å !=. 
–ù–æ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç—ã –∏ –∑–¥–µ—Å—å –Ω–∞—Ö–æ–¥—è—Ç —Å–ø–æ—Å–æ–± –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞—Ç—å –∫–æ–¥: –≤–º–µ—Å—Ç–æ —Ç–æ–≥–æ, —á—Ç–æ–±—ã —Å –Ω—É–ª—è –ø–∏—Å–∞—Ç—å –≤—Å–µ –æ–ø–µ—Ä–∞—Ü–∏–∏, –º–æ–∂–Ω–æ –æ–ø–∏—Å–∞—Ç—å –ª–æ–≥–∏–∫—É —Ç–æ–ª—å–∫–æ –¥–ª—è < –∏ –≤—ã—Ä–∞–∑–∏—Ç—å –æ—Å—Ç–∞–ª—å–Ω—ã–µ —á–µ—Ä–µ–∑ –Ω–µ—ë. 
–ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Å—Ä–∞–≤–Ω–µ–Ω–∏–π –≤ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–µ C++20
–•–∏—Ç—Ä—ã–π –ø–æ–¥—Ö–æ–¥ —Å –≤—ã—Ä–∞–∂–µ–Ω–∏–µ–º –≤—Å–µ—Ö –æ–ø–µ—Ä–∞—Ü–∏–π —á–µ—Ä–µ–∑ –æ–¥–Ω—É –∑–Ω–∞—á–∏—Ç–µ–ª—å–Ω–æ —É–ø—Ä–æ—â–∞–µ—Ç —Ä–∞–∑—Ä–∞–±–æ—Ç–∫—É. –ù–æ —Å –ø–æ—è–≤–ª–µ–Ω–∏–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–∞ C++20 —Ö–∏—Ç—Ä–∏—Ç—å –±–æ–ª—å—à–µ –Ω–µ –Ω—É–∂–Ω–æ: –≤ —ç—Ç–æ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–µ –ø–æ—è–≤–ª—è–µ—Ç—Å—è –æ–ø–µ—Ä–∞—Ü–∏—è spaceship (<=>), –∏–∑–±–∞–≤–ª—è—é—â–∞—è –æ—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏ –ø–µ—Ä–µ–≥—Ä—É–∂–∞—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–∏ –≤—Ä—É—á–Ω—É—é. –î–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ç–æ–ª—å–∫–æ –µ—ë, –∏ –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≤—ã–≤–µ–¥–µ—Ç –≤—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ (<, <=, >, >=).
auto operator<=>(const VectorInt& lhs, const VectorInt& rhs) {
    return lhs.GetLength() <=> rhs.GetLength();
}
...
VectorInt v1({1, 2});
VectorInt v2({0, 0, 0});
std::cout << "v1 –±–æ–ª—å—à–µ? - "s << (v1 > v2 ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl; // –ù–µ—Ç.
std::cout << "v2 –±–æ–ª—å—à–µ? - "s << (v1 < v2 ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl; // –î–∞.
–í –∫–∞—á–µ—Å—Ç–≤–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ <=> –¥–æ–ª–∂–Ω–∞ –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å –∑–∞–ø–∏—Å—å <–ª–µ–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥> <=> <–ø—Ä–∞–≤—ã–π –æ–ø–µ—Ä–∞–Ω–¥>.
–û–ø–µ—Ä–∞—Ü–∏–∏ —Ä–∞–≤–µ–Ω—Å—Ç–≤–∞ (== –∏ !=) –≤—Å—ë —Ä–∞–≤–Ω–æ –Ω—É–∂–Ω–æ –æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –æ—Ç–¥–µ–ª—å–Ω–æ, –æ–¥–Ω–∞–∫–æ –≤ C++20 –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –Ω–∞–ø–∏—Å–∞—Ç—å —Ç–æ–ª—å–∫–æ –æ–¥–Ω—É –∏–∑ –Ω–∏—Ö.
auto operator==(const VectorInt& lhs, const VectorInt& rhs) {
    return lhs.GetLength() == rhs.GetLength();
}
...
// –û–ø–µ—Ä–∞—Ü–∏—è == —Ä–∞–±–æ—Ç–∞–µ—Ç.
std::cout << "v1 –∏ v2 —Ä–∞–≤–Ω—ã? - "s 
          << (v1 == v2 ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl; // –ù–µ—Ç.
// –ò –æ–ø–µ—Ä–∞—Ü–∏—è != —Ç–æ–∂–µ.
std::cout << "v1 –∏ v2 –Ω–µ —Ä–∞–≤–Ω—ã? - " 
          << (v1 != v2 ? "–¥–∞" : "–Ω–µ—Ç") << std::endl; // –î–∞.
}
–†–∞–∑–Ω—ã–µ –≤–∏–¥—ã —Å—Ä–∞–≤–Ω–µ–Ω–∏—è
–õ–æ–≥–∏–∫–∞ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –æ–±—ä–µ–∫—Ç–æ–≤ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ä–∞–∑–Ω–æ–π. –ù–∞–ø—Ä–∏–º–µ—Ä, —Å—Ç—Ä–æ–∫–∏ –º–æ–∂–Ω–æ —Å—Ä–∞–≤–Ω–∏–≤–∞—Ç—å —Å —É—á—ë—Ç–æ–º —Ä–µ–≥–∏—Å—Ç—Ä–∞ –∏–ª–∏ –±–µ–∑. –í –ø–µ—Ä–≤–æ–º —Å–ª—É—á–∞–µ —Å–ª–æ–≤–∞ meow –∏ MeOw –±—É–¥—É—Ç —Å—á–∏—Ç–∞—Ç—å—Å—è —Ä–∞–∑–Ω—ã–º–∏ (—Ç–∞–∫ —Ä–∞–±–æ—Ç–∞–µ—Ç —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ —Å—Ç—Ä–æ–∫ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é), –∞ –≤–æ –≤—Ç–æ—Ä–æ–º ‚Äî –æ–¥–∏–Ω–∞–∫–æ–≤—ã–º–∏.
–î–ª—è std::string –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Å—Ä–∞–≤–Ω–µ–Ω–∏–µ –Ω–µ–ª—å–∑—è. –û–¥–Ω–∏–º –∏–∑ –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤ —Ä–µ—à–µ–Ω–∏—è –ø—Ä–æ–±–ª–µ–º—ã –º–æ–∂–µ—Ç –±—ã—Ç—å —Å–æ–∑–¥–∞–Ω–∏–µ —Å–æ–±—Å—Ç–≤–µ–Ω–Ω–æ–≥–æ –∫–ª–∞—Å—Å–∞ String.
class String {
public:
    String(std::string data = ""s): data_(data) {}
  
    // –ü–µ—Ä–µ–≤–æ–¥–∏—Ç —Å—Ç—Ä–æ–∫—É –≤ –Ω–∏–∂–Ω–∏–π —Ä–µ–≥–∏—Å—Ç—Ä.
    std::string ToLower() const { 
        std::string result = data_;
        for(char& ch : result) {
            ch = tolower(ch);
        }
        return result; 
    }
private:
    std::string data_;
};

// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –¥–ª—è String.
bool operator==(const String& lhs, const String& rhs) {
    return lhs.ToLower() == rhs.ToLower();
}
–í —Ç–∞–∫–æ–º —Ñ–æ—Ä–º–∞—Ç–µ –¥–ª—è —Å—Ç—Ä–æ–∫ –±—É–¥–µ—Ç –¥–µ–π—Å—Ç–≤–æ–≤–∞—Ç—å –¥–∞–Ω–Ω–æ–µ –ø—Ä–∞–≤–∏–ª–æ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è –±–µ–∑ —É—á–µ—Ç–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞.
String line_1{"Mew"s};
String line_2{"mew"s};

if (line_1 == line_2) {
    std::cout << "–°—Ç—Ä–æ–∫–∏ —Ä–∞–≤–Ω—ã"s;
}
–î–ª—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏ –≤–µ–∫—Ç–æ—Ä–æ–≤ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç —Ñ—É–Ω–∫—Ü–∏—è sort, –∫–æ—Ç–æ—Ä–∞—è —Ä–∞–±–æ—Ç–∞–µ—Ç, –µ—Å–ª–∏ —ç–ª–µ–º–µ–Ω—Ç—ã –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞—é—Ç –æ–ø–µ—Ä–∞—Ü–∏—é <. –ü—Ä–∏ —ç—Ç–æ–º –∏—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –º–µ—Ç–æ–¥—ã begin –∏ end, –æ–∑–Ω–∞—á–∞—é—â–∏–µ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫—É –æ—Ç –Ω–∞—á–∞–ª–∞ –∏ –¥–æ –∫–æ–Ω—Ü–∞. –í–æ—Ç –∫–∞–∫ —ç—Ç–æ –¥–µ–ª–∞–µ—Ç—Å—è.
// –ü–æ–¥–∫–ª—é—á–∞–µ–º –¥–ª—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏.
#include <algorithm> 
...
// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –¥–ª—è Point.
bool operator<(const Point& lhs, const Point& rhs) {
    if (lhs.x != rhs.x) { 
        return lhs.x < rhs.x; 
    }
    return lhs.y < rhs.y;
}

int main() {
    std::vector<Point> points{{4, 5}, {5, 7}, {4, 0}, {5, 0}};
    std::sort(points.begin(), points.end()); // –°–æ—Ä—Ç–∏—Ä—É–µ–º –≤–µ–∫—Ç–æ—Ä.
  
    // –ü–µ—á–∞—Ç–∞–µ–º –≤–µ–∫—Ç–æ—Ä. –†–µ–∑—É–ª—å—Ç–∞—Ç: (4, 0) (4, 5) (5, 0) (5, 7).
    for (auto point : points) {
        std::cout << "("s << point.x << ", "s << point.y << ") "s;
    }
}
–ü–æ—Å–ª–µ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏ —ç–ª–µ–º–µ–Ω—Ç—ã –≤–µ–∫—Ç–æ—Ä–∞ –≤—ã—Å—Ç—Ä–∞–∏–≤–∞—é—Ç—Å—è –≤ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–∏ —Å —É–∫–∞–∑–∞–Ω–Ω—ã–º –ø–æ—Ä—è–¥–∫–æ–º (—Å–Ω–∞—á–∞–ª–∞ —Å—Ä–∞–≤–Ω–∏–≤–∞—é—Ç—Å—è –ø–µ—Ä–≤—ã–µ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã, –∑–∞—Ç–µ–º –≤—Ç–æ—Ä—ã–µ): (4, 0) (4, 5) (5, 0) (5, 7).
–ö–∞–∫ –∏–∑–º–µ–Ω–∏—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –æ–ø–µ—Ä–∞—Ü–∏–∏ <, —á—Ç–æ–±—ã —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å —Ç–æ—á–∫–∏ –ø–æ —É–¥–∞–ª—ë–Ω–Ω–æ—Å—Ç–∏ –æ—Ç –Ω–∞—á–∞–ª–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç? –†–∞—Å—Å—Ç–æ—è–Ω–∏–µ –º–æ–∂–Ω–æ —Ä–∞—Å—Å—á–∏—Ç–∞—Ç—å –ø–æ —Ç–µ–æ—Ä–µ–º–µ –ü–∏—Ñ–∞–≥–æ—Ä–∞. 
–ü—Ä–∏–º–µ—Ä —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏: 
std::vector<Point> points{{0, 4}, {5, -1}, {4, 0}, {5, 0}};
std::sort(points.begin(), points.end()); // –°–æ—Ä—Ç–∏—Ä—É–µ–º –≤–µ–∫—Ç–æ—Ä.
// –†–µ–∑—É–ª—å—Ç–∞—Ç: (0, 4) (4, 0) (5, 0) (5, -1).
–í —ç—Ç–æ–º —É—Ä–æ–∫–µ –≤—ã –ø–æ–∑–Ω–∞–∫–æ–º–∏–ª–∏—Å—å —Å –æ–ø–µ—Ä–∞—Ü–∏—è–º–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏—è. –î–ª—è –º–Ω–æ–≥–∏—Ö –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã—Ö —Ç–∏–ø–æ–≤ –æ–Ω–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é, –Ω–æ –ø–æ—Ä–æ–π –Ω—É–∂–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –∏—Ö –¥–ª—è —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—ã—Ö –∫–ª–∞—Å—Å–æ–≤ –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä. –ü–µ—Ä–µ–≥—Ä—É–∂–∞—è —ç—Ç–∏ –æ–ø–µ—Ä–∞—Ü–∏–∏, –º—ã –∑–∞–¥–∞–µ–º –ø—Ä–∞–≤–∏–ª–∞ —É–ø–æ—Ä—è–¥–æ—á–∏–≤–∞–Ω–∏—è –æ–±—ä–µ–∫—Ç–æ–≤, –∫–æ—Ç–æ—Ä—ã–µ –º–æ–≥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –≤ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–µ.
–°—Ç–∞–Ω–¥–∞—Ä—Ç C++20 –ø–æ–∑–≤–æ–ª—è–µ—Ç –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å —Ç–æ–ª—å–∫–æ –æ–ø–µ—Ä–∞—Ü–∏–∏ <=> –∏ ==, –Ω–∞ –æ—Å–Ω–æ–≤–µ –∫–æ—Ç–æ—Ä—ã—Ö –±—É–¥—É—Ç —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω—ã –æ—Å—Ç–∞–ª—å–Ω—ã–µ. –í –ø—Ä–µ–¥—ã–¥—É—â–∏—Ö —Å—Ç–∞–Ω–¥–∞—Ä—Ç–∞—Ö –≤—Å–µ —à–µ—Å—Ç—å –æ–ø–µ—Ä–∞—Ü–∏–π –Ω—É–∂–Ω–æ –æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –≤—Ä—É—á–Ω—É—é. –ß—Ç–æ–±—ã —É–ø—Ä–æ—Å—Ç–∏—Ç—å –∑–∞–¥–∞—á—É, –º–æ–∂–Ω–æ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è —É–∂–µ —Å–æ–∑–¥–∞–Ω–Ω—ã–º–∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞–º–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –≤—ã—Ä–∞–∑–∏—Ç—å –æ—Å—Ç–∞–≤—à–∏–µ—Å—è –æ–ø–µ—Ä–∞—Ü–∏–∏ —á–µ—Ä–µ–∑ < –∏–ª–∏ >).
–í —Å–ª–µ–¥—É—é—â–µ–º —É—Ä–æ–∫–µ –º—ã –ø–æ–≥–æ–≤–æ—Ä–∏–º –æ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–∏ —Ç–∏–ø–æ–≤ –∏ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–µ –æ–ø–µ—Ä–∞—Ü–∏–π, –ø—Ä–∏–º–µ–Ω—è–µ–º—ã—Ö –¥–ª—è —ç—Ç–æ–π —Ü–µ–ª–∏.
–Ø–≤–Ω–æ–µ –∏ –Ω–µ—è–≤–Ω–æ–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ —Ç–∏–ø–æ–≤
–í —Å–∞–º—ã—Ö –ø–µ—Ä–≤—ã—Ö —É—Ä–æ–∫–∞—Ö –º—ã –≥–æ–≤–æ—Ä–∏–ª–∏, —á—Ç–æ C++ ‚Äî —Å—Ç—Ä–æ–≥–æ —Ç–∏–ø–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —è–∑—ã–∫. –ö–∞–∂–¥–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –æ—Ç–Ω–æ—Å–∏—Ç—Å—è –∫ –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–º—É —Ç–∏–ø—É –¥–∞–Ω–Ω—ã—Ö (—Ü–µ–ª–æ–µ —á–∏—Å–ª–æ, —Å—Ç—Ä–æ–∫–∞, –∫–ª–∞—Å—Å), –∫–æ—Ç–æ—Ä—ã–π –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ–ø—Ä–µ–¥–µ–ª—ë–Ω –Ω–∞ –ø—Ä–æ—Ç—è–∂–µ–Ω–∏–∏ –≤—Å–µ–≥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã. –í —è–∑—ã–∫–µ —Å—É—â–µ—Å—Ç–≤—É—é—Ç –º–µ—Ö–∞–Ω–∏–∑–º—ã, –ø–æ–∑–≤–æ–ª—è—é—â–∏–µ –ø—Ä–∏–≤–æ–¥–∏—Ç—å (–ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤—ã–≤–∞—Ç—å) –æ–¥–Ω–∏ —Ç–∏–ø—ã –∫ –¥—Ä—É–≥–∏–º. –í —ç—Ç–æ–º —É—Ä–æ–∫–µ –º—ã —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–æ—Ü–µ—Å—Å –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è —Ç–∏–ø–æ–≤ –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ –∫–ª–∞—Å—Å–æ–≤, –∞ —Ç–∞–∫–∂–µ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏, –ø–æ–∑–≤–æ–ª—è—é—â–∏–µ –ø—Ä–µ–≤—Ä–∞—â–∞—Ç—å –æ–±—ä–µ–∫—Ç—ã –∫–ª–∞—Å—Å–æ–≤ –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä –≤ –¥—Ä—É–≥–∏–µ —Ç–∏–ø—ã –¥–∞–Ω–Ω—ã—Ö.
–í –ø—Ä–æ—Ü–µ—Å—Å–µ –Ω–∞–ø–∏—Å–∞–Ω–∏—è –∫–æ–¥–∞ –ø–æ—Ä–æ–π –ø—Ä–æ–∏—Å—Ö–æ–¥—è—Ç —Å–∏—Ç—É–∞—Ü–∏–∏, –∫–æ–≥–¥–∞ –Ω—É–∂–Ω–æ –∏–∑–º–µ–Ω–∏—Ç—å —Ç–∏–ø –∑–Ω–∞—á–µ–Ω–∏—è. –≠—Ç–æ —Ä–µ–¥–∫–æ –ø—Ä–∏—Ö–æ–¥–∏—Ç—Å—è –¥–µ–ª–∞—Ç—å —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ, –Ω–æ –∏–Ω–æ–≥–¥–∞ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç—å –≤—Å—ë –∂–µ –≤–æ–∑–Ω–∏–∫–∞–µ—Ç ‚Äî –Ω–∞–ø—Ä–∏–º–µ—Ä, –ø—Ä–∏ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏–∏ –∏–ª–∏ —Å—Ä–∞–≤–Ω–µ–Ω–∏–∏. –î–ª—è –ø—Ä–æ—Å—Ç—ã—Ö —Ç–∏–ø–æ–≤ –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –º–æ–∂–µ—Ç —Å–¥–µ–ª–∞—Ç—å —ç—Ç–æ —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ.
int value = false // value = 0.
–í —ç—Ç–æ–º –ø—Ä–∏–º–µ—Ä–µ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–µ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ: —Ç–∏–ø bool —Ç—Ä–µ–±—É–µ—Ç –º–µ–Ω—å—à–µ –±–∞–π—Ç–æ–≤, —á–µ–º int. –¢–∞–∫–æ–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ –Ω–∞–∑—ã–≤–∞–µ—Ç—Å—è –≤–æ—Å—Ö–æ–¥—è—â–∏–º, –∏ –æ–Ω–æ –Ω–µ –ø—Ä–∏–≤–æ–¥–∏—Ç –∫ –ø–æ—Ç–µ—Ä–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ (—Ö–æ—Ç—è –Ω–∞ –ø—Ä–∞–∫—Ç–∏–∫–µ –ø—Ä–µ–≤—Ä–∞—â–∞—Ç—å bool –≤ int —Ç–∞–∫–∏–º –æ–±—Ä–∞–∑–æ–º –≤—Å—ë –∂–µ –Ω–µ —Å—Ç–æ–∏—Ç).
–ï—Å–ª–∏ –º—ã –ø–æ–ø—ã—Ç–∞–µ–º—Å—è –ø—Ä–∏–≤–µ—Å—Ç–∏ –±–æ–ª—å—à–∏–π —Ç–∏–ø –∫ –º–µ–Ω—å—à–µ–º—É, —Ç–æ –µ—Å—Ç—å –≤—ã–ø–æ–ª–Ω–∏—Ç—å –Ω–∏—Å—Ö–æ–¥—è—â–µ–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç —Ä–∏—Å–∫ –ø–æ–ª—É—á–∏—Ç—å –ø–µ—Ä–µ–ø–æ–ª–Ω–µ–Ω–∏–µ –∏–ª–∏ –ø–æ—Ç–µ—Ä—è—Ç—å —Ä–∞–∑—Ä—è–¥—ã, —á—Ç–æ –≤ –∏—Ç–æ–≥–µ –º–æ–∂–µ—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ –Ω–µ–≤–µ—Ä–Ω–æ–º—É —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É.
int64_t big_value = 10005000000;
int value = big_value; // –ü–µ—Ä–µ–ø–æ–ª–Ω–µ–Ω–∏–µ: value = 1415065408.
–° —Ç–∞–∫–∏–º–∏ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è–º–∏ —Å–ª–µ–¥—É–µ—Ç –±—ã—Ç—å –æ—Å–æ–±–µ–Ω–Ω–æ –æ—Å—Ç–æ—Ä–æ–∂–Ω—ã–º–∏ –∏ –Ω–µ –¥–æ–≤–µ—Ä—è—Ç—å –∏—Ö –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä—É.
–ù–∞ –æ—Å–Ω–æ–≤–µ —ç—Ç–æ–≥–æ –º–æ–∂–Ω–æ –≤—ã–¥–µ–ª–∏—Ç—å –µ—â—ë –æ–¥–Ω—É –∫–ª–∞—Å—Å–∏—Ñ–∏–∫–∞—Ü–∏—é –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–π: —è–≤–Ω—ã–µ –∏ –Ω–µ—è–≤–Ω—ã–µ. –ù–µ—è–≤–Ω—ã–µ (–∞–Ω–≥–ª. implicit) –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–æ–≤ ‚Äî —ç—Ç–æ —Ç–µ, –∫–æ—Ç–æ—Ä—ã–µ –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –≤—ã–ø–æ–ª–Ω—è–µ—Ç –±–µ–∑ –Ω–∞—à–µ–≥–æ –≤–º–µ—à–∞—Ç–µ–ª—å—Å—Ç–≤–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –∑–∞–ø–∏—Å—ã–≤–∞—è –∑–Ω–∞—á–µ–Ω–∏–µ –æ–¥–Ω–æ–≥–æ —Ç–∏–ø–∞ –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –¥—Ä—É–≥–æ–≥–æ).
–Ø–≤–Ω—ã–µ (–∞–Ω–≥–ª. explicit) –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è –º—ã —Ä–µ–∞–ª–∏–∑—É–µ–º –≤ –∫–æ–¥–µ —Å–∞–º–æ—Å—Ç–æ—è—Ç–µ–ª—å–Ω–æ. –î–ª—è —ç—Ç–æ–≥–æ –≤ C++ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –æ–ø–µ—Ä–∞—Ü–∏—è static_cast.
double value = static_cast<double>(true); // value = 1.
–ö—Ä–æ–º–µ —Ç–æ–≥–æ, –º–æ–∂–Ω–æ –≤–æ—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–µ–º –≤ —Å—Ç–∏–ª–µ —è–∑—ã–∫–∞ C (–∞–Ω–≥–ª. C-style cast). –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ –∂–µ–ª–∞–µ–º—ã–π —Ç–∏–ø —É–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –ø–µ—Ä–µ–¥ –∑–Ω–∞—á–µ–Ω–∏–µ–º –≤ –∫—Ä—É–≥–ª—ã—Ö —Å–∫–æ–±–∫–∞—Ö.
double value_double = 6.27;
int value_int = (int)value_double; // value_int = 6.
C++ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç —Ç–∞–∫–æ–π —Å–∏–Ω—Ç–∞–∫—Å–∏—Å, –æ–¥–Ω–∞–∫–æ static_cast —Å—á–∏—Ç–∞–µ—Ç—Å—è –±–æ–ª–µ–µ –Ω–∞–¥–µ–∂–Ω—ã–º —Å–ø–æ—Å–æ–±–æ–º –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–æ–≤.
–û–ø–µ—Ä–∞—Ü–∏—è static_cast –ø—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç –æ–¥–Ω–∏ —Ç–∏–ø—ã –≤ –¥—Ä—É–≥–∏–µ –Ω–∞ —ç—Ç–∞–ø–µ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏. –û–Ω–∞ –º–æ–∂–µ—Ç –≤—ã–ø–æ–ª–Ω—è—Ç—å –∫–∞–∫ –≤–æ—Å—Ö–æ–¥—è—â–∏–µ, —Ç–∞–∫ –∏ –Ω–∏—Å—Ö–æ–¥—è—â–∏–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è. –í C++ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –µ—â–µ –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø–æ—Ö–æ–∂–∏—Ö –æ–ø–µ—Ä–∞—Ü–∏–π. 
const_cast –ø–æ–∑–≤–æ–ª—è–µ—Ç –º–µ–Ω—è—Ç—å —Ç–∏–ø –∑–Ω–∞—á–µ–Ω–∏—è –Ω–∞ const –∏ –Ω–∞–æ–±–æ—Ä–æ—Ç;
dynamic_cast –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è –¥–∏–Ω–∞–º–∏—á–µ—Å–∫–æ–≥–æ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–æ–≤ –≤–æ –≤—Ä–µ–º—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã;
–≠—Ç–∏ —Å–ø–æ—Å–æ–±—ã –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω—ã –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –ø—Ä–æ—Å—Ç—ã–º–∏ –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã–º–∏ —Ç–∏–ø–∞–º–∏, –¥–ª—è –∫–æ—Ç–æ—Ä—ã—Ö –æ–ø—Ä–µ–¥–µ–ª–µ–Ω—ã –ø—Ä–∞–≤–∏–ª–∞ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è. –î–ª—è –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã—Ö –¥–µ–π—Å—Ç–≤–∏–π (–Ω–∞–ø—Ä–∏–º–µ—Ä, –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è —Å—Ç—Ä–æ–∫ –≤ —á–∏—Å–ª–∞ –∏ –Ω–∞–æ–±–æ—Ä–æ—Ç) –æ–Ω–∏ –Ω–µ –ø–æ–¥–æ–π–¥—É—Ç.
–í –∫–ª–∞—Å—Å –∏ –æ–±—Ä–∞—Ç–Ω–æ
–û–±—ä–µ–∫—Ç—ã –∫–ª–∞—Å—Å–æ–≤ –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä —Ç–æ–∂–µ –º–æ–≥—É—Ç –ø—Ä–∏–Ω–∏–º–∞—Ç—å —É—á–∞—Å—Ç–∏–µ –≤ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–∏ —Ç–∏–ø–æ–≤. –î–ª—è —ç—Ç–æ–≥–æ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è ‚Äî –æ—Å–æ–±—ã–π –≤–∏–¥ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞, –∫–æ—Ç–æ—Ä—ã–π —Å–æ–∑–¥–∞–µ—Ç –æ–±—ä–µ–∫—Ç—ã –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–µ—Ä–µ–¥–∞–Ω–Ω—ã—Ö –∑–Ω–∞—á–µ–Ω–∏–π. –û–Ω –º–æ–∂–µ—Ç –ø—Ä–∏–Ω–∏–º–∞—Ç—å –æ–¥–∏–Ω –ø–∞—Ä–∞–º–µ—Ç—Ä (–µ—Å–ª–∏ –ø—Ä–∏–Ω–∞–¥–ª–µ–∂–∏—Ç –ø—Ä–æ—Å—Ç–æ–º—É –∫–ª–∞—Å—Å—É-–æ–±–µ—Ä—Ç–∫–µ) –∏–ª–∏ –Ω–µ—Å–∫–æ–ª—å–∫–æ (–µ—Å–ª–∏ —Ä–µ—á—å –∏–¥–µ—Ç –æ —Å–ª–æ–∂–Ω—ã—Ö –∫–ª–∞—Å—Å–∞—Ö –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞—Ö).
–†–∞—Å—Å–º–æ—Ç—Ä–∏–º –ø—Ä–∏–º–µ—Ä —Ç–∞–∫–æ–≥–æ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞, –ø–æ–∑–≤–æ–ª—è—é—â–µ–≥–æ —Å–æ–∑–¥–∞—Ç—å –æ–±—ä–µ–∫—Ç Timer –∏–∑ –∑–Ω–∞—á–µ–Ω–∏—è int.
class Timer {
public:
    Timer() : seconds_(0) {}; // –û–±—ã—á–Ω—ã–π –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä.
    Timer(int seconds) : seconds_(seconds) {}; // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è.
    
    int GetTime() const { 
        return seconds_; 
    }
    ...
private:
    int seconds_;
};

int main() {
    // –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è –º–æ–∂–Ω–æ –≤—ã–∑–≤–∞—Ç—å —è–≤–Ω–æ.
    Timer timer_1(10);
    
    // –ò–ª–∏ –Ω–µ—è–≤–Ω–æ ‚Äî –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –ø–æ–π–º—ë—Ç, —á—Ç–æ —ç—Ç–æ Timer(10).
    Timer timer_2 = 10;
}
–ó–∞–ø–∏—Å—å Timer timer_2 = 10; –ø–æ–∑–≤–æ–ª—è–µ—Ç –≤—ã–ø–æ–ª–Ω–∏—Ç—å –Ω–µ—è–≤–Ω–æ–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ —Ç–∏–ø–æ–≤: –∏–∑ int –≤ Timer. –≠—Ç–æ —Ä–∞–±–æ—Ç–∞–µ—Ç –∏ –≤ –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã—Ö —Å–ª—É—á–∞—è—Ö: –Ω–∞–ø—Ä–∏–º–µ—Ä, –ø—Ä–∏ –ø–µ—Ä–µ–¥–∞—á–µ –∑–Ω–∞—á–µ–Ω–∏—è –≤ —Ñ—É–Ω–∫—Ü–∏—é.
void PrintTime(const Timer timer) {
    std::cout << "–û—Å—Ç–∞–≤—à–µ–µ—Å—è –≤—Ä–µ–º—è: "s << timer.GetTime() 
              << " —Å–µ–∫—É–Ω–¥"s << std::endl;
}

int main() {
    // –í –∫–∞—á–µ—Å—Ç–≤–µ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞ –º–æ–∂–Ω–æ –ø–µ—Ä–µ–¥–∞—Ç—å –∑–Ω–∞—á–µ–Ω–∏–µ int ‚Äî
    // –æ–Ω–æ –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç—Å—è –≤ Timer.
    PrintTime(15); 
}
–í–æ–∑–º–æ–∂–Ω—ã –∏ –æ–±—Ä–∞—Ç–Ω—ã–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è ‚Äî –∏–∑ –æ–±—ä–µ–∫—Ç–∞ –∫–ª–∞—Å—Å–∞ –≤ –¥—Ä—É–≥–æ–π —Ç–∏–ø. –î–ª—è —ç—Ç–æ–≥–æ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ —Å–æ–∑–¥–∞—Ç—å –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É –æ–ø–µ—Ä–∞—Ü–∏–∏ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è —Ç–∏–ø–∞.
operator OtherType() const;
–ù–µ–º–Ω–æ–≥–æ –∏–∑–º–µ–Ω–∏–º –Ω–∞—à –ø—Ä–∏–º–µ—Ä, –¥–æ–±–∞–≤–∏–≤ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –¥–ª—è –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è –æ–±—ä–µ–∫—Ç–∞ Timer –≤ –∑–Ω–∞—á–µ–Ω–∏–µ —Ç–∏–ø–∞ int. –í –∫–∞—á–µ—Å—Ç–≤–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –æ–Ω –±—É–¥–µ—Ç –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å –æ—Å—Ç–∞–≤—à–µ–µ—Å—è –≤—Ä–µ–º—è –≤ —Å–µ–∫—É–Ω–¥–∞—Ö.
class Timer {
public:
    Timer(int m, int s) : minutes_(m), seconds_(s) {};
    // –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏—è –∫ int.
    operator int() const {
        return minutes_ * 60 + seconds_;
    }
private:
    int minutes_, seconds_;
};
–ü–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω–∞—è –æ–ø–µ—Ä–∞—Ü–∏—è –Ω–µ –ø—Ä–∏–Ω–∏–º–∞–µ—Ç –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤. –ö —Ç–æ–º—É –∂–µ –¥–ª—è –Ω–µ—ë –Ω–µ —É–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è —Ç–∏–ø –≤–æ–∑–≤—Ä–∞—â–∞–µ–º–æ–≥–æ –∑–Ω–∞—á–µ–Ω–∏—è, –ø–æ—Å–∫–æ–ª—å–∫—É –ø–æ–¥—Ä–∞–∑—É–º–µ–≤–∞–µ—Ç—Å—è, —á—Ç–æ –æ–Ω —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç –µ—ë –Ω–∞–∑–≤–∞–Ω–∏—é.
