class Date{
public:
    Date() = default;
    Date(int y, int m, int d): y_(y), m_(m), d_(d) {};
    
    // –û–±—ä—è–≤–ª—è–µ–º –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏ –∫–∞–∫ –¥—Ä—É–∂–µ—Å—Ç–≤–µ–Ω–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏.
    friend std::istream& operator>>(std::istream& is, Date& date);
    friend std::ostream& operator<<(std::ostream& os, const Date& date);

private:
    int y_, m_, d_;
};

// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –≤–≤–æ–¥–∞ –¥–ª—è Date.
std::istream& operator>>(std::istream& is, Date& date) {
    int y, m, d;
    is >> y >> m >> d;
    date.y_ = y; // –ï—Å—Ç—å –¥–æ—Å—Ç—É–ø –∫ private-–ø–µ—Ä–µ–º–µ–Ω–Ω—ã–º.
    date.m_ = m;
    date.d_ = d;
    return is;
}

// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ –≤—ã–≤–æ–¥–∞ –¥–ª—è Date.
std::ostream& operator<<(std::ostream& os, const Date& date) {
    os << date.y_ << "."s << date.m_ << "."s << date.d_;
    return os;
}
–¢–µ–ø–µ—Ä—å –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω—ã–µ –æ–ø–µ—Ä–∞—Ü–∏–∏ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å, —á—Ç–æ–±—ã –∑–∞–ø–∏—Å—ã–≤–∞—Ç—å –∏ —á–∏—Ç–∞—Ç—å –∑–Ω–∞—á–µ–Ω–∏—è –∫–ª–∞—Å—Å–∞.
