using PairInt = std::pair<int, int>;

std::istream& operator>>(std::istream& is, PairInt& pair_int) {
    is >> pair_int.first >> pair_int.second; // –ó–∞–ø–∏—Å—ã–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è.
    return is; // –í–æ–∑–≤—Ä–∞—â–∞–µ–º —Å—Å—ã–ª–∫—É –Ω–∞ –ø–æ—Ç–æ–∫.
}

int main() {
    PairInt p;

    // –°–æ–∑–¥–∞—ë–º –æ–±—ä–µ–∫—Ç –ø–æ—Ç–æ–∫–∞ istringstream, —Å–æ–¥–µ—Ä–∂–∞—â–∏–π –∑–Ω–∞—á–µ–Ω–∏—è 6 –∏ 27.
    std::istringstream istring_stream("6 27"s);                        
    istring_stream >> p; // –ó–∞–ø–∏—Å—ã–≤–∞–µ–º –µ–≥–æ –≤ –ø–∞—Ä—É.

    std::cout << p.first << "_"s << p.second; // 6_27.
}
–ó–¥–µ—Å—å –º—ã –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–ª–∏ —Ç–∏–ø istringstream –¥–ª—è –∑–∞–ø–∏—Å–∏ –∑–Ω–∞—á–µ–Ω–∏–π –≤ –ø–∞—Ä—É. –≠—Ç–æ –∞–Ω–∞–ª–æ–≥–∏—á–Ω–æ –≤—ã–∑–æ–≤—É std::cin >> p –∏ –≤–≤–µ–¥–µ–Ω–∏—é –≤ –∫–æ–Ω—Å–æ–ª—å —Å—Ç—Ä–æ–∫–∏ ¬´6 27¬ª.
