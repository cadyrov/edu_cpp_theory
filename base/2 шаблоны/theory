    std::cout << found_p->x << ", "s << found_p->y; // 3, 4.
–ö–ª–∞—Å—Å optional —Ç–∞–∫–∂–µ –æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –ø–æ–ª–µ–∑–µ–Ω, –∫–æ–≥–¥–∞ –Ω–µ–ª—å–∑—è –≤—ã–ø–æ–ª–Ω–∏—Ç—å —Ñ—É–Ω–∫—Ü–∏—é –∏ –≤–µ—Ä–Ω—É—Ç—å –∏–∑ –Ω–µ—ë –∑–Ω–∞—á–µ–Ω–∏–µ –∏–∑-–∑–∞ –Ω–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤. –ù–∞–ø—Ä–∏–º–µ—Ä, –µ—Å–ª–∏ –≤ —Ñ—É–Ω–∫—Ü–∏—é GetByIndex –ø–µ—Ä–µ–¥–∞—Ç—å –∏–Ω–¥–µ–∫—Å, –≤—ã—Ö–æ–¥—è—â–∏–π –∑–∞ –ø—Ä–µ–¥–µ–ª—ã —Ä–∞–∑–º–µ—Ä–∞ –≤–µ–∫—Ç–æ—Ä–∞.
template<typename T>
std::optional<Point<T>> GetByIndex(std::vector<Point<T>> points, int index) {
    // –ï—Å–ª–∏ –∏–Ω–¥–µ–∫—Å –≤—ã—Ö–æ–¥–∏—Ç –∑–∞ –≥—Ä–∞–Ω–∏—Ü—ã –≤–µ–∫—Ç–æ—Ä–∞, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º nullopt.
    if (index < 0) || (index >= points.size()) {
        return std::nullopt;
    }
    return points[index]; 
}
–î—Ä—É–≥–æ–µ –≤–æ–∑–º–æ–∂–Ω–æ–µ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏–µ optional ‚Äî –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –µ–≥–æ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –∑–Ω–∞—á–µ–Ω–∏—è, –∫–æ—Ç–æ—Ä–æ–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω–æ –Ω–µ —Å—Ä–∞–∑—É. –¢–∞–∫, –ø—Ä–∏ –ø–æ–∏—Å–∫–µ –º–∞–∫—Å–∏–º–∞–ª—å–Ω–æ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞ –≤ –≤–µ–∫—Ç–æ—Ä–µ –µ–≥–æ –Ω–∞—á–∞–ª—å–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ —Å—Ç–∞–Ω–µ—Ç –∏–∑–≤–µ—Å—Ç–Ω–æ —Ç–æ–ª—å–∫–æ –ø–æ—Å–ª–µ —Ç–æ–≥–æ, –∫–∞–∫ –º—ã –Ω–∞—á–Ω–µ–º –ø–µ—Ä–µ–±–∏—Ä–∞—Ç—å —ç–ª–µ–º–µ–Ω—Ç—ã.
std::optional<int> start;
for (auto x : array) {
    if (!start.has_value()) { // –ï—Å–ª–∏ –º–∞–∫—Å–∏–º—É–º –µ—â—ë –Ω–µ –ø—Ä–∏—Å–≤–æ–µ–Ω.
        start = x; // –ü—Ä–∏—Å–≤–∞–∏–≤–∞–µ–º –µ–≥–æ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π start.
    } else {
        start = std::max(start.value(), x);
    }
}
–ü–æ–ª—É—á–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ –∏–∑ optional
–ß—Ç–æ–±—ã —Ä–µ—à–∏—Ç—å, —á—Ç–æ –¥–µ–ª–∞—Ç—å —Å –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π —Ç–∏–ø–∞ optional –¥–∞–ª—å—à–µ, –Ω—É–∂–Ω–æ –∑–Ω–∞—Ç—å, –ø—É—Å—Ç–∞—è –æ–Ω–∞ –∏–ª–∏ –Ω–µ—Ç. –û–¥–∏–Ω –∏–∑ —Å–ø–æ—Å–æ–±–æ–≤ —Å–¥–µ–ª–∞—Ç—å —ç—Ç–æ –º—ã —É–∂–µ –ø–æ–∫–∞–∑–∞–ª–∏ –≤ –ø—Ä–∏–º–µ—Ä–µ –≤—ã—à–µ.
if (found_p) { // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ –∑–Ω–∞—á–µ–Ω–∏–µ.
optional –∏–º–µ–µ—Ç –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–Ω–æ–µ –ø—Ä–∏–≤–µ–¥–µ–Ω–∏–µ –∫ –ª–æ–≥–∏—á–µ—Å–∫–æ–º—É —Ç–∏–ø—É: –µ—Å–ª–∏ –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è –Ω–µ –ø—É—Å—Ç–∞—è, –ø—Ä–æ–≤–µ—Ä–∫–∞ if (optional) –≤–µ—Ä–Ω—ë—Ç true.
