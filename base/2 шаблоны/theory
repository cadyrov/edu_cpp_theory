template <typename T, bool use_x>
T Sum(Point<T> point_1, Point<T> point_2) {
    if constexpr (use_x) {
        return point_1.x + point_2.x;
    } 
    return point_1.y + point_2.y;
}
–í–Ω—É—Ç—Ä–∏ —É—Å–ª–æ–≤–∏—è if constexpr –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ç–æ–ª—å–∫–æ –∫–æ–Ω—Å—Ç–∞–Ω—Ç—ã, –∏–∑–≤–µ—Å—Ç–Ω—ã–µ –Ω–∞ —ç—Ç–∞–ø–µ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏. –í—ã–∑—ã–≤–∞—Ç—å –æ–±—ã—á–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –Ω–µ–ª—å–∑—è. –ù–æ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏, –ø–æ–º–µ—á–µ–Ω–Ω—ã–µ —Å–ª–æ–≤–æ–º constexpr. –û–Ω–∏ –º–æ–≥—É—Ç –≤—ã—á–∏—Å–ª—è—Ç—å—Å—è –Ω–µ –≤–æ –≤—Ä–µ–º—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã, –∞ –ø—Ä–∏ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏, –ø–æ—ç—Ç–æ–º—É –≤ —É—Å–ª–æ–≤–∏–µ if constexpr –ø–æ–ø–∞–¥—ë—Ç —É–∂–µ –≥–æ—Ç–æ–≤—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç.
constexpr double ConvertToGalleons(double rubles, double rate = 100) {
    return rubles / rate;
}

template<double rubles, int galleons_limit = 10000>
bool CheckDeclaration() {
    // –§—É–Ω–∫—Ü–∏—é ConvertToGalleons –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –≤–Ω—É—Ç—Ä–∏ constexpr if.
    if constexpr (ConvertToGalleons(rubles) > galleons_limit) {
        return true;
    }
    return false;
}

int main() {
    CheckDeclaration<50.0>(); // –í—ã—á–∏—Å–ª–∏—Ç—Å—è –Ω–∞ —ç—Ç–∞–ø–µ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏.
}
–í —Å–ª–µ–¥—É—é—â–µ–º –ø—Ä–∏–º–µ—Ä–µ –º—ã —Ä–∞—Å—Å–º–æ—Ç—Ä–∏–º –∑–∞–¥–∞—á—É, —Å –∫–æ—Ç–æ—Ä–æ–π –Ω–µ—Ä–µ–¥–∫–æ –º–æ–∂–Ω–æ —Å—Ç–æ–ª–∫–Ω—É—Ç—å—Å—è –ø—Ä–∏ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–∏ —à–∞–±–ª–æ–Ω–æ–≤: —Ñ—É–Ω–∫—Ü–∏—è –¥–æ–ª–∂–Ω–∞ —Ä–∞–±–æ—Ç–∞—Ç—å —Å —Ä–∞–∑–Ω—ã–º–∏ —Ç–∏–ø–∞–º–∏, –Ω–æ –∏—Ö –Ω—É–∂–Ω–æ –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å –ø–æ-—Ä–∞–∑–Ω–æ–º—É. –ü—Ä–µ–¥—Å—Ç–∞–≤–∏–º —Å—Ç—Ä—É–∫—Ç—É—Ä—É Triangle, –∫–æ—Ç–æ—Ä–∞—è —Ö—Ä–∞–Ω–∏—Ç —Ç—Ä–∏ —ç–ª–µ–º–µ–Ω—Ç–∞ ‚Äî —Å—Ç–æ—Ä–æ–Ω—ã —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞. –û–Ω–∏ –º–æ–≥—É—Ç –±—ã—Ç—å –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω—ã —á–∏—Å–ª–∞–º–∏ —Ç–∏–ø–∞ int –∏–ª–∏ –∂–µ –æ–±—ä–µ–∫—Ç–∞–º–∏ –∫–ª–∞—Å—Å–∞ Side.
// –ö–ª–∞—Å—Å –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è —Å—Ç–æ—Ä–æ–Ω—ã —Ñ–∏–≥—É—Ä—ã.
class Side {
public:
    Side(double length): length_(length) {}
    int GetLength() const { 
        return length_; 
    }
private:
    int length_;
};

template <typename T> 
struct Triangle {
    Triangle(T a, T b, T c): a(a), b(b), c(c) {}
    T a, b, c;
};
–ú–µ—Ç–æ–¥ Perimeter —Å—É–º–º–∏—Ä—É–µ—Ç —Å—Ç–æ—Ä–æ–Ω—ã —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞. –ß—Ç–æ–±—ã —Å–¥–µ–ª–∞—Ç—å —ç—Ç–æ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ, –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –∑–Ω–∞—Ç—å –∏—Ö —Ç–∏–ø: –µ—Å–ª–∏ –æ–Ω –ø—Ä–æ—Å—Ç–æ–π, –º–æ–∂–Ω–æ –ø—Ä–æ—Å—Ç–æ –æ–±—Ä–∞—Ç–∏—Ç—å—Å—è –∫ –ø–æ–ª—è–º —Å—Ç—Ä—É–∫—Ç—É—Ä—ã ‚Äî triangle_1.a + triangle_2.a. –ï—Å–ª–∏ –∂–µ —ç—Ç–æ —Ç–∏–ø Side, –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –¥–ª–∏–Ω—ã –Ω—É–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –µ–≥–æ –º–µ—Ç–æ–¥: triangle_1.a.GetLength() + triangle_2.a.GetLength(). –î–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Ç–∏–ø–∞ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è std::is_same_v<T, Side>.
template <typename T> 
struct Triangle {
    Triangle(T a, T b, T c): a(a), b(b), c(c) {}
    
    T Perimeter() const {
        // –° –æ–±—ã—á–Ω—ã–º if ‚Äî –æ—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–¥—Å—Ç–∞–Ω–æ–≤–∫–µ int:
        // —É —Ç–∏–ø–∞ int –Ω–µ—Ç –º–µ—Ç–æ–¥–∞ GetLength().
        if constexpr (std::is_same_v<T, Side>) {
            // –ï—Å–ª–∏ —Å—Ç–æ—Ä–æ–Ω—ã —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞ –∏–º–µ—é—Ç —Ç–∏–ø Side,
            // –Ω—É–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –º–µ—Ç–æ–¥ GetLength().
            return a.GetLength() + b.GetLength() + c.GetLength();
        } else {
            // –ò–Ω–∞—á–µ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø—Ä–æ—Å—Ç–æ –≤–∑—è—Ç—å –∏—Ö –∑–Ω–∞—á–µ–Ω–∏—è.
            return a + b + c;
        }
    }
    
    T a, b, c;
};

int main() {
    // –°—Ç–æ—Ä–æ–Ω—ã —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞ –∑–∞–¥–∞–Ω—ã —Ç–∏–ø–æ–º int.
    std::cout << Triangle{3, 5, 4}.Perimeter() << std::endl;
    
    // –°—Ç–æ—Ä–æ–Ω—ã —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞ –∑–∞–¥–∞–Ω—ã —Ç–∏–ø–æ–º Side.
    Side side{1};
    std::cout << Triangle{side, side, side}.Perimeter().GetLength()
              << std::endl;
}
–ö–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è if constexpr –ø–æ–∑–≤–æ–ª—è–µ—Ç –∏—Å–∫–ª—é—á–∏—Ç—å –Ω–µ–Ω—É–∂–Ω—ã–π –∫–æ–¥, –æ—Å—Ç–∞–≤–∏–≤ —Ç–æ—Ç, —á—Ç–æ –ø–æ–¥—Ö–æ–¥–∏—Ç –¥–ª—è –ø–µ—Ä–µ–¥–∞–Ω–Ω–æ–≥–æ —Ç–∏–ø–∞. –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ –æ–±—ã—á–Ω—ã–π if –ø—Ä–∏–≤—ë–ª –±—ã –∫ –æ—à–∏–±–∫–µ: –µ—Å–ª–∏ –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –æ—Å—Ç–∞–≤–∏—Ç –æ–±–µ —É—Å–ª–æ–≤–Ω—ã–µ –≤–µ—Ç–≤–∏ –∏ –ø–æ–ø—ã—Ç–∞–µ—Ç—Å—è –∏—Ö —Ä–∞–∑–æ–±—Ä–∞—Ç—å, —Ç–æ –æ–±–Ω–∞—Ä—É–∂–∏—Ç, —á—Ç–æ —É —Ç–∏–ø–∞ int –Ω–µ—Ç –º–µ—Ç–æ–¥–∞ GetLength.
