    ConstellationStar(T magnitude, std::string name);
    ... 
};
–ú–∞–≥–∏—è —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–π
–ß–∞—Å—Ç–∏—á–Ω–∞—è —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø–æ–∑–≤–æ–ª—è–µ—Ç —Ä–∞–∑–ª–∏—á–∞—Ç—å –±–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã–µ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏, –Ω–∞–ø—Ä–∏–º–µ—Ä –∫–ª–∞—Å—Å—ã, —Ä–∞–±–æ—Ç–∞—é—â–∏–µ —Å –æ–¥–Ω–∏–º —ç–ª–µ–º–µ–Ω—Ç–æ–º –∏–ª–∏ –≤–µ–∫—Ç–æ—Ä–æ–º —ç–ª–µ–º–µ–Ω—Ç–æ–≤ —Ç–æ–≥–æ –∂–µ —Ç–∏–ø–∞.
// –ó–≤–µ–∑–¥–∞ –≤ —Å–æ–∑–≤–µ–∑–¥–∏–∏ –º–æ–∂–µ—Ç –±—ã—Ç—å –æ–¥–∏–Ω–æ—á–Ω–æ–π.
// –ü–µ—Ä–≤—ã–π –≤–∞—Ä–∏–∞–Ω—Ç —à–∞–±–ª–æ–Ω–∞.
template <typename T>
class ConstellationStar { };

// –ê –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∞ –∑–≤—ë–∑–¥–Ω—ã–º —Å–∫–æ–ø–ª–µ–Ω–∏–µ–º.
// –í—Ç–æ—Ä–æ–π –≤–∞—Ä–∏–∞–Ω—Ç —Ç–æ–≥–æ –∂–µ —à–∞–±–ª–æ–Ω–∞.
template <typename T>
class ConstellationStar<std::vector<T>> { };
–í –ø–µ—Ä–≤–æ–º —Å–ª—É—á–∞–µ —à–∞–±–ª–æ–Ω–Ω—ã–π –∫–ª–∞—Å—Å ConstellationStar —Ö—Ä–∞–Ω–∏—Ç –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ–± –æ–¥–Ω–æ–π –∑–≤–µ–∑–¥–µ –∏ –ø–æ–ª—É—á–∞–µ—Ç –µ–¥–∏–Ω—Å—Ç–≤–µ–Ω–Ω—ã–π –ø–∞—Ä–∞–º–µ—Ç—Ä –¢ –¥–ª—è –∑–Ω–∞—á–µ–Ω–∏—è –∑–≤—ë–∑–¥–Ω–æ–π –≤–µ–ª–∏—á–∏–Ω—ã. –í–æ –≤—Ç–æ—Ä–æ–º —Å–ª—É—á–∞–µ –∫–ª–∞—Å—Å—É –Ω—É–∂–Ω–æ —Ö—Ä–∞–Ω–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –æ –Ω–µ—Å–∫–æ–ª—å–∫–∏—Ö –∑–≤—ë–∑–¥–∞—Ö —Å–∫–æ–ø–ª–µ–Ω–∏—è, –∏ –∑–≤—ë–∑–¥–Ω—ã–µ –≤–µ–ª–∏—á–∏–Ω—ã –∑–∞–¥–∞—é—Ç—Å—è –≤–µ–∫—Ç–æ—Ä–æ–º (std::vector<T>).
–ù—É–∂–Ω—ã–π –∫–ª–∞—Å—Å –±—É–¥–µ—Ç –≤—ã–±—Ä–∞–Ω –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —à–∞–±–ª–æ–Ω–Ω–æ–≥–æ –∞—Ä–≥—É–º–µ–Ω—Ç–∞.
// –í—ã–±–µ—Ä–µ—Ç—Å—è –ø–µ—Ä–≤—ã–π –≤–∞—Ä–∏–∞–Ω—Ç ‚Äì –Ω–µ–ª—å–∑—è —Ä–∞—Å—Å–º–æ—Ç—Ä–µ—Ç—å
// double –∫–∞–∫ std::vector<T>.
ConstellationStar<double> alpha_orionis;

// –í—ã–±–µ—Ä–µ—Ç—Å—è –≤—Ç–æ—Ä–æ–π –≤–∞—Ä–∏–∞–Ω—Ç ‚Äì –º–æ–∂–Ω–æ —Ä–∞—Å—Å–º–æ—Ç—Ä–µ—Ç—å
// std::vector<double> –∫–∞–∫ std::vector<T>.
ConstellationStar<std::vector<double>> pleiades;
–°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ –≤—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã—Ö –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–π –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞ —Ç–∏–ø–æ–≤. –°–ª–µ–¥—É—é—â–∏–π –ø—Ä–∏–º–µ—Ä –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç, –∫–∞–∫ —Å –∏—Ö –ø–æ–º–æ—â—å—é —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å –ø—Ä–æ–≤–µ—Ä–∫—É, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è –∫–æ–Ω—Å—Ç–∞–Ω—Ç–Ω–æ–π.
// –≠—Ç–∞ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –±—É–¥–µ—Ç –≤—ã–±—Ä–∞–Ω–∞ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é.
template<typename T>
struct IsConst {
    static constexpr bool value = false;
};

// –≠—Ç–∞ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –±—É–¥–µ—Ç –≤—ã–±—Ä–∞–Ω–∞, –µ—Å–ª–∏ —Ç–∏–ø –¢ –∫–æ–Ω—Å—Ç–∞–Ω—Ç–Ω—ã–π.
template<typename T>
struct IsConst<const T> {
    static constexpr bool value = true;
};

int main() {
    int a = 5;
    const int b = 10;
    
    std::cout << "a –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? - "s 
              << (IsConst<decltype(a)>::value ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl;
    std::cout << "b –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? - "s 
              << (IsConst<decltype(b)>::value ? "–¥–∞"s : "–Ω–µ—Ç"s) << std::endl;
              
    // a –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? - –Ω–µ—Ç
    // b –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? - –¥–∞
}
–°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —à–∞–±–ª–æ–Ω–æ–≤ —Ñ—É–Ω–∫—Ü–∏–π
–ú—ã –º–æ–∂–µ–º —Å–æ–∑–¥–∞–≤–∞—Ç—å —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –Ω–µ —Ç–æ–ª—å–∫–æ –¥–ª—è –∫–ª–∞—Å—Å–æ–≤, –Ω–æ –∏ –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π. –ü—Ä–∏–Ω—Ü–∏–ø –∏—Ö —Ä–∞–±–æ—Ç—ã –æ—Å—Ç–∞–Ω–µ—Ç—Å—è –ø—Ä–µ–∂–Ω–∏–º.
–°–æ–∑–¥–∞–¥–∏–º —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—É—é —Ñ—É–Ω–∫—Ü–∏—é Max –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è —Ç–∏–ø–æ–≤ Person.
struct Person {
    std::string name;
    int age;
};

template<typename T>
T Max(T value1, T value2) {
    return value1 > value2 ? value1 : value2;
}

template<>
Person Max(Person value1, Person value2) {
    return value1.age > value2.age ? value1 : value2;
}

int main() {
    std::cout << Max(1, 3) << std::endl;
    std::cout << Max(1.7, 3.6) << std::endl;
    std::cout << Max(Person{"Ivan"s, 33}, Person{"Proba"s, 12}).name << std::endl;
}
–ö–∞–∫ –≤–∏–¥–∏—Ç–µ, —Å–∏–Ω—Ç–∞–∫—Å–∏—Å —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–π –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π –±—É–¥–µ—Ç –Ω–µ–º–Ω–æ–≥–æ –¥—Ä—É–≥–∏–º. –í–º–µ—Å—Ç–æ —Ç–æ–≥–æ —á—Ç–æ–±—ã –ø–∏—Å–∞—Ç—å –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–π —Ç–∏–ø –ø–æ—Å–ª–µ –∏–º–µ–Ω–∏, –∫–∞–∫ –±—ã–ª–æ —Å –∫–ª–∞—Å—Å–∞–º–∏, –º—ã —É–∫–∞–∑—ã–≤–∞–µ–º –µ–≥–æ –≤ —Å–ø–∏—Å–∫–µ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤: Max(Person value1, Person value2).
–°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ—É–Ω–∫—Ü–∏–π –æ—á–µ–Ω—å –ø–æ—Ö–æ–∂–∞ –Ω–∞ –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É. –ü—Ä–∏ —ç—Ç–æ–º –≤ –±–æ–ª—å—à–∏–Ω—Å—Ç–≤–µ —Å–ª—É—á–∞–µ–≤ –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —è–≤–ª—è–µ—Ç—Å—è –ª—É—á—à–∏–º –≤—ã–±–æ—Ä–æ–º, –ø–æ—Å–∫–æ–ª—å–∫—É —Ä–∞–±–æ—Ç–∞—Ç—å —Å –Ω–µ–π –≥–æ—Ä–∞–∑–¥–æ –ø—Ä–æ—â–µ.
–°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –Ω–µ—Ç–∏–ø–æ–≤—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
–°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ —É—Å–ø–µ—à–Ω–æ —Ä–∞–±–æ—Ç–∞—é—Ç –∏ –¥–ª—è –Ω–µ—Ç–∏–ø–æ–≤—ã—Ö —à–∞–±–ª–æ–Ω–Ω—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤. –ù–∞–ø—Ä–∏–º–µ—Ä, –º—ã –º–æ–∂–µ–º –Ω–∞–ø–∏—Å–∞—Ç—å —Ñ—É–Ω–∫—Ü–∏–∏, –ø–æ-—Ä–∞–∑–Ω–æ–º—É –≤—ã—á–∏—Å–ª—è—é—â–∏–µ —Ñ–∞–∫—Ç–æ—Ä–∏–∞–ª:
factorial(n)=n!=1‚àó2‚àó3‚àó...‚àón.
–ï—Å–ª–∏ –∞—Ä–≥—É–º–µ–Ω—Ç —Ä–∞–≤–µ–Ω 0, —Ñ—É–Ω–∫—Ü–∏—è –¥–æ–ª–∂–Ω–∞ –≤–µ—Ä–Ω—É—Ç—å 1. –í –ø—Ä–æ—Ç–∏–≤–Ω–æ–º —Å–ª—É—á–∞–µ –æ–Ω–∞ –¥–æ–ª–∂–Ω–∞ –≤—ã–ø–æ–ª–Ω–∏—Ç—å —Ä–µ–∫—É—Ä—Å–∏–≤–Ω—ã–µ –≤—ã—á–∏—Å–ª–µ–Ω–∏—è, –≤—ã–∑—ã–≤–∞—è —Å–∞–º—É —Å–µ–±—è.
// –î–ª—è –ª—é–±–æ–≥–æ Value, –∫—Ä–æ–º–µ 0.
template<int Value>
int CountFactorial() {
    return Value * CountFactorial<Value - 1>();
}

// –î–ª—è Value = 0.
template<>
int CountFactorial<0>() {
    return 1;
}
–ò—Å–ø–æ–ª—å–∑—É—è —ç—Ç–æ —Å–≤–æ–π—Å—Ç–≤–æ —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–π, –º–æ–∂–Ω–æ —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å —Å–ª–æ–∂–Ω—ã–µ compile-time-–≤—ã—á–∏—Å–ª–µ–Ω–∏—è, –ø–æ–∑–≤–æ–ª—è—é—â–∏–µ –ø–æ–ª—É—á–∏—Ç—å —Ä–µ–∑—É–ª—å—Ç–∞—Ç –µ—â—ë –¥–æ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã ‚Äî —Å—Ä–∞–∑—É –Ω–∞ —ç—Ç–∞–ø–µ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏.
–í —Å–æ–≤—Ä–µ–º–µ–Ω–Ω–æ–º C++ –ø–æ–¥–æ–±–Ω–∞—è –º–∞–≥–∏—è –Ω—É–∂–Ω–∞ —Ä–µ–¥–∫–æ: –∫—É–¥–∞ –ª—É—á—à–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å constexpr-—Ñ—É–Ω–∫—Ü–∏–∏. –ö–æ–¥ –ø–æ–ª—É—á–∞–µ—Ç—Å—è –ø—Ä–æ—â–µ –∫–∞–∫ –¥–ª—è –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç–∞, —Ç–∞–∫ –∏ –¥–ª—è –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä–∞.

## –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –∫–æ–Ω—Ü–µ–ø—Ü–∏–∏ —à–∞–±–ª–æ–Ω–æ–≤

### –®–∞–±–ª–æ–Ω–Ω—ã–µ –ø—Å–µ–≤–¥–æ–Ω–∏–º—ã (Template Aliases)
C++11 –≤–≤–µ–¥—ë–Ω –º–µ—Ö–∞–Ω–∏–∑–º —Å–æ–∑–¥–∞–Ω–∏—è –ø—Å–µ–≤–¥–æ–Ω–∏–º–æ–≤ –¥–ª—è —à–∞–±–ª–æ–Ω–æ–≤ —Å –ø–æ–º–æ—â—å—é –∫–ª—é—á–µ–≤–æ–≥–æ —Å–ª–æ–≤–∞ `using`. –≠—Ç–æ —É–ø—Ä–æ—â–∞–µ—Ç —Ä–∞–±–æ—Ç—É —Å–æ —Å–ª–æ–∂–Ω—ã–º–∏ —à–∞–±–ª–æ–Ω–Ω—ã–º–∏ —Ç–∏–ø–∞–º–∏:

```cpp
// –í–º–µ—Å—Ç–æ –¥–ª–∏–Ω–Ω–æ–≥–æ std::vector<std::pair<std::string, int>>
template<typename Key, typename Value>
using Dictionary = std::vector<std::pair<Key, Value>>;

// –¢–µ–ø–µ—Ä—å –º–æ–∂–Ω–æ –ø–∏—Å–∞—Ç—å –ø—Ä–æ—Å—Ç–æ:
Dictionary<std::string, int> my_dict;

// –ò–ª–∏ —Å–æ–∑–¥–∞—Ç—å –ø—Å–µ–≤–¥–æ–Ω–∏–º –¥–ª—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–≥–æ —Ç–∏–ø–∞:
using StringIntDict = Dictionary<std::string, int>;
```

### –û–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è —à–∞–±–ª–æ–Ω–æ–≤ (Template Constraints)
–î–ª—è –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è —Ç–∏–ø–æ–≤ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤ —à–∞–±–ª–æ–Ω–æ–≤ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å SFINAE –∏ type traits:

```cpp
#include <type_traits>

// –§—É–Ω–∫—Ü–∏—è —Ä–∞–±–æ—Ç–∞–µ—Ç —Ç–æ–ª—å–∫–æ —Å –∞—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–º–∏ —Ç–∏–ø–∞–º–∏
template<typename T>
typename std::enable_if<std::is_arithmetic<T>::value, T>::type
add(T a, T b) {
    return a + b;
}

// –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–π —Å–∏–Ω—Ç–∞–∫—Å–∏—Å —Å static_assert
template<typename T>
T multiply(T a, T b) {
    static_assert(std::is_arithmetic<T>::value, "T must be arithmetic type");
    return a * b;
}
```

### –®–∞–±–ª–æ–Ω–Ω—ã–µ –ª—è–º–±–¥—ã (Generic Lambdas) - C++14
–õ—è–º–±–¥–∞-—Ñ—É–Ω–∫—Ü–∏–∏ —Ç–∞–∫–∂–µ –º–æ–≥—É—Ç –±—ã—Ç—å —à–∞–±–ª–æ–Ω–Ω—ã–º–∏:

```cpp
// –û–±—ã—á–Ω–∞—è –ª—è–º–±–¥–∞
auto lambda1 = [](int x) { return x * 2; };

// –®–∞–±–ª–æ–Ω–Ω–∞—è –ª—è–º–±–¥–∞ —Å auto
auto lambda2 = [](auto x) { return x * 2; };

// –ú–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å –ª—é–±—ã–º–∏ —Ç–∏–ø–∞–º–∏
std::cout << lambda2(5) << std::endl;      // 10
std::cout << lambda2(2.5) << std::endl;    // 5.0
```

### Fold Expressions - C++17
–î–ª—è —Ä–∞–±–æ—Ç—ã —Å –≤–∞—Ä–∏–∞—Ç–∏–≤–Ω—ã–º–∏ —à–∞–±–ª–æ–Ω–∞–º–∏ –¥–æ–±–∞–≤–ª–µ–Ω—ã fold expressions:

```cpp
// –°—É–º–º–∞ –≤—Å–µ—Ö –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤
template<typename... Args>
auto sum(Args... args) {
    return (args + ...);  // fold expression
}

// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ
std::cout << sum(1, 2, 3, 4, 5) << std::endl;  // 15

// –õ–æ–≥–∏—á–µ—Å–∫–æ–µ –ò –¥–ª—è –≤—Å–µ—Ö –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤
template<typename... Args>
bool all_true(Args... args) {
    return (args && ...);
}
```

### –®–∞–±–ª–æ–Ω—ã –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö (Variable Templates) - C++14
–ú–æ–∂–Ω–æ —Å–æ–∑–¥–∞–≤–∞—Ç—å —à–∞–±–ª–æ–Ω–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:

```cpp
template<typename T>
constexpr T pi = T(3.14159265358979323846);

// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ
float pi_f = pi<float>;
double pi_d = pi<double>;
```

### –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –≤—ã–≤–µ–¥–µ–Ω–∏–µ —Ç–∏–ø–æ–≤ –¥–ª—è —à–∞–±–ª–æ–Ω–Ω—ã—Ö –∫–ª–∞—Å—Å–æ–≤ - C++17
–ö–æ–º–ø–∏–ª—è—Ç–æ—Ä –º–æ–∂–µ—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≤—ã–≤–æ–¥–∏—Ç—å —Ç–∏–ø—ã –¥–ª—è —à–∞–±–ª–æ–Ω–Ω—ã—Ö –∫–ª–∞—Å—Å–æ–≤:

```cpp
// –î–æ C++17 –Ω—É–∂–Ω–æ –±—ã–ª–æ –ø–∏—Å–∞—Ç—å:
std::pair<int, std::string> p1{42, "hello"};

// –° C++17 –º–æ–∂–Ω–æ –ø—Ä–æ—Å—Ç–æ:
std::pair p2{42, "hello"};  // –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –≤—ã–≤–æ–¥–∏—Ç—Å—è std::pair<int, const char*>

// –†–∞–±–æ—Ç–∞–µ—Ç –∏ —Å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–º–∏ –∫–ª–∞—Å—Å–∞–º–∏:
template<typename T>
class MyContainer {
public:
    MyContainer(T value) : data(value) {}
private:
    T data;
};

MyContainer container{42};  // –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ MyContainer<int>
```

### –ü—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∏–µ —Å–æ–≤–µ—Ç—ã –ø–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é —à–∞–±–ª–æ–Ω–æ–≤

#### 1. –ü—Ä–µ–¥–ø–æ—á–∏—Ç–∞–π—Ç–µ `typename` –≤–º–µ—Å—Ç–æ `class` –¥–ª—è —Ç–∏–ø–æ–≤—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
```cpp
// –ü—Ä–µ–¥–ø–æ—á—Ç–∏—Ç–µ–ª—å–Ω–æ
template<typename T>
void func(T value);

// –ú–µ–Ω–µ–µ –ø—Ä–µ–¥–ø–æ—á—Ç–∏—Ç–µ–ª—å–Ω–æ (—Ö–æ—Ç—è —Ä–∞–±–æ—Ç–∞–µ—Ç –æ–¥–∏–Ω–∞–∫–æ–≤–æ)
template<class T>
void func(T value);
```

#### 2. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ SFINAE –¥–ª—è —É—Å–ª–æ–≤–Ω–æ–π –∫–æ–º–ø–∏–ª—è—Ü–∏–∏
```cpp
// –§—É–Ω–∫—Ü–∏—è —Ä–∞–±–æ—Ç–∞–µ—Ç —Ç–æ–ª—å–∫–æ —Å —Ü–µ–ª–æ—á–∏—Å–ª–µ–Ω–Ω—ã–º–∏ —Ç–∏–ø–∞–º–∏
template<typename T>
typename std::enable_if<std::is_integral<T>::value, T>::type
process_integer(T value) {
    return value * 2;
}
```

#### 3. –ü—Ä–∏–º–µ–Ω—è–π—Ç–µ `constexpr` –¥–ª—è compile-time –≤—ã—á–∏—Å–ª–µ–Ω–∏–π
```cpp
template<int N>
constexpr int factorial() {
    if (N <= 1) {
        return 1;
    } else {
        return N * factorial<N-1>();
    }
}

// –í—ã—á–∏—Å–ª—è–µ—Ç—Å—è –≤–æ –≤—Ä–µ–º—è –∫–æ–º–ø–∏–ª—è—Ü–∏–∏
constexpr int result = factorial<5>();  // 120
```

### –†–∞—Å–ø—Ä–æ—Å—Ç—Ä–∞–Ω—ë–Ω–Ω—ã–µ –æ—à–∏–±–∫–∏ –ø—Ä–∏ —Ä–∞–±–æ—Ç–µ —Å —à–∞–±–ª–æ–Ω–∞–º–∏

#### 1. –ó–∞–±—ã—Ç—å –ø—Ä–æ –¥–≤—É—Ö—Ñ–∞–∑–Ω—ã–π –ø–æ–∏—Å–∫ –∏–º—ë–Ω
```cpp
template<typename T>
void func() {
    // –û—à–∏–±–∫–∞: helper –Ω–µ –Ω–∞–π–¥–µ–Ω
    helper();  // –ù—É–∂–Ω–æ: this->helper() –∏–ª–∏ Base<T>::helper()
}
```

#### 2. –ü—Ä–æ–±–ª–µ–º—ã —Å –∑–∞–≤–∏—Å–∏–º—ã–º–∏ —Ç–∏–ø–∞–º–∏
```cpp
template<typename T>
void func() {
    // –û—à–∏–±–∫–∞: –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –Ω–µ –∑–Ω–∞–µ—Ç, —á—Ç–æ iterator - —ç—Ç–æ —Ç–∏–ø
    T::iterator it;  // –ù—É–∂–Ω–æ: typename T::iterator it;
}
```

#### 3. –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏
```cpp
// –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ - —á–∞—Å—Ç–∏—á–Ω–∞—è —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ—É–Ω–∫—Ü–∏–π –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è
template<typename T>
void func(T value) { /* ... */ }

template<typename T>
void func<std::vector<T>>(std::vector<T> value) { /* –û—à–∏–±–∫–∞! */ }

// –ü—Ä–∞–≤–∏–ª—å–Ω–æ - –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –ø–µ—Ä–µ–≥—Ä—É–∑–∫—É
template<typename T>
void func(std::vector<T> value) { /* ... */ }
```

–≠—Ç–∏ –¥–æ–ø–æ–ª–Ω–µ–Ω–∏—è –ø–æ–º–æ–≥—É—Ç –ª—É—á—à–µ –ø–æ–Ω—è—Ç—å —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ —à–∞–±–ª–æ–Ω–æ–≤ C++ –∏ –∏–∑–±–µ–∂–∞—Ç—å —Ä–∞—Å–ø—Ä–æ—Å—Ç—Ä–∞–Ω—ë–Ω–Ω—ã—Ö –æ—à–∏–±–æ–∫.

## –õ—É—á—à–∏–µ –ø—Ä–∞–∫—Ç–∏–∫–∏ / –ü–ª–æ—Ö–∏–µ –ø—Ä–∞–∫—Ç–∏–∫–∏ (—Å—Ç–∞–Ω–¥–∞—Ä—Ç –¥–æ C++17 –≤–∫–ª—é—á–∏—Ç–µ–ª—å–Ω–æ)

### –û–±—ä—è–≤–ª–µ–Ω–∏–µ —à–∞–±–ª–æ–Ω–æ–≤

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ typename –¥–ª—è —Ç–∏–ø–æ–≤—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
template<typename T>
class MyClass {};

// –ü–æ–Ω—è—Ç–Ω—ã–µ –∏–º–µ–Ω–∞ –¥–ª—è —à–∞–±–ª–æ–Ω–Ω—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
template<typename KeyType, typename ValueType>
class Dictionary {};

// –ü–∞—Ä–∞–º–µ—Ç—Ä—ã –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –¥–ª—è —É–¥–æ–±—Å—Ç–≤–∞
template<typename T, typename Allocator = std::allocator<T>>
class Container {};
```

**–ü–ª–æ—Ö–æ:**
```cpp
// class –º–µ–Ω–µ–µ –≤—ã—Ä–∞–∑–∏—Ç–µ–ª—å–Ω–æ –¥–ª—è —Ç–∏–ø–æ–≤—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
template<class T>
class MyClass {};

// –ù–µ–ø–æ–Ω—è—Ç–Ω—ã–µ –∏–º–µ–Ω–∞ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
template<typename A, typename B, typename C>
class SomeClass {};

// –°–ª–∏—à–∫–æ–º –º–Ω–æ–≥–æ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã—Ö –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤ –±–µ–∑ –∑–Ω–∞—á–µ–Ω–∏–π –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
template<typename T1, typename T2, typename T3, typename T4, typename T5>
class OverlyComplexClass {};
```

### –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –º–µ—Ç–æ–¥–æ–≤ —à–∞–±–ª–æ–Ω–Ω—ã—Ö –∫–ª–∞—Å—Å–æ–≤

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ú–µ—Ç–æ–¥—ã –≤ –∑–∞–≥–æ–ª–æ–≤–æ—á–Ω–æ–º —Ñ–∞–π–ª–µ (.h/.hpp)
template<typename T>
class Vector {
public:
    void push_back(const T& value) {
        // —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è –≤–Ω—É—Ç—Ä–∏ –∫–ª–∞—Å—Å–∞
    }
    
    // –ò–ª–∏ —Å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ–º –≤–Ω–µ –∫–ª–∞—Å—Å–∞ –≤ —Ç–æ–º –∂–µ —Ñ–∞–π–ª–µ
    T& at(size_t index);
};

template<typename T>
T& Vector<T>::at(size_t index) {
    return data_[index];
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –≤ .cpp —Ñ–∞–π–ª–µ –±–µ–∑ —è–≤–Ω–æ–π –∏–Ω—Å—Ç–∞–Ω—Ü–∏–∞—Ü–∏–∏
// vector.h
template<typename T>
class Vector {
public:
    void push_back(const T& value);
};

// vector.cpp - –æ—à–∏–±–∫–∞ –ª–∏–Ω–∫–æ–≤–∫–∏!
template<typename T>
void Vector<T>::push_back(const T& value) {
    // —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è
}
```

### –†–∞–±–æ—Ç–∞ —Å –∑–∞–≤–∏—Å–∏–º—ã–º–∏ –∏–º–µ–Ω–∞–º–∏

**–•–æ—Ä–æ—à–æ:**
```cpp
template<typename T>
class Derived : public Base<T> {
public:
    void method() {
        // –Ø–≤–Ω–æ —É–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ–µ –∏–º—è
        typename Base<T>::iterator it;
        this->base_method();
        Base<T>::static_method();
    }
};

// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ auto –¥–ª—è —Å–ª–æ–∂–Ω—ã—Ö —Ç–∏–ø–æ–≤
template<typename Container>
void process(const Container& container) {
    auto it = container.begin();  // –ø—Ä–æ—â–µ —á–µ–º typename Container::iterator
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
template<typename T>
class Derived : public Base<T> {
public:
    void method() {
        // –û—à–∏–±–∫–∞: –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –Ω–µ –∑–Ω–∞–µ—Ç —á—Ç–æ iterator - —ç—Ç–æ —Ç–∏–ø
        Base<T>::iterator it;  
        
        // –û—à–∏–±–∫–∞: –Ω–µ –Ω–∞–π–¥–µ—Ç base_method –≤ –∑–∞–≤–∏—Å–∏–º–æ–º –±–∞–∑–æ–≤–æ–º –∫–ª–∞—Å—Å–µ
        base_method();
    }
};
```

### –°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —à–∞–±–ª–æ–Ω–æ–≤

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ü–æ–ª–Ω–∞—è —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–ª–∞—Å—Å–∞
template<typename T>
class MyClass {
    // –æ–±—â–∞—è —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è
};

template<>
class MyClass<bool> {
    // —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –¥–ª—è bool
};

// –ü–µ—Ä–µ–≥—Ä—É–∑–∫–∞ —Ñ—É–Ω–∫—Ü–∏–π –≤–º–µ—Å—Ç–æ —á–∞—Å—Ç–∏—á–Ω–æ–π —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏
template<typename T>
void process(T value) {
    // –æ–±—â–∏–π —Å–ª—É—á–∞–π
}

template<typename T>
void process(std::vector<T> vec) {
    // —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –¥–ª—è –≤–µ–∫—Ç–æ—Ä–æ–≤
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –ß–∞—Å—Ç–∏—á–Ω–∞—è —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ—É–Ω–∫—Ü–∏–π –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è
template<typename T>
void process(T value) {}

template<typename T>
void process<std::vector<T>>(std::vector<T> value) {}  // –û—à–∏–±–∫–∞!

// –°–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤ –Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ–º –º–µ—Å—Ç–µ
namespace ns {
    template<typename T> class MyClass {};
}

template<>
class ns::MyClass<int> {};  // –î–æ–ª–∂–Ω–æ –±—ã—Ç—å –≤–Ω—É—Ç—Ä–∏ namespace ns
```

### –û–≥—Ä–∞–Ω–∏—á–µ–Ω–∏—è —Ç–∏–ø–æ–≤ –∏ SFINAE

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ type_traits –¥–ª—è –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏–π
template<typename T>
typename std::enable_if<std::is_arithmetic<T>::value, T>::type
add(T a, T b) {
    return a + b;
}

// static_assert –¥–ª—è –ø–æ–Ω—è—Ç–Ω—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π –æ–± –æ—à–∏–±–∫–∞—Ö
template<typename T>
void process(T value) {
    static_assert(std::is_copy_constructible<T>::value, 
                  "T must be copy constructible");
}

// –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ü–µ–ø—Ü–∏–π —á–µ—Ä–µ–∑ SFINAE
template<typename T>
auto get_size(const T& container) 
    -> decltype(container.size()) {
    return container.size();
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –û—Ç—Å—É—Ç—Å—Ç–≤–∏–µ –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏–π - –Ω–µ—è—Å–Ω—ã–µ –æ—à–∏–±–∫–∏ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏
template<typename T>
T add(T a, T b) {
    return a + b;  // –ß—Ç–æ –µ—Å–ª–∏ T –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç operator+?
}

// –ü–æ–ø—ã—Ç–∫–∞ —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –≤–º–µ—Å—Ç–æ SFINAE
template<typename T>
void process(T value) {
    // —Å–ª–æ–∂–Ω–∞—è —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è –¥–ª—è –≤—Å–µ—Ö —Ç–∏–ø–æ–≤
}

// –ú–Ω–æ–∂–µ—Å—Ç–≤–æ —Å–ø–µ—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–π –≤–º–µ—Å—Ç–æ –æ–¥–Ω–æ–≥–æ SFINAE —Ä–µ—à–µ–Ω–∏—è
template<>
void process<int>(int value) {}
template<>
void process<double>(double value) {}
// –∏ —Ç–∞–∫ –¥–∞–ª–µ–µ...
```

### –í–∞—Ä–∏–∞—Ç–∏–≤–Ω—ã–µ —à–∞–±–ª–æ–Ω—ã (C++11+)

**–•–æ—Ä–æ—à–æ:**
```cpp
// –†–µ–∫—É—Ä—Å–∏–≤–Ω–∞—è —Ä–∞—Å–ø–∞–∫–æ–≤–∫–∞ parameter pack
template<typename T>
void print(T&& value) {
    std::cout << value << std::endl;
}

template<typename T, typename... Args>
void print(T&& first, Args&&... args) {
    std::cout << first << " ";
    print(args...);
}

// Perfect forwarding
template<typename T, typename... Args>
std::unique_ptr<T> make_unique(Args&&... args) {
    return std::unique_ptr<T>(new T(std::forward<Args>(args)...));
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –ó–∞–±—ã–ª–∏ perfect forwarding
template<typename T, typename... Args>
std::unique_ptr<T> make_unique(Args... args) {  // –ø–æ—Ç–µ—Ä—è —Å—Å—ã–ª–æ–∫
    return std::unique_ptr<T>(new T(args...));  // –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –≤–º–µ—Å—Ç–æ –ø–µ—Ä–µ–º–µ—â–µ–Ω–∏—è
}

// –ù–µ—ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–∞—è —Ä–µ–∫—É—Ä—Å–∏—è –±–µ–∑ –±–∞–∑–æ–≤–æ–≥–æ —Å–ª—É—á–∞—è
template<typename... Args>
void print(Args... args) {
    // –ö–∞–∫ –æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Ä–µ–∫—É—Ä—Å–∏—é?
}
```

### –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ auto –∏ –≤—ã–≤–µ–¥–µ–Ω–∏–µ —Ç–∏–ø–æ–≤

**–•–æ—Ä–æ—à–æ:**
```cpp
// auto –¥–ª—è —Å–ª–æ–∂–Ω—ã—Ö —Ç–∏–ø–æ–≤
template<typename Container>
void process(const Container& container) {
    auto it = container.begin();
    auto value = *it;
}

// Trailing return type –¥–ª—è —Å–ª–æ–∂–Ω—ã—Ö —Å–ª—É—á–∞–µ–≤
template<typename T, typename U>
auto multiply(T a, U b) -> decltype(a * b) {
    return a * b;
}

// decltype –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Ç–∏–ø–∞ –≤—ã—Ä–∞–∂–µ–Ω–∏—è
template<typename T>
void func(T&& param) {
    using ValueType = typename std::decay<T>::type;
    ValueType copy = std::forward<T>(param);
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –ò–∑–±—ã—Ç–æ—á–Ω–æ–µ —É–∫–∞–∑–∞–Ω–∏–µ —Ç–∏–ø–æ–≤
template<typename Container>
void process(const Container& container) {
    typename Container::const_iterator it = container.begin();
    typename Container::value_type value = *it;
}

// –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ decltype
template<typename T>
auto func(T param) -> decltype(param) {  // –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –ø–æ –∑–Ω–∞—á–µ–Ω–∏—é –¥–∞–∂–µ –¥–ª—è —Å—Å—ã–ª–æ–∫
    return param;
}
```

### –ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –∏ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ constexpr –¥–ª—è compile-time –≤—ã—á–∏—Å–ª–µ–Ω–∏–π
template<int N>
constexpr int factorial() {
    return N <= 1 ? 1 : N * factorial<N-1>();
}

// –ò–∑–±–µ–≥–∞–π—Ç–µ –Ω–µ–Ω—É–∂–Ω—ã—Ö –∫–æ–ø–∏–π
template<typename T>
void process(const T& value) {  // const reference
    // –æ–±—Ä–∞–±–æ—Ç–∫–∞
}

template<typename T>
void modify(T& value) {  // non-const reference
    // –∏–∑–º–µ–Ω–µ–Ω–∏–µ
}

// Move semantics –¥–ª—è –≤—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–±—ä–µ–∫—Ç–æ–≤
template<typename T>
class Container {
public:
    void push_back(const T& value) { /* copy */ }
    void push_back(T&& value) { /* move */ }
};
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –ù–µ–Ω—É–∂–Ω—ã–µ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
template<typename T>
void process(T value) {  // –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –ø—Ä–∏ –∫–∞–∂–¥–æ–º –≤—ã–∑–æ–≤–µ
    // –æ–±—Ä–∞–±–æ—Ç–∫–∞
}

// –ò–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ move semantics
template<typename T>
class Container {
public:
    void push_back(const T& value) { 
        data_.push_back(value);  // –≤—Å–µ–≥–¥–∞ –∫–æ–ø–∏—è, –¥–∞–∂–µ –¥–ª—è –≤—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–±—ä–µ–∫—Ç–æ–≤
    }
};

// Runtime –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –≤–º–µ—Å—Ç–æ compile-time
template<int N>
int factorial() {  // –Ω–µ constexpr
    int result = 1;
    for (int i = 2; i <= N; ++i) {
        result *= i;
    }
    return result;
}
```

### –ß–∏—Ç–∞–µ–º–æ—Å—Ç—å –∏ –ø–æ–¥–¥–µ—Ä–∂–∫–∞ –∫–æ–¥–∞

**–•–æ—Ä–æ—à–æ:**
```cpp
// –ü–æ–Ω—è—Ç–Ω—ã–µ –ø—Å–µ–≤–¥–æ–Ω–∏–º—ã —Ç–∏–ø–æ–≤
template<typename Key, typename Value>
using Map = std::unordered_map<Key, Value>;

template<typename T>
using Ptr = std::unique_ptr<T>;

// –î–æ–∫—É–º–µ–Ω—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –æ–≥—Ä–∞–Ω–∏—á–µ–Ω–∏–π —Ç–∏–ø–æ–≤
template<typename Iterator>
void sort(Iterator begin, Iterator end) {
    static_assert(std::is_same_v<
        typename std::iterator_traits<Iterator>::iterator_category,
        std::random_access_iterator_tag
    >, "sort requires random access iterators");
}

// –†–∞–∑—É–º–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ SFINAE
template<typename T>
auto to_string(const T& value) 
    -> std::enable_if_t<std::is_arithmetic_v<T>, std::string> {
    return std::to_string(value);
}
```

**–ü–ª–æ—Ö–æ:**
```cpp
// –°–ª–æ–∂–Ω—ã–µ —à–∞–±–ª–æ–Ω–Ω—ã–µ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –±–µ–∑ –æ–±—ä—è—Å–Ω–µ–Ω–∏–π
template<typename T, typename = std::enable_if_t<
    std::is_arithmetic_v<T> && !std::is_same_v<T, bool> && 
    sizeof(T) >= 4 && std::is_signed_v<T>>>
void mysterious_function(T value) {
    // —á—Ç–æ —ç—Ç–∞ —Ñ—É–Ω–∫—Ü–∏—è –¥–µ–ª–∞–µ—Ç?
}

// –ó–ª–æ—É–ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ —à–∞–±–ª–æ–Ω–∞–º–∏
template<typename T>
T add_one(T value) {  // —à–∞–±–ª–æ–Ω –Ω–µ –Ω—É–∂–µ–Ω –¥–ª—è —Ç–∞–∫–æ–π –ø—Ä–æ—Å—Ç–æ–π —Ñ—É–Ω–∫—Ü–∏–∏
    return value + 1;
}

// –û—Ç—Å—É—Ç—Å—Ç–≤–∏–µ –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏–∏ —Å–ª–æ–∂–Ω—ã—Ö template metaprogramming –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–π
template<bool B, typename T = void>
using enable_if_t = typename std::enable_if<B, T>::type;  // –±–µ–∑ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤
```

