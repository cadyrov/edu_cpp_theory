class Box {
    ... 
    // –∫–æ—Ç–∞ –∏–∑ –∫–æ—Ä–æ–±–∫–∏ –º–æ–∂–Ω–æ –≤—ã—Ç–∞—â–∏—Ç—å
    SchrodingerCat GetCat() {
        is_empty_ = true;
        return box.cat;
    }
    
    bool HasCat() {
        return !is_empty_;
    }
    ...
}

int main() {
    // –ø–æ–∫–∞ –≤ –∫–æ—Ä–æ–±–∫—É –Ω–µ –∑–∞–≥–ª—è–Ω–µ—à—å,
    // –Ω–µ —É–∑–Ω–∞–µ—à—å, –µ—Å—Ç—å –ª–∏ —Ç–∞–º –∫–æ—Ç
    Box black_box(); // (1)
    if (black_box.HasCat()) { // (2)
        SchrodingerCat fluffy = black_box.GetCat(); // (3)
    }
}
–ö–æ–≥–¥–∞ –≤—ã–∑—ã–≤–∞–µ—Ç—Å—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ—Ä–æ–±–∫–∏, –ø–æ—è–≤–ª—è–µ—Ç—Å—è –≤—Ä–µ–º–µ–Ω–Ω—ã–π –æ–±—ä–µ–∫—Ç. –ü–æ—Ç–æ–º –æ–Ω –∫–æ–ø–∏—Ä—É–µ—Ç—Å—è –≤ —Å–æ–∑–¥–∞–≤–∞–µ–º—ã–π –æ–±—ä–µ–∫—Ç.
–ß—Ç–æ–±—ã –æ–±—Ä–∞—Ç–∏—Ç—å—Å—è –∫ –º–µ—Ç–æ–¥—É HasCat, –∫–æ—Ä–æ–±–∫—É —Å–Ω–∞—á–∞–ª–∞ –Ω–∞–¥–æ —Å–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å, –∏—Å–ø–æ–ª—å–∑—É—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è. –¢–∞–∫ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –ø—Ä–∏ –æ–±—Ä–∞—â–µ–Ω–∏–∏ –∫ –ª—é–±—ã–º –º–µ—Ç–æ–¥–∞–º –∫–ª–∞—Å—Å–∞.
–ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç
–ö–æ—Ç fluffy –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ—Ç—Å—è –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ –≤—Ä–µ–º–µ–Ω–Ω—ã–º –æ–±—ä–µ–∫—Ç–æ–º. –ö–∞–∂–µ—Ç—Å—è, –∑–¥–µ—Å—å –º–æ–∂–Ω–æ –∏–∑–±–µ–∂–∞—Ç—å –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è.
–ê–±—Å–æ–ª—é—Ç–Ω–æ –≤–µ—Ä–Ω–æ! –≠—Ç–æ –≤—Ç–æ—Ä–æ–π —Å–ª—É—á–∞–π, –∫–æ–≥–¥–∞ copy elision –ø–æ–∑–≤–æ–ª—è–µ—Ç –∏–∑–±–µ–∂–∞—Ç—å –Ω–µ–Ω—É–∂–Ω–æ–≥–æ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è.
–†–µ–∑—é–º–∏—Ä—É–µ–º. Copy elision ‚Äî —ç—Ç–æ –≤–∏–¥ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏, –ø–æ–∑–≤–æ–ª—è—é—â–∏–π –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä—É –ø—Ä–æ–ø—É—Å—Ç–∏—Ç—å –≤—ã–∑–æ–≤ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è:
–ø—Ä–∏ –≤–æ–∑–≤—Ä–∞—Ç–µ –∏–∑ —Ñ—É–Ω–∫—Ü–∏–∏ –≤—Ä–µ–º–µ–Ω–Ω–æ–≥–æ –æ–±—ä–µ–∫—Ç–∞;
