#include <iostream>
#include <string>
#include <vector>
using namespace std;
// –©—É–ø–∞–ª—å—Ü–µ
class Tentacle {
public:
    explicit Tentacle(int id): id_(id) {}
    int GetId() const {
        return id_;
    }
private:
    int id_ = 0;
};
// –û—Å—å–º–∏–Ω–æ–≥
class Octopus {
public:
    Octopus() {
        for (int i = 1; i <= 8; ++i) {
            tentacles_.push_back(new Tentacle(i));
        }
    }
private:
    vector<Tentacle*> tentacles_;
};
int main() {
    Octopus octopus;
}
