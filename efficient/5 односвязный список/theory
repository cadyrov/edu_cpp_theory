    {
        Octopus octopus1(3);
        octopus1.GetTentacle(1).LinkTo(octopus.GetTentacle(2));
        Octopus octopus2;
        octopus2 = octopus1;
        // –≠—Ç–æ—Ç assert –≤—ã—Å—Ç—Ä–µ–ª–∏—Ç, —Ç–∞–∫ –∫–∞–∫ –æ–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –ø—Ä–∏—Å–≤–æ–∏—Ç –º–∞—Å—Å–∏–≤ 
        // —É–∫–∞–∑–∞—Ç–µ–ª–µ–π –Ω–∞ —â—É–ø–∞–ª—å—Ü–∞ –ø–µ—Ä–≤–æ–≥–æ –æ—Å—å–º–∏–Ω–æ–≥–∞ –≤—Ç–æ—Ä–æ–º—É, –∏ –æ—Å—å–º–∏–Ω–æ–≥–∏ –±—É–¥—É—Ç 
        // –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –æ–¥–∏–Ω –∏ —Ç–æ—Ç –∂–µ –Ω–∞–±–æ—Ä —â—É–ø–∞–ª–µ—Ü.
        assert(&octopus2.GetTentacle(1) != &octopus1.GetTentacle(1));
        assert(octopus2.GetTentacle(1).GetLinkedTentacle() == &octopus1.GetTentacle(2));
        // –ü–æ—Å–ª–µ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –æ–±–∞ –æ—Å—å–º–∏–Ω–æ–≥–∞ –±—É–¥—É—Ç —Å—Å—ã–ª–∞—Ç—å—Å—è –Ω–∞ –æ–¥–Ω–∏ –∏ —Ç–µ –∂–µ —â—É–ø–∞–ª—å—Ü–∞
        // –î–µ—Å—Ç—Ä—É–∫—Ç–æ—Ä octopus2 —É–¥–∞–ª–∏—Ç —â—É–ø–∞–ª—å—Ü–∞, –Ω–∞ –∫–æ—Ç–æ—Ä—ã–µ —Å—Å—ã–ª–∞–µ—Ç—Å—è octopus1,
        // –∏ –≤—Å–µ —É–∫–∞–∑–∞—Ç–µ–ª–∏ octopus1 —Å—Ç–∞–Ω—É—Ç –Ω–µ–≤–∞–ª–∏–¥–Ω—ã–º–∏.

        // –î–µ—Å—Ç—Ä—É–∫—Ç–æ—Ä octopus1 –≤—ã–ø–æ–ª–Ω–∏—Ç —É–¥–∞–ª–µ–Ω–∏–µ —â—É–ø–∞–ª—å—Ü–µ–≤ —Å –Ω–µ–≤–∞–ª–∏–¥–Ω—ã–º–∏ —É–∫–∞–∑–∞—Ç–µ–ª—è–º–∏,
        // —á—Ç–æ –ø—Ä–∏–≤–µ–¥—ë—Ç –∫ –Ω–µ–æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–º—É –ø–æ–≤–µ–¥–µ–Ω–∏—é.
    }
    cout << "OK"s << endl;
}
–í —Ä–µ–∑—É–ª—å—Ç–∞—Ç–µ –æ–±–∞ –æ—Å—å–º–∏–Ω–æ–≥–∞ –±—É–¥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –æ–¥–Ω–∏ –∏ —Ç–µ –∂–µ –æ–±—ä–µ–∫—Ç—ã —â—É–ø–∞–ª–µ—Ü –≤ –¥–∏–Ω–∞–º–∏—á–µ—Å–∫–æ–π –ø–∞–º—è—Ç–∏.

–ü—Ä–æ–≥—Ä–∞–º–º–∞ –≤–Ω–æ–≤—å –ø–æ–≤–µ–¥–µ—Ç —Å–µ–±—è –Ω–µ–ø—Ä–µ–¥—Å–∫–∞–∑—É–µ–º–æ.
–ö–æ–≥–¥–∞ —É –∫–ª–∞—Å—Å–∞ —Å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–º –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–æ–º –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –Ω–µ—è–≤–Ω–æ —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –æ–ø–µ—Ä–∞—Ü–∏—è –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è, –∫–æ–º–ø–∏–ª—è—Ç–æ—Ä –º–æ–∂–µ—Ç –æ–± —ç—Ç–æ–º –ø—Ä–µ–¥—É–ø—Ä–µ–¥–∏—Ç—å:
