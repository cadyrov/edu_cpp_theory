#include <iostream>
#include <string>
#include <vector>

using namespace std;

// –©—É–ø–∞–ª—å—Ü–µ
class Tentacle {
public:
    explicit Tentacle(int id)
        : id_(id) {
    }

    int GetId() const {
        return id_;
    }

private:
    int id_ = 0;
};

// –û—Å—å–º–∏–Ω–æ–≥
class Octopus {
public:
    Octopus() {
        // <--- –¢–µ–ª–æ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–æ
        Tentacle* t = nullptr;
        try {
            for (int i = 1; i <= 8; ++i) {
                t = new Tentacle(i);
                tentacles_.push_back(t);
                t = nullptr;
            }
        } catch (const bad_alloc&) {
            Cleanup();
            delete t;
        }
        // --->
    }

    //<--- –î–æ–±–∞–≤–ª–µ–Ω –¥–µ—Å—Ç—Ä—É–∫—Ç–æ—Ä
    ~Octopus() {
        Cleanup();
    }
    // --->

private:
    // <--- –î–æ–±–∞–≤–ª–µ–Ω –º–µ—Ç–æ–¥ Cleanup
    void Cleanup() {
        for (Tentacle* t : tentacles_) {
            delete t;
        }
        tentacles_.clear();
    }
    // --->

    vector<Tentacle*> tentacles_;
};

int main() {
    Octopus octopus;
}
–ï—Å–ª–∏ –≤ –ø—Ä–æ—Ü–µ—Å—Å–µ –∫–æ–Ω—Å—Ç—Ä—É–∏—Ä–æ–≤–∞–Ω–∏—è —â—É–ø–∞–ª–µ—Ü –±—É–¥–µ—Ç –≤—ã–±—Ä–æ—à–µ–Ω–æ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ, –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ catch –∏—Ö –≤—Å–µ —É–¥–∞–ª–∏—Ç. –¢–∞–∫ –∫–∞–∫ –ø–æ–π–º–∞–Ω–Ω–æ–µ –≤ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–µ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ –Ω–µ –±—É–¥–µ—Ç –≤—ã–±—Ä–æ—à–µ–Ω–æ –¥–∞–ª—å—à–µ, –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –∑–∞–≤–µ—Ä—à–∏—Ç—Å—è —É—Å–ø–µ—à–Ω–æ, –∞ –∫–ª–∏–µ–Ω—Ç—É –¥–æ—Å—Ç–∞–Ω–µ—Ç—Å—è –æ—Å—å–º–∏–Ω–æ–≥ –±–µ–∑ –∫–æ–Ω–µ—á–Ω–æ—Å—Ç–µ–π.
