int main() {
    size_t n = 0;
    try {
        for (; n != 300; ++n) {
            string* p = new string(100'000'000, ' ');
            // –£—Ç–µ—á–∫–∞ –ø–∞–º—è—Ç–∏ –∏—Å–ø—Ä–∞–≤–ª–µ–Ω–∞ - –æ–±—ä–µ–∫—Ç –≤ –∫—É—á–µ —Å–≤–æ–µ–≤—Ä–µ–º–µ–Ω–Ω–æ —É–¥–∞–ª—è–µ—Ç—Å—è
            delete p;
        }
        cout << "Program completed successfully"s;
    } catch (const bad_alloc&) {
        // –°—é–¥–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∞, —Å–∫–æ—Ä–µ–µ –≤—Å–µ–≥–æ, –Ω–µ –ø–æ–ø–∞–¥—ë—Ç,
        // –µ—Å–ª–∏ –æ–±—ä–µ–º —Å–≤–æ–±–æ–¥–Ω–æ–π –ø–∞–º—è—Ç–∏ –≤ –∫—É—á–µ –±—É–¥–µ—Ç –±–æ–ª—å—à–µ 100 –º–µ–≥–∞–±–∞–π—Ç
