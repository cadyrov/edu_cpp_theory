#include <iostream>
#include <string>
using namespace std;

int main() {
    int value = 1;
    // –°–Ω–∞—á–∞–ª–∞ value_ptr —Å—Å—ã–ª–∞–µ—Ç—Å—è –Ω–∞ value
    int* value_ptr = &value;
    cout << "&value: "s << &value << endl;
    cout << "value_ptr: "s << value_ptr << endl;
    assert(*value_ptr == 1);
    int another_value = 2;
    // –ó–∞—Ç–µ–º —Å—Å—ã–ª–∞–µ—Ç—Å—è –Ω–∞ another_value
    value_ptr = &another_value;
    cout << "&another_value: "s << &another_value << endl;
    cout << "value_ptr: "s << value_ptr << endl;
    assert(*value_ptr == 2);
}
